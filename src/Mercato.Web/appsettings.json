{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=MercatoDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Session": {
    "InactivityTimeoutMinutes": 60
  },
  "Analytics": {
    "Enabled": true,
    "RetentionDays": 90
  },
  "Authentication": {
    "Google": {
      "ClientId": "",
      "ClientSecret": ""
    },
    "Facebook": {
      "AppId": "",
      "AppSecret": ""
    }
  },
  "Email": {
    "SenderEmail": "noreply@mercato.com",
    "SenderName": "Mercato Marketplace",
    "OrderConfirmationSubjectTemplate": "Order Confirmation - {0}",
    "EstimatedDeliveryDays": "5-7"
  },
  "SellerEmail": {
    "SenderEmail": "noreply@mercato.com",
    "SenderName": "Mercato Marketplace",
    "BaseUrl": "https://mercato.com"
  },
  "Payments": {
    "EnableCreditCard": true,
    "EnablePayPal": true,
    "EnableBankTransfer": true,
    "EnableBlik": true
  },
  "PushNotifications": {
    "VapidPublicKey": "",
    "VapidPrivateKey": "",
    "VapidSubject": "mailto:admin@mercato.com"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Mercato.Web.Middleware": "Information",
      "Mercato.Web.Filters": "Debug"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
      }
    }
  },
  "AllowedHosts": "*"
}
