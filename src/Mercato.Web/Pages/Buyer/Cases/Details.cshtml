@page "{id:guid}"
@model Mercato.Web.Pages.Buyer.Cases.DetailsModel
@using Mercato.Orders.Application.Queries
@using Mercato.Orders.Domain.Entities
@using Mercato.Payments.Domain.Entities
@{
    ViewData["Title"] = Model.Case != null ? $"Case #{DetailsModel.FormatCaseId(Model.Case.Id)}" : "Case Details";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Buyer/Index">Buyer Portal</a></li>
            <li class="breadcrumb-item"><a asp-page="Index">Returns & Complaints</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(Model.Case != null ? $"Case #{DetailsModel.FormatCaseId(Model.Case.Id)}" : "Case Details")</li>
        </ol>
    </nav>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    else if (Model.Case != null)
    {
        var caseItem = Model.Case;
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-1">Case #@DetailsModel.FormatCaseId(caseItem.Id)</h1>
                <p class="text-muted mb-0">Submitted on @caseItem.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
            </div>
            <span class="badge fs-6 @DetailsModel.GetStatusBadgeClass(caseItem.Status)">
                @DetailsModel.GetStatusDisplayText(caseItem.Status)
            </span>
        </div>

        <div class="row">
            @* Left Column - Case Details *@
            <div class="col-lg-8">
                @* Original Request Data *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>Original Request</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong>Case Type:</strong>
                            <span class="badge bg-light text-dark border ms-2">
                                <i class="bi bi-tag me-1"></i>@DetailsModel.GetCaseType()
                            </span>
                        </div>
                        <div class="mb-3">
                            <strong>Reason for Return:</strong>
                            <p class="mt-2 mb-0 bg-light p-3 rounded">@caseItem.Reason</p>
                        </div>
                        @if (caseItem.SellerSubOrder != null)
                        {
                            <hr>
                            <div class="mb-2">
                                <strong>Sub-order:</strong>
                                <span class="font-monospace ms-2">@caseItem.SellerSubOrder.SubOrderNumber</span>
                            </div>
                            @if (caseItem.SellerSubOrder.Order != null)
                            {
                                <div class="mb-2">
                                    <strong>Order Reference:</strong>
                                    <a asp-page="/Orders/Details" asp-route-id="@caseItem.SellerSubOrder.Order.Id" class="ms-2">
                                        @caseItem.SellerSubOrder.Order.OrderNumber
                                    </a>
                                </div>
                            }
                            <div class="mb-0">
                                <strong>Seller:</strong>
                                <span class="ms-2"><i class="bi bi-shop me-1"></i>@caseItem.SellerSubOrder.StoreName</span>
                            </div>
                        }
                    </div>
                </div>

                @* Items in Sub-order *@
                @if (caseItem.SellerSubOrder?.Items?.Any() == true)
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Items in Return Request</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Product</th>
                                            <th class="text-center">Quantity</th>
                                            <th class="text-end">Unit Price</th>
                                            <th class="text-end">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in caseItem.SellerSubOrder.Items)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@item.ProductTitle</strong>
                                                </td>
                                                <td class="text-center align-middle">@item.Quantity</td>
                                                <td class="text-end align-middle">@item.UnitPrice.ToString("C")</td>
                                                <td class="text-end align-middle">@item.TotalPrice.ToString("C")</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot class="table-light">
                                        <tr>
                                            <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                            <td class="text-end"><strong class="text-primary">@caseItem.SellerSubOrder.TotalAmount.ToString("C")</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                @* Resolution Section *@
                @if (caseItem.Status == ReturnStatus.Approved || 
                     caseItem.Status == ReturnStatus.Rejected || 
                     caseItem.Status == ReturnStatus.Completed)
                {
                    <div class="card mb-4">
                        <div class="card-header @(caseItem.Status == ReturnStatus.Rejected || caseItem.ResolutionType == CaseResolutionType.NoRefund ? "bg-danger bg-opacity-10" : caseItem.Status == ReturnStatus.Approved ? "bg-success bg-opacity-10" : "bg-dark bg-opacity-10")">
                            <h5 class="mb-0">
                                @if (caseItem.Status == ReturnStatus.Approved || (caseItem.Status == ReturnStatus.Completed && caseItem.ResolutionType != CaseResolutionType.NoRefund))
                                {
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                }
                                else if (caseItem.Status == ReturnStatus.Rejected || caseItem.ResolutionType == CaseResolutionType.NoRefund)
                                {
                                    <i class="bi bi-x-circle text-danger me-2"></i>
                                }
                                else
                                {
                                    <i class="bi bi-check2-all me-2"></i>
                                }
                                Resolution
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (caseItem.ResolutionType.HasValue)
                            {
                                <p class="mb-3">
                                    <strong>Resolution Type:</strong>
                                    <span class="badge ms-2 @DetailsModel.GetResolutionTypeBadgeClass(caseItem.ResolutionType.Value)">
                                        @DetailsModel.GetResolutionTypeDisplayText(caseItem.ResolutionType.Value)
                                    </span>
                                </p>
                            }
                            else
                            {
                                <p class="mb-3">
                                    <strong>Decision:</strong>
                                    <span class="badge ms-2 @DetailsModel.GetStatusBadgeClass(caseItem.Status)">
                                        @DetailsModel.GetStatusDisplayText(caseItem.Status)
                                    </span>
                                </p>
                            }
                            <p class="mb-0">@DetailsModel.GetResolutionSummaryForType(caseItem.Status, caseItem.ResolutionType)</p>
                            @if (!string.IsNullOrEmpty(caseItem.ResolutionReason))
                            {
                                <hr>
                                <p class="mb-0">
                                    <strong>Seller's Resolution Reason:</strong>
                                </p>
                                <p class="mt-2 mb-0 bg-light p-3 rounded">@caseItem.ResolutionReason</p>
                            }
                            else if (!string.IsNullOrEmpty(caseItem.SellerNotes))
                            {
                                <hr>
                                <p class="mb-0">
                                    <strong>Seller's Notes:</strong>
                                </p>
                                <p class="mt-2 mb-0 bg-light p-3 rounded">@caseItem.SellerNotes</p>
                            }
                            @if (caseItem.RefundAmount.HasValue)
                            {
                                <hr>
                                <p class="mb-0">
                                    <strong>Refund Amount:</strong>
                                    <span class="text-success ms-2">@caseItem.RefundAmount.Value.ToString("C")</span>
                                </p>
                            }
                        </div>
                    </div>
                }

                @* Refund Information *@
                @if (Model.Refunds.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-cash-coin me-2"></i>Refund Information</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.TotalRefunded > 0)
                            {
                                <div class="alert alert-success mb-3">
                                    <i class="bi bi-check-circle-fill me-2"></i>
                                    <strong>Total Refunded:</strong> @Model.TotalRefunded.ToString("C")
                                </div>
                            }
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Refund ID</th>
                                            <th>Amount</th>
                                            <th>Status</th>
                                            <th>Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var refund in Model.Refunds)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="font-monospace">@DetailsModel.FormatRefundId(refund.Id)</span>
                                                </td>
                                                <td>@refund.Amount.ToString("C")</td>
                                                <td>
                                                    <span class="badge @DetailsModel.GetRefundStatusBadgeClass(refund.Status)">
                                                        @DetailsModel.GetRefundStatusDisplayText(refund.Status)
                                                    </span>
                                                </td>
                                                <td>@refund.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                @* Messaging Thread *@
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-chat-dots me-2"></i>Messages</h5>
                        <span class="badge bg-secondary">@Model.Messages.Count message(s)</span>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @* Messages List *@
                        <div class="messaging-thread mb-4" style="max-height: 400px; overflow-y: auto;">
                            @if (Model.Messages.Count == 0)
                            {
                                <div class="text-center text-muted py-4">
                                    <i class="bi bi-chat-square-text fs-1 d-block mb-2"></i>
                                    <p class="mb-0">No messages yet. Start the conversation by sending a message below.</p>
                                </div>
                            }
                            else
                            {
                                @foreach (var message in Model.Messages)
                                {
                                    var isCurrentUser = message.SenderRole == "Buyer";
                                    var alignClass = isCurrentUser ? "justify-content-end" : "justify-content-start";
                                    var bgClass = message.SenderRole switch
                                    {
                                        "Buyer" => "bg-primary text-white",
                                        "Seller" => "bg-light border",
                                        "Admin" => "bg-warning text-dark",
                                        _ => "bg-secondary text-white"
                                    };
                                    var roleIcon = message.SenderRole switch
                                    {
                                        "Buyer" => "bi-person",
                                        "Seller" => "bi-shop",
                                        "Admin" => "bi-shield-check",
                                        _ => "bi-person"
                                    };
                                    
                                    <div class="d-flex @alignClass mb-3">
                                        <div class="message-bubble @bgClass rounded-3 p-3" style="max-width: 75%;">
                                            <div class="d-flex align-items-center mb-1">
                                                <i class="bi @roleIcon me-1"></i>
                                                <small class="fw-bold">@message.SenderRole</small>
                                            </div>
                                            <p class="mb-1">@message.Content</p>
                                            <small class="@(isCurrentUser ? "text-white-50" : "text-muted")">
                                                @message.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                                            </small>
                                        </div>
                                    </div>
                                }
                            }
                        </div>

                        @* New Message Form *@
                        @if (caseItem.Status != ReturnStatus.Completed && caseItem.Status != ReturnStatus.Rejected)
                        {
                            <form method="post" asp-route-id="@caseItem.Id">
                                <div class="mb-3">
                                    <label for="NewMessageContent" class="form-label">Send a Message</label>
                                    <textarea class="form-control" id="NewMessageContent" name="NewMessageContent" 
                                              rows="3" maxlength="2000" placeholder="Type your message here..."
                                              asp-for="NewMessageContent"></textarea>
                                    <span asp-validation-for="NewMessageContent" class="text-danger"></span>
                                    <small class="text-muted">Maximum 2000 characters</small>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-send me-1"></i>Send Message
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-info-circle me-2"></i>
                                This case has been @(caseItem.Status == ReturnStatus.Completed ? "resolved" : "closed"). No more messages can be sent.
                            </div>
                        }
                    </div>
                </div>

                @* Case Timeline / Messaging Thread Placeholder *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Case Timeline</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="d-flex align-items-start mb-3">
                                <span class="badge bg-success rounded-circle p-2 me-3"><i class="bi bi-check"></i></span>
                                <div>
                                    <strong>Case Submitted</strong>
                                    <br><small class="text-muted">@caseItem.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                                </div>
                            </li>
                            @if (caseItem.Status == ReturnStatus.UnderReview || 
                                 caseItem.Status == ReturnStatus.Approved || 
                                 caseItem.Status == ReturnStatus.Rejected || 
                                 caseItem.Status == ReturnStatus.Completed)
                            {
                                <li class="d-flex align-items-start mb-3">
                                    <span class="badge bg-success rounded-circle p-2 me-3"><i class="bi bi-check"></i></span>
                                    <div>
                                        <strong>Under Seller Review</strong>
                                        <br><small class="text-muted">The seller has reviewed your request</small>
                                    </div>
                                </li>
                            }
                            @if (caseItem.Status == ReturnStatus.Approved || caseItem.Status == ReturnStatus.Completed)
                            {
                                <li class="d-flex align-items-start mb-3">
                                    <span class="badge bg-success rounded-circle p-2 me-3"><i class="bi bi-check"></i></span>
                                    <div>
                                        <strong>Request Approved</strong>
                                        <br><small class="text-muted">Your return request was approved</small>
                                    </div>
                                </li>
                            }
                            @if (caseItem.Status == ReturnStatus.Rejected)
                            {
                                <li class="d-flex align-items-start mb-3">
                                    <span class="badge bg-danger rounded-circle p-2 me-3"><i class="bi bi-x"></i></span>
                                    <div>
                                        <strong>Request Declined</strong>
                                        <br><small class="text-muted">Your return request was declined</small>
                                    </div>
                                </li>
                            }
                            @if (caseItem.Status == ReturnStatus.Completed)
                            {
                                <li class="d-flex align-items-start mb-3">
                                    <span class="badge bg-dark rounded-circle p-2 me-3"><i class="bi bi-check2-all"></i></span>
                                    <div>
                                        <strong>Case Resolved</strong>
                                        <br><small class="text-muted">@caseItem.LastUpdatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                                    </div>
                                </li>
                            }
                            @if (caseItem.Status == ReturnStatus.Requested)
                            {
                                <li class="d-flex align-items-start mb-3">
                                    <span class="badge bg-secondary rounded-circle p-2 me-3"><i class="bi bi-hourglass"></i></span>
                                    <div>
                                        <strong class="text-muted">Awaiting Seller Review</strong>
                                        <br><small class="text-muted">The seller will review your request shortly</small>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            @* Right Column - Summary & Actions *@
            <div class="col-lg-4">
                @* Case Summary *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Case Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Case ID:</span>
                            <span class="font-monospace">@DetailsModel.FormatCaseId(caseItem.Id)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Type:</span>
                            <span>@DetailsModel.GetCaseType()</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Status:</span>
                            <span class="badge @DetailsModel.GetStatusBadgeClass(caseItem.Status)">
                                @DetailsModel.GetStatusDisplayText(caseItem.Status)
                            </span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Submitted:</span>
                            <span>@caseItem.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-0">
                            <span class="text-muted">Last Updated:</span>
                            <span>@caseItem.LastUpdatedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                        @if (caseItem.SellerSubOrder != null)
                        {
                            <hr>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Seller:</span>
                                <span>@caseItem.SellerSubOrder.StoreName</span>
                            </div>
                            <div class="d-flex justify-content-between mb-0">
                                <span class="text-muted">Amount:</span>
                                <span class="text-primary fw-bold">@caseItem.SellerSubOrder.TotalAmount.ToString("C")</span>
                            </div>
                        }
                    </div>
                </div>

                @* Related Order Card *@
                @if (caseItem.SellerSubOrder?.Order != null)
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Related Order</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-2">
                                <strong>@caseItem.SellerSubOrder.Order.OrderNumber</strong>
                            </div>
                            <small class="text-muted">
                                Placed on @caseItem.SellerSubOrder.Order.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                            <div class="mt-3">
                                <a asp-page="/Orders/Details" asp-route-id="@caseItem.SellerSubOrder.Order.Id" class="btn btn-outline-primary btn-sm w-100">
                                    <i class="bi bi-eye me-1"></i>View Order
                                </a>
                            </div>
                        </div>
                    </div>
                }

                @* Actions *@
                <div class="d-grid gap-2">
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to Cases
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <h5>Case Not Found</h5>
            <p>We couldn't find the case you're looking for.</p>
            <a asp-page="Index" class="btn btn-primary">Back to Cases</a>
        </div>
    }
</div>
