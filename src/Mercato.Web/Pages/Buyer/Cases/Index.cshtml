@page
@model Mercato.Web.Pages.Buyer.Cases.IndexModel
@using Mercato.Orders.Domain.Entities
@{
    ViewData["Title"] = "Returns & Complaints";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Buyer/Index">Buyer Portal</a></li>
            <li class="breadcrumb-item active" aria-current="page">Returns & Complaints</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-arrow-counterclockwise me-2"></i>Returns & Complaints</h1>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (TempData["Error"] is string error)
    {
        <div class="alert alert-danger">@error</div>
    }

    @if (TempData["Success"] is string success)
    {
        <div class="alert alert-success">@success</div>
    }

    @* Filter Section *@
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Cases</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-page="Index">
                <div class="row g-3">
                    @* Status Filter *@
                    <div class="col-md-4">
                        <label class="form-label">Status</label>
                        <select name="Status" class="form-select">
                            <option value="">All Statuses</option>
                            @foreach (var status in IndexModel.AllStatuses)
                            {
                                <option value="@status" selected="@(Model.Status == status)">
                                    @IndexModel.GetStatusDisplayText(status)
                                </option>
                            }
                        </select>
                    </div>

                    @* Date Range Filter *@
                    <div class="col-md-4">
                        <label class="form-label">From Date</label>
                        <input type="date" name="FromDate" class="form-control" 
                               value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">To Date</label>
                        <input type="date" name="ToDate" class="form-control" 
                               value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" />
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i>Apply Filters
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary ms-2">
                        <i class="bi bi-x-circle me-1"></i>Clear Filters
                    </a>
                </div>
            </form>
        </div>
    </div>

    @* Results Summary *@
    @if (Model.Cases.Count > 0)
    {
        <p class="text-muted">
            Showing @Model.Cases.Count case@(Model.Cases.Count > 1 ? "s" : "")
        </p>
    }

    @if (Model.Cases.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
            <h3 class="mt-3 text-muted">No Cases Found</h3>
            @if (Model.Status.HasValue || Model.FromDate.HasValue || Model.ToDate.HasValue)
            {
                <p class="text-muted">No cases match your filter criteria. Try adjusting the filters.</p>
                <a asp-page="Index" class="btn btn-outline-primary mt-2">
                    <i class="bi bi-x-circle me-1"></i>Clear Filters
                </a>
            }
            else
            {
                <p class="text-muted">You haven't submitted any return requests or complaints.</p>
                <a asp-page="/Orders/Index" class="btn btn-primary mt-2">
                    <i class="bi bi-bag me-1"></i>View Your Orders
                </a>
            }
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var caseItem in Model.Cases)
            {
                <div class="col-12 mb-3">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Case #@caseItem.Id.ToString()[..8].ToUpperInvariant()</strong>
                                <span class="text-muted ms-3">@caseItem.CreatedAt.ToString("MMMM dd, yyyy")</span>
                            </div>
                            <span class="badge @IndexModel.GetStatusBadgeClass(caseItem.Status)">
                                @IndexModel.GetStatusDisplayText(caseItem.Status)
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="mb-2">
                                        <span class="badge bg-light text-dark border me-2">
                                            <i class="bi bi-tag me-1"></i>@IndexModel.GetCaseType()
                                        </span>
                                        @if (caseItem.SellerSubOrder != null)
                                        {
                                            <span class="badge bg-light text-dark border">
                                                <i class="bi bi-shop me-1"></i>@caseItem.SellerSubOrder.StoreName
                                            </span>
                                        }
                                    </div>
                                    @if (caseItem.SellerSubOrder?.Order != null)
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-receipt me-1"></i>Order: @caseItem.SellerSubOrder.Order.OrderNumber
                                            â€¢ Sub-order: @caseItem.SellerSubOrder.SubOrderNumber
                                        </small>
                                    }
                                    @if (!string.IsNullOrEmpty(caseItem.Reason))
                                    {
                                        <p class="text-muted mb-0 mt-2" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 500px;">
                                            @caseItem.Reason
                                        </p>
                                    }
                                </div>
                                <div class="col-md-4 text-md-end">
                                    <a asp-page="Details" asp-route-id="@caseItem.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye me-1"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                        @if (caseItem.Status == ReturnStatus.Approved)
                        {
                            <div class="card-footer bg-success bg-opacity-10">
                                <small class="text-success">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Your return request has been approved
                                </small>
                            </div>
                        }
                        @if (caseItem.Status == ReturnStatus.Rejected)
                        {
                            <div class="card-footer bg-danger bg-opacity-10">
                                <small class="text-danger">
                                    <i class="bi bi-x-circle me-1"></i>
                                    Your return request has been declined
                                </small>
                            </div>
                        }
                        @if (caseItem.Status == ReturnStatus.Completed)
                        {
                            <div class="card-footer bg-dark bg-opacity-10">
                                <small class="text-dark">
                                    <i class="bi bi-check2-all me-1"></i>
                                    Case resolved on @caseItem.LastUpdatedAt.ToString("MMMM dd, yyyy")
                                </small>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>
