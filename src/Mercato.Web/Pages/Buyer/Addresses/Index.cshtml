@page
@model Mercato.Web.Pages.Buyer.Addresses.IndexModel
@{
    ViewData["Title"] = "Shipping Addresses";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-geo-alt me-2"></i>Shipping Addresses</h1>
                <a asp-page="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Add New Address
                </a>
            </div>

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.Addresses.Count == 0)
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-house-door display-1 text-muted"></i>
                        <h3 class="mt-3">No Shipping Addresses</h3>
                        <p class="text-muted mb-4">You haven't added any shipping addresses yet. Add your first address to start shopping!</p>
                        <a asp-page="Create" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle me-1"></i>Add Your First Address
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var address in Model.Addresses)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 @(address.IsDefault ? "border-primary" : "")">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <div>
                                        @if (!string.IsNullOrEmpty(address.Label))
                                        {
                                            <strong>@address.Label</strong>
                                        }
                                        else
                                        {
                                            <strong>Address</strong>
                                        }
                                    </div>
                                    @if (address.IsDefault)
                                    {
                                        <span class="badge bg-primary">Default</span>
                                    }
                                </div>
                                <div class="card-body">
                                    <p class="mb-1"><strong>@address.FullName</strong></p>
                                    <p class="mb-1">@address.AddressLine1</p>
                                    @if (!string.IsNullOrEmpty(address.AddressLine2))
                                    {
                                        <p class="mb-1">@address.AddressLine2</p>
                                    }
                                    <p class="mb-1">
                                        @address.City@(string.IsNullOrEmpty(address.State) ? "" : $", {address.State}") @address.PostalCode
                                    </p>
                                    <p class="mb-1">@address.Country</p>
                                    @if (!string.IsNullOrEmpty(address.PhoneNumber))
                                    {
                                        <p class="mb-0 text-muted"><i class="bi bi-telephone me-1"></i>@address.PhoneNumber</p>
                                    }
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <a asp-page="Edit" asp-route-id="@address.Id" class="btn btn-sm btn-outline-primary me-1">
                                                <i class="bi bi-pencil me-1"></i>Edit
                                            </a>
                                            <a asp-page="Delete" asp-route-id="@address.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash me-1"></i>Delete
                                            </a>
                                        </div>
                                        @if (!address.IsDefault)
                                        {
                                            <form method="post" asp-page-handler="SetDefault" asp-route-id="@address.Id" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                                    Set as Default
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

            <div class="mt-4">
                <a asp-page="/Buyer/Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Back to Buyer Portal
                </a>
            </div>
        </div>
    </div>
</div>
