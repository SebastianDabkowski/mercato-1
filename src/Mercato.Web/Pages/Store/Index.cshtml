@page "{slug}"
@model Mercato.Web.Pages.Store.IndexModel
@{
    ViewData["Title"] = Model.Store?.Name ?? "Store";
}

<div class="container py-4">
    @if (Model.IsNotFound)
    {
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-shop-window display-1 text-muted mb-3"></i>
                        <h3>Store Not Found</h3>
                        <p class="text-muted">The store you're looking for doesn't exist or may have been removed.</p>
                        <a asp-page="/Index" class="btn btn-primary">
                            <i class="bi bi-house me-1"></i>Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (Model.IsUnavailable)
    {
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-shop-window display-1 text-warning mb-3"></i>
                        <h3>Store Unavailable</h3>
                        <p class="text-muted">This store is currently unavailable. Please check back later.</p>
                        <a asp-page="/Index" class="btn btn-primary">
                            <i class="bi bi-house me-1"></i>Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@Model.ErrorMessage
                </div>
            </div>
        </div>
    }
    else if (Model.Store != null)
    {
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Store Header -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                @{
                                    var safeLogoUrl = Model.GetSafeUrl(Model.Store.LogoUrl);
                                }
                                @if (!string.IsNullOrEmpty(safeLogoUrl))
                                {
                                    <img src="@safeLogoUrl" alt="@Model.Store.Name logo" 
                                         class="rounded" style="width: 100px; height: 100px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-secondary rounded d-flex align-items-center justify-content-center" 
                                         style="width: 100px; height: 100px;">
                                        <i class="bi bi-shop text-white display-4"></i>
                                    </div>
                                }
                            </div>
                            <div class="col">
                                <h1 class="mb-1">@Model.Store.Name</h1>
                                @if (!string.IsNullOrEmpty(Model.Store.Description))
                                {
                                    <p class="text-muted mb-0">@Model.Store.Description</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                @if (!string.IsNullOrEmpty(Model.Store.ContactEmail) || 
                     !string.IsNullOrEmpty(Model.Store.ContactPhone) || 
                     !string.IsNullOrEmpty(Model.Store.WebsiteUrl))
                {
                    <div class="card shadow-sm mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-person-lines-fill me-2"></i>Contact Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @if (!string.IsNullOrEmpty(Model.Store.ContactEmail))
                                {
                                    <div class="col-md-6 mb-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-envelope text-primary me-2"></i>
                                            <div>
                                                <small class="text-muted d-block">Email</small>
                                                <a href="mailto:@Model.Store.ContactEmail">@Model.Store.ContactEmail</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Store.ContactPhone))
                                {
                                    <div class="col-md-6 mb-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-telephone text-primary me-2"></i>
                                            <div>
                                                <small class="text-muted d-block">Phone</small>
                                                <a href="tel:@Model.Store.ContactPhone">@Model.Store.ContactPhone</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Store.WebsiteUrl))
                                {
                                    var safeWebsiteUrl = Model.GetSafeUrl(Model.Store.WebsiteUrl);
                                    if (!string.IsNullOrEmpty(safeWebsiteUrl))
                                    {
                                        <div class="col-md-6 mb-3">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-globe text-primary me-2"></i>
                                                <div>
                                                    <small class="text-muted d-block">Website</small>
                                                    <a href="@safeWebsiteUrl" target="_blank" rel="noopener noreferrer">
                                                        @Model.Store.WebsiteUrl
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Products Section (Placeholder) -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Products</h5>
                    </div>
                    <div class="card-body text-center py-5">
                        <i class="bi bi-box display-1 text-muted mb-3"></i>
                        <p class="text-muted">Products from this store will be displayed here.</p>
                        <small class="text-muted">Product listings coming soon!</small>
                    </div>
                </div>

                <!-- Back Link -->
                <div class="text-center">
                    <a asp-page="/Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to Home
                    </a>
                </div>
            </div>
        </div>
    }
</div>
