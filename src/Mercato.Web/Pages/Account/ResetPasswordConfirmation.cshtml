@page
@model Mercato.Web.Pages.Account.ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-check-circle-fill text-success" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
            </svg>
        </div>
        <h1>Password Reset Successful</h1>
        <p class="lead">Your password has been reset successfully.</p>
        <p class="text-muted">
            You can now log in with your new password.
        </p>
        <div class="mt-4">
            <a asp-page="/Account/Login" class="btn btn-primary btn-lg">Log in</a>
        </div>
    </div>
</div>
