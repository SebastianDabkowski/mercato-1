@page
@model Mercato.Web.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1>Create a Buyer Account</h1>
        <p>Register to browse products and make purchases on Mercato.</p>
        
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <div class="mb-3 text-muted small">
                <p class="mb-1">Password requirements:</p>
                <ul class="mb-0">
                    <li>At least 6 characters</li>
                    <li>At least one uppercase letter</li>
                    <li>At least one lowercase letter</li>
                    <li>At least one digit</li>
                    <li>At least one special character</li>
                </ul>
            </div>

            @if (Model.AvailableConsents.Any())
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Privacy & Communication Preferences</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted small mb-3">Please review and select your preferences below. You can change these settings at any time in your account.</p>
                        
                        @for (int i = 0; i < Model.AvailableConsents.Count; i++)
                        {
                            var consent = Model.AvailableConsents[i];
                            <div class="form-check mb-3">
                                <input type="hidden" name="ConsentSelections[@i].ConsentTypeCode" value="@consent.Code" />
                                <input type="hidden" name="ConsentSelections[@i].ConsentVersionId" value="@consent.CurrentVersionId" />
                                <input class="form-check-input" type="checkbox" name="ConsentSelections[@i].IsGranted" value="true" id="consent_@consent.Code">
                                <label class="form-check-label" for="consent_@consent.Code">
                                    <strong>@consent.Name</strong>
                                    @if (consent.IsMandatory)
                                    {
                                        <span class="badge bg-warning text-dark ms-1">Required</span>
                                    }
                                </label>
                                <div class="text-muted small mt-1">@consent.Description</div>
                                <div class="text-muted smaller mt-1" style="font-size: 0.75rem;">
                                    <i class="bi bi-info-circle"></i> Version @consent.CurrentVersionNumber
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            
            <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
        
        <div class="mt-3">
            <p>Already have an account? <a asp-page="/Account/Login">Log in</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
