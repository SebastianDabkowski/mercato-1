@page
@model Mercato.Web.Pages.Account.ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <h1>Check Your Email</h1>
        <p class="lead">If an account exists for the email you entered, you will receive password reset instructions.</p>
        <p class="text-muted">
            Please check your email inbox and follow the instructions to reset your password.
            If you don't see the email, check your spam folder.
        </p>
        <div class="mt-4">
            <a asp-page="/Account/Login" class="btn btn-primary">Back to Log in</a>
        </div>
    </div>
</div>
