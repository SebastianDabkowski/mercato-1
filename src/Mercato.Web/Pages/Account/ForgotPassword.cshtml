@page
@model Mercato.Web.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1>Forgot Password</h1>
        <p>Enter your email address and we'll send you instructions to reset your password.</p>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Send Reset Link</button>
        </form>

        <div class="mt-3">
            <p><a asp-page="/Account/Login">Back to Log in</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
