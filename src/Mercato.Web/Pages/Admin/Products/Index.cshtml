@page
@model Mercato.Web.Pages.Admin.Products.IndexModel
@{
    ViewData["Title"] = "Product Moderation";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-box-seam me-2"></i>Product Moderation</h1>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @* Filter Section *@
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Products</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-page="Index">
                <div class="row g-3">
                    @* Search Term *@
                    <div class="col-md-3">
                        <label class="form-label">Search</label>
                        <input type="text" name="SearchTerm" class="form-control" 
                               placeholder="Title or description"
                               value="@Model.SearchTerm" />
                    </div>

                    @* Moderation Status Filter *@
                    <div class="col-md-3">
                        <label class="form-label">Moderation Status</label>
                        <select name="ModerationStatus" class="form-select" multiple size="4">
                            @foreach (var status in IndexModel.AllModerationStatuses)
                            {
                                <option value="@status" selected="@Model.ModerationStatus.Contains(status)">
                                    @IndexModel.GetModerationStatusDisplayText(status)
                                </option>
                            }
                        </select>
                        <small class="text-muted">Hold Ctrl/Cmd to select multiple</small>
                    </div>

                    @* Category Filter *@
                    <div class="col-md-2">
                        <label class="form-label">Category</label>
                        <select name="Category" class="form-select">
                            <option value="">All Categories</option>
                            @foreach (var category in Model.AvailableCategories)
                            {
                                <option value="@category" selected="@(Model.Category == category)">@category</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-4 d-flex align-items-end">
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search me-1"></i>Search
                            </button>
                            <a asp-page="Index" class="btn btn-outline-secondary ms-2">
                                <i class="bi bi-x-circle me-1"></i>Clear
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @* Quick Filters *@
    <div class="mb-3">
        <span class="text-muted me-2">Quick Filters:</span>
        <a asp-page="Index" asp-route-ModerationStatus="@Mercato.Product.Domain.Entities.ProductModerationStatus.PendingReview" 
           class="btn btn-sm btn-outline-warning me-1">
            <i class="bi bi-hourglass-split me-1"></i>Pending Review
        </a>
        <a asp-page="Index" asp-route-ModerationStatus="@Mercato.Product.Domain.Entities.ProductModerationStatus.Approved" 
           class="btn btn-sm btn-outline-success me-1">
            <i class="bi bi-check-circle me-1"></i>Approved
        </a>
        <a asp-page="Index" asp-route-ModerationStatus="@Mercato.Product.Domain.Entities.ProductModerationStatus.Rejected" 
           class="btn btn-sm btn-outline-danger me-1">
            <i class="bi bi-x-circle me-1"></i>Rejected
        </a>
    </div>

    @* Results Summary *@
    @if (Model.TotalCount > 0)
    {
        <p class="text-muted">
            Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) of @Model.TotalCount product@(Model.TotalCount > 1 ? "s" : "")
        </p>
    }

    @if (Model.Products.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-box-seam text-muted" style="font-size: 4rem;"></i>
            <h3 class="mt-3 text-muted">No Products Found</h3>
            <p class="text-muted">No products match your search criteria.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;">Image</th>
                        <th>Product</th>
                        <th>Store</th>
                        <th>Category</th>
                        <th class="text-end">Price</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Moderation</th>
                        <th>Created</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr class="@(product.ModerationStatus == Mercato.Product.Domain.Entities.ProductModerationStatus.PendingReview ? "table-warning" : "")">
                            <td>
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="@product.Title" 
                                         class="rounded" style="width: 60px; height: 60px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                         style="width: 60px; height: 60px;">
                                        <i class="bi bi-image text-muted"></i>
                                    </div>
                                }
                            </td>
                            <td style="max-width: 300px;">
                                <div class="fw-semibold text-truncate">@product.Title</div>
                                <small class="text-muted text-truncate d-block">@product.DescriptionPreview</small>
                            </td>
                            <td>
                                <span class="text-muted">@product.StoreName</span>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark">@product.Category</span>
                            </td>
                            <td class="text-end">
                                <span class="fw-semibold">$@product.Price.ToString("N2")</span>
                            </td>
                            <td class="text-center">
                                <span class="badge @IndexModel.GetProductStatusBadgeClass(product.Status)">
                                    @IndexModel.GetProductStatusDisplayText(product.Status)
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="badge @IndexModel.GetModerationStatusBadgeClass(product.ModerationStatus)">
                                    @IndexModel.GetModerationStatusDisplayText(product.ModerationStatus)
                                </span>
                            </td>
                            <td>
                                @product.CreatedAt.ToString("MMM dd, yyyy")
                                <small class="text-muted d-block">@product.CreatedAt.ToString("h:mm tt")</small>
                            </td>
                            <td class="text-center">
                                <a asp-page="Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye me-1"></i>View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* Pagination *@
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Product list pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage - 1)">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    @{
                        var startPage = Math.Max(1, Model.CurrentPage - 2);
                        var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);

                        if (startPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(1)">1</a>
                            </li>
                            if (startPage > 2)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                        }

                        for (var i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Model.GetPaginationQueryString(i)">@i</a>
                            </li>
                        }

                        if (endPage < Model.TotalPages)
                        {
                            if (endPage < Model.TotalPages - 1)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(Model.TotalPages)">@Model.TotalPages</a>
                            </li>
                        }
                    }

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage + 1)">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
