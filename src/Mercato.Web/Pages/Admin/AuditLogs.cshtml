@page
@model Mercato.Web.Pages.Admin.AuditLogsModel
@{
    ViewData["Title"] = "Audit Logs";
}

<h1>Audit Logs</h1>
<p class="text-muted">View admin actions including user status changes, moderation decisions, and settings updates.</p>

<!-- Filter Form -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-2">
                <label for="StartDate" class="form-label">Start Date</label>
                <input type="datetime-local" asp-for="StartDate" class="form-control" id="StartDate" />
            </div>
            <div class="col-md-2">
                <label for="EndDate" class="form-label">End Date</label>
                <input type="datetime-local" asp-for="EndDate" class="form-control" id="EndDate" />
            </div>
            <div class="col-md-2">
                <label for="AdminUserId" class="form-label">Admin User ID</label>
                <input type="text" asp-for="AdminUserId" class="form-control" id="AdminUserId" placeholder="e.g., admin@example.com" />
            </div>
            <div class="col-md-2">
                <label for="EntityType" class="form-label">Entity Type</label>
                <select asp-for="EntityType" class="form-select" id="EntityType">
                    <option value="">All Types</option>
                    <option value="User">User</option>
                    <option value="Product">Product</option>
                    <option value="Order">Order</option>
                    <option value="Review">Review</option>
                    <option value="Store">Store</option>
                    <option value="Commission">Commission</option>
                    <option value="VatRule">VAT Rule</option>
                    <option value="Currency">Currency</option>
                    <option value="LegalDocument">Legal Document</option>
                    <option value="Integration">Integration</option>
                    <option value="Settings">Settings</option>
                    <option value="Payout">Payout</option>
                    <option value="Refund">Refund</option>
                    <option value="Account">Account</option>
                </select>
            </div>
            <div class="col-md-2">
                <label for="ActionType" class="form-label">Action Type</label>
                <input type="text" asp-for="ActionType" class="form-control" id="ActionType" placeholder="e.g., StatusChange" />
            </div>
            <div class="col-md-2">
                <label for="EntityId" class="form-label">Entity ID</label>
                <input type="text" asp-for="EntityId" class="form-control" id="EntityId" placeholder="Resource ID" />
            </div>
            <div class="col-md-2">
                <label for="Outcome" class="form-label">Outcome</label>
                <select asp-for="Outcome" class="form-select" id="Outcome">
                    <option value="">All Outcomes</option>
                    <option value="Success">Success</option>
                    <option value="Failure">Failure</option>
                </select>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Apply Filters</button>
                <a asp-page="/Admin/AuditLogs" class="btn btn-outline-secondary">Clear Filters</a>
            </div>
        </form>
    </div>
</div>

<!-- Audit Logs Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Audit Log Entries</h5>
    </div>
    <div class="card-body">
        @if (Model.AuditLogs.Count == 0)
        {
            <div class="alert alert-info mb-0">
                No audit log entries found for the selected filters.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Timestamp</th>
                            <th>Admin User</th>
                            <th>Action</th>
                            <th>Entity Type</th>
                            <th>Entity ID</th>
                            <th>Outcome</th>
                            <th>Details</th>
                            <th>IP Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model.AuditLogs)
                        {
                            <tr>
                                <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>@log.AdminUserId</td>
                                <td>
                                    <span class="badge bg-secondary">@log.Action</span>
                                </td>
                                <td>@log.EntityType</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(log.EntityId))
                                    {
                                        <code>@log.EntityId</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (log.IsSuccess)
                                    {
                                        <span class="badge bg-success">Success</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger" title="@log.FailureReason">Failure</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(log.Details))
                                    {
                                        <span title="@log.Details">
                                            @(log.Details.Length > 50 ? log.Details[..50] + "..." : log.Details)
                                        </span>
                                    }
                                    else if (!string.IsNullOrEmpty(log.FailureReason))
                                    {
                                        <span class="text-danger" title="@log.FailureReason">
                                            @(log.FailureReason.Length > 50 ? log.FailureReason[..50] + "..." : log.FailureReason)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(log.IpAddress))
                                    {
                                        <code>@log.IpAddress</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.AuditLogs.Count == 100)
            {
                <p class="text-muted mt-2">
                    Showing most recent 100 entries. Use filters to narrow results.
                </p>
            }
        }
    </div>
</div>

<div class="mt-4">
    <a asp-page="/Admin/Index" class="btn btn-secondary">
        &laquo; Back to Admin Portal
    </a>
</div>
