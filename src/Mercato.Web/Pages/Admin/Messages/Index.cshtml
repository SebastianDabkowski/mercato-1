@page
@model Mercato.Web.Pages.Admin.Messages.IndexModel
@{
    ViewData["Title"] = "Message Threads - Admin";
}

<div class="container">
    <h1 class="mb-4">Message Threads</h1>
    <p class="text-muted">Review and moderate all message threads between buyers and sellers.</p>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.ThreadsResult != null && Model.ThreadsResult.Succeeded)
    {
        @if (Model.ThreadsResult.TotalCount > 0)
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Subject</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Last Message</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var thread in Model.ThreadsResult.Threads)
                        {
                            <tr>
                                <td>@thread.Subject</td>
                                <td>
                                    @if (thread.ThreadType == Mercato.Notifications.Domain.Entities.MessageThreadType.ProductQuestion)
                                    {
                                        <span class="badge bg-info">Product Question</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">Order Message</span>
                                    }
                                </td>
                                <td>
                                    @if (thread.IsClosed)
                                    {
                                        <span class="badge bg-secondary">Closed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Open</span>
                                    }
                                </td>
                                <td>@thread.CreatedAt.ToString("MMM d, yyyy")</td>
                                <td>@thread.LastMessageAt.ToString("MMM d, yyyy h:mm tt")</td>
                                <td>
                                    <a asp-page="/Admin/Messages/Thread" asp-route-id="@thread.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.ThreadsResult.TotalPages > 1)
            {
                <nav aria-label="Messages pagination">
                    <ul class="pagination justify-content-center">
                        @if (Model.ThreadsResult.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="/Admin/Messages/Index" asp-route-page="@(Model.ThreadsResult.Page - 1)">Previous</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                        }

                        @for (var i = 1; i <= Model.ThreadsResult.TotalPages; i++)
                        {
                            var pageNumber = i;
                            <li class="page-item @(pageNumber == Model.ThreadsResult.Page ? "active" : "")">
                                <a class="page-link" asp-page="/Admin/Messages/Index" asp-route-page="@pageNumber">@pageNumber</a>
                            </li>
                        }

                        @if (Model.ThreadsResult.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="/Admin/Messages/Index" asp-route-page="@(Model.ThreadsResult.Page + 1)">Next</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Next</span>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                No message threads found.
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Unable to load message threads at this time. Please try again later.
        </div>
    }

    <div class="mt-3">
        <a asp-page="/Admin/Index" class="btn btn-outline-secondary">Back to Admin Dashboard</a>
    </div>
</div>
