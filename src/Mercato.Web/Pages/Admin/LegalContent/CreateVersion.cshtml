@page
@model Mercato.Web.Pages.Admin.LegalContent.CreateVersionModel
@{
    ViewData["Title"] = $"Create Version - {Model.Document?.Title ?? Model.DocumentType.ToString()}";
}

<h1>Create New Version</h1>
<h5 class="text-muted mb-4">@(Model.Document?.Title ?? Model.DocumentType.ToString())</h5>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Version Details</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Input.LegalDocumentId" />
                    <input type="hidden" asp-for="Input.DocumentType" />
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="Input.VersionNumber" class="form-label"></label>
                            <input asp-for="Input.VersionNumber" class="form-control" placeholder="e.g., 1.0, 2.0" />
                            <span asp-validation-for="Input.VersionNumber" class="text-danger"></span>
                            <small class="text-muted">Use semantic versioning (e.g., 1.0, 2.0, 2.1)</small>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.EffectiveDate" class="form-label"></label>
                            <input asp-for="Input.EffectiveDate" type="date" class="form-control" />
                            <span asp-validation-for="Input.EffectiveDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Input.EffectiveTime" class="form-label"></label>
                            <input asp-for="Input.EffectiveTime" type="time" class="form-control" />
                            <span asp-validation-for="Input.EffectiveTime" class="text-danger"></span>
                            <small class="text-muted">Time in UTC</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ChangeSummary" class="form-label"></label>
                        <textarea asp-for="Input.ChangeSummary" class="form-control" rows="2" 
                                  placeholder="Brief summary of changes from previous version"></textarea>
                        <span asp-validation-for="Input.ChangeSummary" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Content" class="form-label"></label>
                        <textarea asp-for="Input.Content" class="form-control" rows="20" 
                                  placeholder="Enter the legal document content in HTML format..."></textarea>
                        <span asp-validation-for="Input.Content" class="text-danger"></span>
                        <small class="text-muted">
                            HTML content is supported. Use standard HTML tags for formatting.
                        </small>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="Versions" asp-route-documentType="@((int)Model.DocumentType)" 
                           class="btn btn-outline-secondary">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Create Version
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Tips</h6>
            </div>
            <div class="card-body">
                <ul class="small mb-0">
                    <li class="mb-2">
                        <strong>Version Number:</strong> Use a clear numbering scheme like 1.0, 2.0, etc.
                    </li>
                    <li class="mb-2">
                        <strong>Effective Date:</strong> Set a future date to schedule changes. 
                        Users will see a notice about upcoming changes.
                    </li>
                    <li class="mb-2">
                        <strong>Change Summary:</strong> Document what changed from the previous version for audit purposes.
                    </li>
                    <li class="mb-2">
                        <strong>Draft Status:</strong> New versions are created as drafts. 
                        You must publish them before they become active.
                    </li>
                    <li>
                        <strong>HTML Content:</strong> Use standard HTML for formatting:
                        <code>&lt;h2&gt;</code>, <code>&lt;p&gt;</code>, <code>&lt;ul&gt;</code>, etc.
                    </li>
                </ul>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">Preview</h6>
            </div>
            <div class="card-body">
                <div id="contentPreview" class="border p-3" style="max-height: 400px; overflow-y: auto;">
                    <em class="text-muted">Enter content to see preview...</em>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('Input_Content').addEventListener('input', function() {
            var preview = document.getElementById('contentPreview');
            if (this.value) {
                preview.innerHTML = this.value;
            } else {
                preview.innerHTML = '<em class="text-muted">Enter content to see preview...</em>';
            }
        });
    </script>
}
