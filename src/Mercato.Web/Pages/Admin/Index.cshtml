@page
@model Mercato.Web.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Portal";
}

<h1>Admin Portal</h1>

<div class="alert alert-info">
    <strong>Admin Dashboard</strong> - Platform administration tools
</div>

<div class="row">
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">User Management</h5>
                <p class="card-text">View and manage user accounts and roles.</p>
                <a asp-page="/Admin/Users/Index" class="btn btn-primary">
                    Manage Users
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Seller Approvals</h5>
                <p class="card-text">Review and approve seller applications.</p>
                <a asp-page="/Admin/Sellers/Index" class="btn btn-primary">
                    Manage Sellers
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-warning">
            <div class="card-body">
                <h5 class="card-title">Security Dashboard</h5>
                <p class="card-text">Monitor authentication events and suspicious activity.</p>
                <a asp-page="/Admin/SecurityDashboard" class="btn btn-warning">
                    View Security
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-dark">
            <div class="card-body">
                <h5 class="card-title">Audit Logs</h5>
                <p class="card-text">View admin actions including user status changes, moderation decisions, and settings updates.</p>
                <a asp-page="/Admin/AuditLogs" class="btn btn-dark">
                    View Audit Logs
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Category Management</h5>
                <p class="card-text">Manage the global product category tree for consistent product organization.</p>
                <a asp-page="/Admin/Categories/Index" class="btn btn-primary">
                    Manage Categories
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-success">
            <div class="card-body">
                <h5 class="card-title">Settlements</h5>
                <p class="card-text">View monthly seller settlements and export reports for accounting.</p>
                <a asp-page="/Admin/Settlements/Index" class="btn btn-success">
                    View Settlements
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-info">
            <div class="card-body">
                <h5 class="card-title">Order Management</h5>
                <p class="card-text">View all orders and shipping status history for support purposes.</p>
                <a asp-page="/Admin/Orders/Index" class="btn btn-info">
                    View Orders
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-danger">
            <div class="card-body">
                <h5 class="card-title">Returns & Disputes</h5>
                <p class="card-text">View and manage return requests and complaint cases. Escalate and resolve disputes.</p>
                <a asp-page="/Admin/Cases/Index" class="btn btn-danger">
                    Manage Cases
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-info">
            <div class="card-body">
                <h5 class="card-title">Review Moderation</h5>
                <p class="card-text">Moderate product reviews. Approve, reject or flag inappropriate content.</p>
                <a asp-page="/Admin/Reviews/Index" class="btn btn-info">
                    Moderate Reviews
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-success">
            <div class="card-body">
                <h5 class="card-title">Commission Rules</h5>
                <p class="card-text">Configure commission rates and platform fees for marketplace transactions.</p>
                <a asp-page="/Admin/Commissions/Index" class="btn btn-success">
                    Manage Commissions
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Platform Settings</h5>
                <p class="card-text">Configure platform-wide settings.</p>
                <span class="badge bg-secondary">Coming Soon</span>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-success">
            <div class="card-body">
                <h5 class="card-title">Performance Dashboard</h5>
                <p class="card-text">View marketplace KPIs: GMV, orders, sellers, products, and users.</p>
                <a asp-page="/Admin/PerformanceDashboard" class="btn btn-success">
                    View Dashboard
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-info">
            <div class="card-body">
                <h5 class="card-title">User Analytics</h5>
                <p class="card-text">View aggregated registration and activity metrics for user growth insights.</p>
                <a asp-page="/Admin/UserAnalytics" class="btn btn-info">
                    View Analytics
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-primary">
            <div class="card-body">
                <h5 class="card-title">Legal Content</h5>
                <p class="card-text">Manage legal documents: Terms of Service, Privacy Policy, Cookie Policy, and Seller Agreement.</p>
                <a asp-page="/Admin/LegalContent/Index" class="btn btn-primary">
                    Manage Legal Content
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-info">
            <div class="card-body">
                <h5 class="card-title">Data Processing Registry</h5>
                <p class="card-text">GDPR Article 30 compliance: Maintain a registry of personal data processing activities.</p>
                <a asp-page="/Admin/DataProcessing/Index" class="btn btn-info">
                    Manage Registry
                </a>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-page="Details" class="btn btn-outline-primary">View Admin Details</a>
</div>
