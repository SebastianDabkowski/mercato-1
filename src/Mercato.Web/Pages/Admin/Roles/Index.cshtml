@page
@model Mercato.Web.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "RBAC Configuration";
}

<h1>Role-Based Access Control Configuration</h1>

<p class="text-muted">View and manage which permissions and modules are assigned to each role. Changes take effect for all users with the role after the next authorization check.</p>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Available Modules</h5>
            </div>
            <div class="card-body">
                @if (Model.Modules.Count == 0)
                {
                    <p class="text-muted mb-0">No modules defined.</p>
                }
                else
                {
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var module in Model.Modules)
                        {
                            <span class="badge bg-secondary">@module</span>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (Model.RoleConfigurations.Count == 0)
{
    <div class="alert alert-info">
        No roles found. Roles are seeded at application startup.
    </div>
}
else
{
    @foreach (var roleConfig in Model.RoleConfigurations)
    {
        var assignedCount = roleConfig.Permissions.Count(p => p.IsAssigned);
        var totalCount = roleConfig.Permissions.Count;
        
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0">
                        <i class="bi bi-person-badge me-2"></i>@roleConfig.RoleName Role
                    </h5>
                    <small class="text-muted">@assignedCount of @totalCount permissions assigned</small>
                </div>
                <a asp-page="Permissions" asp-route-roleName="@roleConfig.RoleName" class="btn btn-primary btn-sm">
                    <i class="bi bi-gear me-1"></i> Manage Permissions
                </a>
            </div>
            <div class="card-body">
                @{
                    var permissionsByModule = roleConfig.Permissions
                        .Where(p => p.IsAssigned)
                        .GroupBy(p => p.Module)
                        .OrderBy(g => g.Key);
                }
                
                @if (!permissionsByModule.Any())
                {
                    <p class="text-muted mb-0">No permissions assigned to this role.</p>
                }
                else
                {
                    <div class="row">
                        @foreach (var moduleGroup in permissionsByModule)
                        {
                            <div class="col-md-4 mb-3">
                                <h6 class="text-primary">
                                    <i class="bi bi-folder me-1"></i>@moduleGroup.Key
                                </h6>
                                <ul class="list-unstyled small mb-0">
                                    @foreach (var permission in moduleGroup.OrderBy(p => p.Name))
                                    {
                                        <li class="mb-1">
                                            <i class="bi bi-check-circle text-success me-1"></i>
                                            <span title="@permission.Description">@permission.Name</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    }
}

<div class="mt-4">
    <a asp-page="/Admin/Index" class="btn btn-secondary">
        &laquo; Back to Admin Portal
    </a>
</div>
