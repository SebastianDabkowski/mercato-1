@page
@model Mercato.Web.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
}

<h1>User Management</h1>

<p class="text-muted">View and manage user roles. Changes to user roles are logged for audit purposes.</p>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">All Users</h5>
    </div>
    <div class="card-body">
        @if (Model.Users.Count == 0)
        {
            <div class="alert alert-info">
                No users found in the system.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Email</th>
                            <th scope="col">Current Role(s)</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>
                                    @if (user.Roles.Count == 0)
                                    {
                                        <span class="badge bg-secondary">No roles</span>
                                    }
                                    else
                                    {
                                        @foreach (var role in user.Roles)
                                        {
                                            var badgeClass = role switch
                                            {
                                                "Admin" => "bg-danger",
                                                "Seller" => "bg-primary",
                                                "Buyer" => "bg-success",
                                                _ => "bg-secondary"
                                            };
                                            <span class="badge @badgeClass me-1">@role</span>
                                        }
                                    }
                                </td>
                                <td>
                                    <a asp-page="ChangeRole" asp-route-userId="@user.UserId" 
                                       class="btn btn-sm btn-outline-warning"
                                       title="Change user role">
                                        <i class="bi bi-pencil"></i> Change Role
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-page="/Admin/Index" class="btn btn-secondary">
        &laquo; Back to Admin Portal
    </a>
</div>
