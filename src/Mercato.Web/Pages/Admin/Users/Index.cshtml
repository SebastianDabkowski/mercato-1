@page
@model Mercato.Web.Pages.Admin.Users.IndexModel
@using Mercato.Admin.Application.Queries
@{
    ViewData["Title"] = "User Management";
}

<h1>User Management</h1>

<p class="text-muted">View and manage user accounts. Search by email, username, or user ID. Filter by role or account status.</p>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Filter Users</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label for="SearchTerm" class="form-label">Search</label>
                <input type="text" class="form-control" id="SearchTerm" name="SearchTerm" 
                       value="@Model.SearchTerm" placeholder="Email, username, or ID">
            </div>
            <div class="col-md-3">
                <label for="RoleFilter" class="form-label">Role</label>
                <select class="form-select" id="RoleFilter" name="RoleFilter">
                    <option value="">All Roles</option>
                    @foreach (var role in IndexModel.AvailableRoles)
                    {
                        <option value="@role" selected="@(Model.RoleFilter == role)">@role</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="StatusFilter" class="form-label">Status</label>
                <select class="form-select" id="StatusFilter" name="StatusFilter">
                    <option value="">All Statuses</option>
                    @foreach (var status in IndexModel.AvailableStatuses)
                    {
                        var statusName = status switch
                        {
                            UserAccountStatus.Active => "Active",
                            UserAccountStatus.Blocked => "Blocked",
                            UserAccountStatus.PendingVerification => "Pending Verification",
                            _ => status.ToString()
                        };
                        <option value="@((int)status)" selected="@(Model.StatusFilter == status)">@statusName</option>
                    }
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Search
                </button>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Users</h5>
        <span class="badge bg-secondary">@Model.Users.TotalCount total users</span>
    </div>
    <div class="card-body">
        @if (Model.Users.Items.Count == 0)
        {
            <div class="alert alert-info">
                No users found matching the specified criteria.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">User ID</th>
                            <th scope="col">Email</th>
                            <th scope="col">Role(s)</th>
                            <th scope="col">Status</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users.Items)
                        {
                            <tr>
                                <td>
                                    <small class="text-muted" title="@user.UserId">
                                        @(user.UserId.Length > 12 ? user.UserId[..12] + "..." : user.UserId)
                                    </small>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    @if (user.Roles.Count == 0)
                                    {
                                        <span class="badge bg-secondary">No roles</span>
                                    }
                                    else
                                    {
                                        @foreach (var role in user.Roles)
                                        {
                                            var badgeClass = role switch
                                            {
                                                "Admin" => "bg-danger",
                                                "Seller" => "bg-primary",
                                                "Buyer" => "bg-success",
                                                _ => "bg-secondary"
                                            };
                                            <span class="badge @badgeClass me-1">@role</span>
                                        }
                                    }
                                </td>
                                <td>
                                    @{
                                        var (statusBadge, statusText) = user.Status switch
                                        {
                                            UserAccountStatus.Active => ("bg-success", "Active"),
                                            UserAccountStatus.Blocked => ("bg-danger", "Blocked"),
                                            UserAccountStatus.PendingVerification => ("bg-warning text-dark", "Pending Verification"),
                                            _ => ("bg-secondary", user.Status.ToString())
                                        };
                                    }
                                    <span class="badge @statusBadge">@statusText</span>
                                </td>
                                <td>
                                    <a asp-page="Details" asp-route-userId="@user.UserId" 
                                       class="btn btn-sm btn-outline-info me-1"
                                       title="View user details">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a asp-page="ChangeRole" asp-route-userId="@user.UserId" 
                                       class="btn btn-sm btn-outline-warning"
                                       title="Change user role">
                                        <i class="bi bi-pencil"></i> Change Role
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.Users.TotalPages > 1)
            {
                <nav aria-label="User list pagination">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.Users.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" asp-page="Index" 
                               asp-route-CurrentPage="@(Model.CurrentPage - 1)"
                               asp-route-RoleFilter="@Model.RoleFilter"
                               asp-route-StatusFilter="@((int?)Model.StatusFilter)"
                               asp-route-SearchTerm="@Model.SearchTerm">
                                Previous
                            </a>
                        </li>
                        @for (var i = 1; i <= Model.Users.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Users.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-page="Index" 
                                   asp-route-CurrentPage="@i"
                                   asp-route-RoleFilter="@Model.RoleFilter"
                                   asp-route-StatusFilter="@((int?)Model.StatusFilter)"
                                   asp-route-SearchTerm="@Model.SearchTerm">
                                    @i
                                </a>
                            </li>
                        }
                        <li class="page-item @(Model.Users.HasNextPage ? "" : "disabled")">
                            <a class="page-link" asp-page="Index" 
                               asp-route-CurrentPage="@(Model.CurrentPage + 1)"
                               asp-route-RoleFilter="@Model.RoleFilter"
                               asp-route-StatusFilter="@((int?)Model.StatusFilter)"
                               asp-route-SearchTerm="@Model.SearchTerm">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
    </div>
</div>

<div class="mt-4">
    <a asp-page="/Admin/Index" class="btn btn-secondary">
        &laquo; Back to Admin Portal
    </a>
</div>
