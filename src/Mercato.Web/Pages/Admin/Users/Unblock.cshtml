@page "{userId?}"
@model Mercato.Web.Pages.Admin.Users.UnblockModel
@{
    ViewData["Title"] = "Unblock User";
}

<h1>Unblock User</h1>

<p class="text-muted">Unblock a user account to restore their access to the platform.</p>

@if (Model.UserInfo == null)
{
    <div class="alert alert-danger">
        User not found.
    </div>
    <a asp-page="Index" class="btn btn-secondary">
        &laquo; Back to Users
    </a>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">User Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">User ID</dt>
                        <dd class="col-sm-8"><code>@Model.UserInfo.UserId</code></dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.UserInfo.Email</dd>

                        <dt class="col-sm-4">Role(s)</dt>
                        <dd class="col-sm-8">
                            @if (Model.UserInfo.Roles.Count == 0)
                            {
                                <span class="badge bg-secondary">No roles</span>
                            }
                            else
                            {
                                @foreach (var role in Model.UserInfo.Roles)
                                {
                                    var badgeClass = role switch
                                    {
                                        "Admin" => "bg-danger",
                                        "Seller" => "bg-primary",
                                        "Buyer" => "bg-success",
                                        _ => "bg-secondary"
                                    };
                                    <span class="badge @badgeClass me-1">@role</span>
                                }
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            @if (Model.UserInfo.IsBlocked)
            {
                <div class="card mt-4">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Current Block Information</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Blocked By</dt>
                            <dd class="col-sm-8">@Model.UserInfo.BlockedByAdminEmail</dd>

                            <dt class="col-sm-4">Blocked At</dt>
                            <dd class="col-sm-8">@Model.UserInfo.BlockedAt?.ToString("yyyy-MM-dd HH:mm:ss UTC")</dd>

                            <dt class="col-sm-4">Reason</dt>
                            <dd class="col-sm-8">@Model.UserInfo.BlockReason</dd>

                            @if (!string.IsNullOrEmpty(Model.UserInfo.BlockReasonDetails))
                            {
                                <dt class="col-sm-4">Details</dt>
                                <dd class="col-sm-8">@Model.UserInfo.BlockReasonDetails</dd>
                            }
                        </dl>
                    </div>
                </div>
            }

            <div class="card mt-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">✓ Unblock User Account</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" asp-for="Input.UserId" />

                        <div class="alert alert-info">
                            <h6 class="alert-heading">ℹ️ Information</h6>
                            <p class="mb-0">
                                Unblocking this user will have the following effects:
                            </p>
                            <ul class="mt-2 mb-0">
                                <li>The user will be able to log in again</li>
                                <li>If this is a seller, their store will become visible to buyers</li>
                                <li>This action is logged for audit purposes</li>
                            </ul>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" asp-for="Input.ConfirmUnblock" />
                            <label class="form-check-label" asp-for="Input.ConfirmUnblock">
                                I confirm that I want to unblock this user account
                            </label>
                            <span asp-validation-for="Input.ConfirmUnblock" class="text-danger d-block"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                Unblock User
                            </button>
                            <a asp-page="Details" asp-route-userId="@Model.UserInfo.UserId" class="btn btn-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
