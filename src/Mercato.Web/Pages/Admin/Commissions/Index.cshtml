@page
@model Mercato.Web.Pages.Admin.Commissions.IndexModel
@{
    ViewData["Title"] = "Commission Rules";
}

<h1>Commission Rules</h1>

<div class="alert alert-info">
    <strong>Commission Configuration</strong> - Manage commission rates and platform fees for marketplace transactions
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="mb-4">
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Rule
    </a>
</div>

@if (Model.Rules.Count == 0)
{
    <div class="alert alert-warning">
        <strong>No commission rules found.</strong> Create a new rule to configure commission rates.
    </div>
}
else
{
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Commission Rules</h5>
            <span class="badge bg-secondary">@Model.Rules.Count rules</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Scope</th>
                            <th class="text-end">Commission Rate</th>
                            <th class="text-end">Fixed Fee</th>
                            <th>Effective Date</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Version</th>
                            <th>Last Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rule in Model.Rules)
                        {
                            var isFutureDated = rule.EffectiveDate > DateTimeOffset.UtcNow;
                            <tr class="@(isFutureDated ? "table-info" : "")">
                                <td>
                                    <strong>@rule.Name</strong>
                                </td>
                                <td>
                                    @if (rule.SellerId == null && string.IsNullOrEmpty(rule.CategoryId))
                                    {
                                        <span class="badge bg-primary">Global Default</span>
                                    }
                                    else if (rule.SellerId != null && !string.IsNullOrEmpty(rule.CategoryId))
                                    {
                                        <span class="badge bg-info">Seller + Category</span>
                                        <small class="d-block text-muted mt-1">
                                            Seller: @rule.SellerId.Value.ToString()[..8]...<br />
                                            Category: @rule.CategoryId
                                        </small>
                                    }
                                    else if (rule.SellerId != null)
                                    {
                                        <span class="badge bg-warning text-dark">Seller-specific</span>
                                        <small class="d-block text-muted mt-1">@rule.SellerId.Value.ToString()[..8]...</small>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Category-specific</span>
                                        <small class="d-block text-muted mt-1">@rule.CategoryId</small>
                                    }
                                </td>
                                <td class="text-end">
                                    <strong>@rule.CommissionRate.ToString("F2")%</strong>
                                    @if (rule.MinCommission.HasValue || rule.MaxCommission.HasValue)
                                    {
                                        <small class="d-block text-muted">
                                            @if (rule.MinCommission.HasValue)
                                            {
                                                <span>Min: @rule.MinCommission.Value.ToString("C")</span>
                                            }
                                            @if (rule.MaxCommission.HasValue)
                                            {
                                                @if (rule.MinCommission.HasValue)
                                                {
                                                    <span>, </span>
                                                }
                                                <span>Max: @rule.MaxCommission.Value.ToString("C")</span>
                                            }
                                        </small>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (rule.FixedFee > 0)
                                    {
                                        <span>@rule.FixedFee.ToString("C")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @rule.EffectiveDate.ToString("yyyy-MM-dd")
                                    @if (isFutureDated)
                                    {
                                        <span class="badge bg-info ms-1">Future</span>
                                    }
                                </td>
                                <td class="text-center">@rule.Priority</td>
                                <td>
                                    @if (rule.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary">v@(rule.Version)</span>
                                </td>
                                <td>
                                    <small>@rule.LastUpdatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                                </td>
                                <td>
                                    <a asp-page="Edit" asp-route-id="@rule.Id" class="btn btn-sm btn-outline-primary">
                                        Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h6 class="mb-0">Legend</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <span class="badge bg-primary">Global Default</span>
                    <small class="text-muted ms-2">Applies to all transactions when no specific rule matches</small>
                </div>
                <div class="col-md-4">
                    <span class="badge bg-warning text-dark">Seller-specific</span>
                    <small class="text-muted ms-2">Applies to a specific seller's transactions</small>
                </div>
                <div class="col-md-4">
                    <span class="badge bg-secondary">Category-specific</span>
                    <small class="text-muted ms-2">Applies to transactions in a specific category</small>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-4">
                    <span class="badge bg-info">Seller + Category</span>
                    <small class="text-muted ms-2">Highest priority - applies when both seller and category match</small>
                </div>
                <div class="col-md-4">
                    <span class="badge bg-info">Future</span>
                    <small class="text-muted ms-2">Rule is scheduled to take effect on the specified date</small>
                </div>
            </div>
        </div>
    </div>
}

<div class="mt-4">
    <a asp-page="/Admin/Index" class="btn btn-outline-secondary">
        &laquo; Back to Admin Dashboard
    </a>
</div>
