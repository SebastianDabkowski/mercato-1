@page
@model Mercato.Web.Pages.Admin.Settlements.IndexModel
@{
    ViewData["Title"] = "Settlements";
}

<h1>Settlements</h1>

<div class="alert alert-info">
    <strong>Monthly Settlement Reports</strong> - View and manage seller settlements
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">Filter Settlements</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label for="year" class="form-label">Year</label>
                <select name="year" id="year" class="form-select" asp-items="Model.YearOptions">
                    <option value="">All Years</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="month" class="form-label">Month</label>
                <select name="month" id="month" class="form-select" asp-items="Model.MonthOptions">
                    <option value="">All Months</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="status" class="form-label">Status</label>
                <select name="status" id="status" class="form-select" asp-items="Model.StatusOptions">
                    <option value="">All Statuses</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Filter</button>
                <a asp-page="Index" class="btn btn-outline-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

@if (Model.Settlements.Count == 0)
{
    <div class="alert alert-warning">
        No settlements found matching the filter criteria.
    </div>
}
else
{
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Settlement List</h5>
            <span class="badge bg-secondary">@Model.Settlements.Count settlements</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Period</th>
                            <th>Seller ID</th>
                            <th>Status</th>
                            <th class="text-end">Gross Sales</th>
                            <th class="text-end">Refunds</th>
                            <th class="text-end">Commission</th>
                            <th class="text-end">Net Payable</th>
                            <th class="text-center">Orders</th>
                            <th>Generated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var settlement in Model.Settlements)
                        {
                            <tr>
                                <td>
                                    <strong>@($"{settlement.Year}-{settlement.Month:D2}")</strong>
                                </td>
                                <td>
                                    <code>@settlement.SellerId.ToString()[..8]...</code>
                                </td>
                                <td>
                                    @switch (settlement.Status)
                                    {
                                        case Mercato.Payments.Domain.Entities.SettlementStatus.Draft:
                                            <span class="badge bg-warning text-dark">Draft</span>
                                            break;
                                        case Mercato.Payments.Domain.Entities.SettlementStatus.Finalized:
                                            <span class="badge bg-success">Finalized</span>
                                            break;
                                        case Mercato.Payments.Domain.Entities.SettlementStatus.Exported:
                                            <span class="badge bg-info">Exported</span>
                                            break;
                                    }
                                </td>
                                <td class="text-end">@settlement.GrossSales.ToString("C")</td>
                                <td class="text-end text-danger">@settlement.TotalRefunds.ToString("C")</td>
                                <td class="text-end">@settlement.TotalCommission.ToString("C")</td>
                                <td class="text-end">
                                    <strong>@settlement.NetPayable.ToString("C")</strong>
                                </td>
                                <td class="text-center">@settlement.OrderCount</td>
                                <td>
                                    @settlement.GeneratedAt.ToString("yyyy-MM-dd")
                                    @if (settlement.Version > 1)
                                    {
                                        <span class="badge bg-secondary ms-1">v@(settlement.Version)</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="Details" asp-route-id="@settlement.Id" class="btn btn-outline-primary">
                                            View
                                        </a>
                                        <a asp-page="Export" asp-route-id="@settlement.Id" class="btn btn-outline-success">
                                            Export
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<div class="mt-4">
    <a asp-page="/Admin/Index" class="btn btn-outline-secondary">
        &laquo; Back to Admin Dashboard
    </a>
</div>
