@page
@model Mercato.Web.Pages.Admin.Currencies.IndexModel
@{
    ViewData["Title"] = "Currency Configuration";
}

<h1>Currency Configuration</h1>

<div class="alert alert-info">
    <strong>Platform Currencies</strong> - Configure available currencies, base currency, and exchange rate settings for multi-market operations
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.BaseCurrency != null)
{
    <div class="card mb-4 border-primary">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">
                <i class="bi bi-star-fill"></i> Base Currency
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <strong>Code:</strong> <span class="badge bg-primary fs-5">@Model.BaseCurrency.Code</span>
                </div>
                <div class="col-md-3">
                    <strong>Name:</strong> @Model.BaseCurrency.Name
                </div>
                <div class="col-md-3">
                    <strong>Symbol:</strong> @Model.BaseCurrency.Symbol
                </div>
                <div class="col-md-3">
                    <strong>Decimal Places:</strong> @Model.BaseCurrency.DecimalPlaces
                </div>
            </div>
            <div class="mt-2">
                <small class="text-muted">
                    All exchange rates are calculated relative to the base currency. Changing the base currency is a significant operation.
                </small>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <strong>No base currency set.</strong> Please set a base currency to enable multi-currency operations.
    </div>
}

<div class="mb-4">
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Currency
    </a>
</div>

@if (Model.Currencies.Count == 0)
{
    <div class="alert alert-warning">
        <strong>No currencies configured.</strong> Add currencies to enable multi-market operations.
    </div>
}
else
{
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Available Currencies</h5>
            <span class="badge bg-secondary">@Model.Currencies.Count currencies</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Symbol</th>
                            <th class="text-center">Decimals</th>
                            <th>Exchange Rate</th>
                            <th>Rate Source</th>
                            <th>Last Updated</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var currency in Model.Currencies)
                        {
                            <tr class="@(currency.IsBaseCurrency ? "table-primary" : "")">
                                <td>
                                    <strong>@currency.Code</strong>
                                    @if (currency.IsBaseCurrency)
                                    {
                                        <span class="badge bg-primary ms-1">Base</span>
                                    }
                                </td>
                                <td>@currency.Name</td>
                                <td><span class="badge bg-secondary">@currency.Symbol</span></td>
                                <td class="text-center">@currency.DecimalPlaces</td>
                                <td>
                                    @if (currency.IsBaseCurrency)
                                    {
                                        <span class="text-muted">1.000000 (Base)</span>
                                    }
                                    else if (currency.ExchangeRateToBase.HasValue)
                                    {
                                        <span>@currency.ExchangeRateToBase.Value.ToString("F6")</span>
                                    }
                                    else
                                    {
                                        <span class="text-warning">Not set</span>
                                    }
                                </td>
                                <td>
                                    @if (currency.IsBaseCurrency)
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                    else if (!string.IsNullOrEmpty(currency.ExchangeRateSource))
                                    {
                                        <span class="badge bg-info">@currency.ExchangeRateSource</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (currency.ExchangeRateUpdatedAt.HasValue)
                                    {
                                        <small>@currency.ExchangeRateUpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (currency.IsEnabled)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Disabled</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="Edit" asp-route-id="@currency.Id" class="btn btn-sm btn-outline-primary">
                                            Edit
                                        </a>
                                        @if (!currency.IsBaseCurrency)
                                        {
                                            <a asp-page="SetBaseCurrency" asp-route-id="@currency.Id" class="btn btn-sm btn-outline-warning">
                                                Set as Base
                                            </a>
                                        }
                                        <a asp-page="History" asp-route-id="@currency.Id" class="btn btn-sm btn-outline-secondary">
                                            History
                                        </a>
                                    </div>
                                    <div class="btn-group ms-1" role="group">
                                        @if (currency.IsEnabled && !currency.IsBaseCurrency)
                                        {
                                            <form method="post" asp-page-handler="Disable" asp-route-id="@currency.Id" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to disable this currency?');">
                                                    Disable
                                                </button>
                                            </form>
                                        }
                                        else if (!currency.IsEnabled)
                                        {
                                            <form method="post" asp-page-handler="Enable" asp-route-id="@currency.Id" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-success">
                                                    Enable
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h6 class="mb-0">About Exchange Rates</h6>
        </div>
        <div class="card-body">
            <p class="small text-muted mb-0">
                <strong>Exchange rate loading is handled by another module or integration.</strong>
                This section only configures available currencies and the base currency.
                When viewing exchange rates:
            </p>
            <ul class="small text-muted mt-2 mb-0">
                <li><strong>Rate Source:</strong> Indicates where the exchange rate data comes from (e.g., ECB, Manual)</li>
                <li><strong>Last Updated:</strong> Shows when the exchange rate was last refreshed from the source</li>
                <li><strong>Exchange Rate:</strong> The rate relative to the base currency (how many base currency units = 1 of this currency)</li>
            </ul>
        </div>
    </div>

    <div class="card mt-3 border-warning">
        <div class="card-header bg-warning text-dark">
            <h6 class="mb-0">Important Notes</h6>
        </div>
        <div class="card-body">
            <ul class="small text-muted mb-0">
                <li>Disabling a currency does not affect existing historical data, listings, or completed transactions.</li>
                <li>Disabled currencies cannot be used for new listings or transactions.</li>
                <li>The base currency cannot be disabled. To disable it, first set another currency as the base.</li>
                <li>Changing the base currency is a significant operation and may require recalculation of all exchange rates.</li>
            </ul>
        </div>
    </div>
}

<div class="mt-4">
    <a asp-page="/Admin/Index" class="btn btn-outline-secondary">
        &laquo; Back to Admin Dashboard
    </a>
</div>
