@page "{id:guid}"
@model Mercato.Web.Pages.Admin.Currencies.EditModel
@{
    ViewData["Title"] = "Edit Currency";
}

<h1>Edit Currency</h1>

<div class="alert alert-info">
    <strong>Edit currency</strong> - Modify currency settings. All changes are tracked in history.
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Currency Details</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Input.Id" />
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label class="form-label">Currency Code</label>
                        <input type="text" class="form-control" value="@Model.Code" disabled />
                        <small class="form-text text-muted">Currency code cannot be changed after creation.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label"></label>
                        <input asp-for="Input.Name" class="form-control" placeholder="e.g., United States Dollar" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                        <small class="form-text text-muted">Full name of the currency.</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Symbol" class="form-label"></label>
                            <input asp-for="Input.Symbol" class="form-control" placeholder="e.g., $, €, £" maxlength="5" />
                            <span asp-validation-for="Input.Symbol" class="text-danger"></span>
                            <small class="form-text text-muted">Currency symbol for display.</small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.DecimalPlaces" class="form-label"></label>
                            <input asp-for="Input.DecimalPlaces" type="number" class="form-control" min="0" max="8" />
                            <span asp-validation-for="Input.DecimalPlaces" class="text-danger"></span>
                            <small class="form-text text-muted">Number of decimal places (typically 2).</small>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Currency Status</h6>
            </div>
            <div class="card-body">
                <dl class="row mb-0 small">
                    <dt class="col-sm-5">Code:</dt>
                    <dd class="col-sm-7"><span class="badge bg-primary">@Model.Code</span></dd>
                    
                    <dt class="col-sm-5">Is Base:</dt>
                    <dd class="col-sm-7">
                        @if (Model.IsBaseCurrency)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-5">Status:</dt>
                    <dd class="col-sm-7">
                        @if (Model.IsEnabled)
                        {
                            <span class="badge bg-success">Enabled</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Disabled</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">Exchange Rate Information</h6>
            </div>
            <div class="card-body">
                <dl class="row mb-0 small">
                    <dt class="col-sm-5">Rate:</dt>
                    <dd class="col-sm-7">
                        @if (Model.IsBaseCurrency)
                        {
                            <span>1.000000 (Base)</span>
                        }
                        else if (Model.ExchangeRateToBase.HasValue)
                        {
                            <span>@Model.ExchangeRateToBase.Value.ToString("F6")</span>
                        }
                        else
                        {
                            <span class="text-muted">Not set</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-5">Source:</dt>
                    <dd class="col-sm-7">
                        @if (!string.IsNullOrEmpty(Model.ExchangeRateSource))
                        {
                            <span class="badge bg-info">@Model.ExchangeRateSource</span>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-5">Updated:</dt>
                    <dd class="col-sm-7">
                        @if (Model.ExchangeRateUpdatedAt.HasValue)
                        {
                            <small>@Model.ExchangeRateUpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")</small>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">Audit Information</h6>
            </div>
            <div class="card-body">
                <dl class="row mb-0 small">
                    <dt class="col-sm-5">Created:</dt>
                    <dd class="col-sm-7">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
                    
                    <dt class="col-sm-5">Created By:</dt>
                    <dd class="col-sm-7">@(Model.CreatedByUserId ?? "Unknown")</dd>
                    
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <dt class="col-sm-5">Updated:</dt>
                        <dd class="col-sm-7">@Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")</dd>
                        
                        <dt class="col-sm-5">Updated By:</dt>
                        <dd class="col-sm-7">@(Model.UpdatedByUserId ?? "Unknown")</dd>
                    }
                </dl>
                <div class="mt-3">
                    <a asp-page="History" asp-route-id="@Model.Input.Id" class="btn btn-sm btn-outline-secondary w-100">
                        View Change History
                    </a>
                </div>
            </div>
        </div>

        <div class="card mt-3 border-info">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">Note</h6>
            </div>
            <div class="card-body">
                <p class="small text-muted mb-0">
                    The currency code cannot be changed after creation.
                    Enable/disable and base currency settings are managed
                    from the currency list page.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
