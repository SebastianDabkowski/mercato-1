@page "{categoryId:guid}/{attributeId:guid}"
@model Mercato.Web.Pages.Admin.Categories.Attributes.EditModel
@using Mercato.Product.Domain.Entities
@{
    ViewData["Title"] = $"Edit Attribute - {Model.Category?.Name}";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Admin/Index">Admin</a></li>
        <li class="breadcrumb-item"><a asp-page="/Admin/Categories/Index">Categories</a></li>
        <li class="breadcrumb-item"><a asp-page="/Admin/Categories/Attributes/Index" asp-route-categoryId="@Model.Category?.Id">@Model.Category?.Name Attributes</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Attribute</li>
    </ol>
</nav>

<h1>Edit Attribute</h1>
<h5 class="text-muted mb-4">Category: @Model.Category?.Name</h5>

<p class="text-muted">Update the attribute definition for this category.</p>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form method="post" id="attributeForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Command.AttributeId" />
                    <input type="hidden" asp-for="CategoryId" />

                    <div class="mb-3">
                        <label asp-for="Command.Name" class="form-label">Attribute Name <span class="text-danger">*</span></label>
                        <input asp-for="Command.Name" class="form-control" placeholder="e.g., Brand, Material, Screen Size" />
                        <span asp-validation-for="Command.Name" class="text-danger"></span>
                        <div class="form-text">The name that will be displayed to sellers when creating products.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Command.Type" class="form-label">Attribute Type <span class="text-danger">*</span></label>
                        <select asp-for="Command.Type" class="form-select" asp-items="Model.AttributeTypes" id="attributeType">
                        </select>
                        <span asp-validation-for="Command.Type" class="text-danger"></span>
                        <div class="form-text">Choose the type of data this attribute will hold.</div>
                    </div>

                    <div class="mb-3" id="listOptionsContainer" style="display: none;">
                        <label asp-for="Command.ListOptions" class="form-label">List Options <span class="text-danger">*</span></label>
                        <textarea asp-for="Command.ListOptions" class="form-control" rows="3" placeholder='["Option 1", "Option 2", "Option 3"]'></textarea>
                        <span asp-validation-for="Command.ListOptions" class="text-danger"></span>
                        <div class="form-text">Enter options as a JSON array of strings. Example: <code>["Small", "Medium", "Large"]</code></div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="Command.IsRequired" class="form-check-input" type="checkbox" />
                            <label asp-for="Command.IsRequired" class="form-check-label">Required</label>
                        </div>
                        <div class="form-text">If checked, sellers must provide a value for this attribute when creating products.</div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Command.IsDeprecated" class="form-check-input" type="checkbox" />
                            <label asp-for="Command.IsDeprecated" class="form-check-label">Deprecated</label>
                        </div>
                        <div class="form-text">
                            <span class="text-warning"><i class="bi bi-exclamation-triangle"></i></span>
                            Deprecated attributes are hidden from new product creation but remain visible for existing products and reports.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Command.DisplayOrder" class="form-label">Display Order</label>
                        <input asp-for="Command.DisplayOrder" type="number" class="form-control" min="0" />
                        <span asp-validation-for="Command.DisplayOrder" class="text-danger"></span>
                        <div class="form-text">Lower numbers appear first when displaying attributes to sellers.</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <a asp-page="Index" asp-route-categoryId="@Model.CategoryId" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Attribute Information</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Attribute ID</dt>
                    <dd class="col-sm-8"><code class="small">@Model.Command.AttributeId</code></dd>

                    <dt class="col-sm-4">Created</dt>
                    <dd class="col-sm-8">@Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>

                    <dt class="col-sm-4">Last Updated</dt>
                    <dd class="col-sm-8">@Model.LastUpdatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>
                </dl>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0">Attribute Types</h5>
            </div>
            <div class="card-body">
                <dl>
                    <dt><span class="badge bg-info">Text</span></dt>
                    <dd class="small">Free-form text input for values like brand names, descriptions, or specifications.</dd>

                    <dt><span class="badge bg-primary">Number</span></dt>
                    <dd class="small">Numeric values for measurements, quantities, or ratings.</dd>

                    <dt><span class="badge bg-secondary">List</span></dt>
                    <dd class="small">Predefined options for consistent data entry. Ideal for sizes, colors, or materials.</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-page="Index" asp-route-categoryId="@Model.CategoryId" class="btn btn-outline-secondary">
        &laquo; Back to Attributes
    </a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var typeSelect = document.getElementById('attributeType');
            var listOptionsContainer = document.getElementById('listOptionsContainer');

            function toggleListOptions() {
                // CategoryAttributeType.List = 2
                if (typeSelect.value === '2') {
                    listOptionsContainer.style.display = 'block';
                } else {
                    listOptionsContainer.style.display = 'none';
                }
            }

            typeSelect.addEventListener('change', toggleListOptions);
            toggleListOptions(); // Initial state
        });
    </script>
}
