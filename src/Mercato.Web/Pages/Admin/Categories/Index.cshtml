@page
@model Mercato.Web.Pages.Admin.Categories.IndexModel
@{
    ViewData["Title"] = "Category Management";
}

<h1>Category Management</h1>

<p class="text-muted">Manage the global product category tree. Categories help organize products for consistent discovery.</p>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="mb-4">
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Category
    </a>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Category Tree</h5>
        <div>
            <span class="badge bg-success">Active</span>
            <span class="badge bg-secondary">Inactive</span>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Categories.Count == 0)
        {
            <div class="alert alert-info">
                No categories found. Create your first category to get started.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Slug</th>
                            <th scope="col">Description</th>
                            <th scope="col">Parent</th>
                            <th scope="col">Order</th>
                            <th scope="col">Status</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            var parentName = category.ParentId.HasValue && Model.CategoryLookup.TryGetValue(category.ParentId.Value, out var parent)
                                ? parent.Name 
                                : category.ParentId.HasValue ? "Unknown" : "(Root)";
                            var badgeClass = category.IsActive ? "bg-success" : "bg-secondary";
                            var statusText = category.IsActive ? "Active" : "Inactive";
                            var indent = "";
                            if (category.ParentId.HasValue)
                            {
                                indent = "└─ ";
                            }
                            var truncatedDescription = !string.IsNullOrEmpty(category.Description) && category.Description.Length > 50 
                                ? category.Description.Substring(0, 50) + "..." 
                                : category.Description ?? "";
                            <tr class="@(category.IsActive ? "" : "text-muted")">
                                <td>
                                    @if (category.ParentId.HasValue)
                                    {
                                        <span class="text-muted">@indent</span>
                                    }
                                    @category.Name
                                </td>
                                <td><code class="small">@category.Slug</code></td>
                                <td class="small" title="@category.Description">@truncatedDescription</td>
                                <td>@parentName</td>
                                <td>@category.DisplayOrder</td>
                                <td>
                                    <span class="badge @badgeClass">@statusText</span>
                                </td>
                                <td>
                                    <a asp-page="Edit" asp-route-id="@category.Id" 
                                       class="btn btn-sm btn-outline-primary"
                                       title="Edit category">
                                        Edit
                                    </a>
                                    @if (category.IsActive)
                                    {
                                        <form method="post" asp-page-handler="Deactivate" asp-route-id="@category.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-warning" 
                                                    onclick="return confirm('Are you sure you want to deactivate this category?');"
                                                    title="Deactivate category">
                                                Deactivate
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post" asp-page-handler="Activate" asp-route-id="@category.Id" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-success" 
                                                    title="Activate category">
                                                Activate
                                            </button>
                                        </form>
                                    }
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@category.Id" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Are you sure you want to delete this category? This action cannot be undone.');"
                                                title="Delete category">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-page="/Admin/Index" class="btn btn-secondary">
        &laquo; Back to Admin Portal
    </a>
</div>
