@page
@model Mercato.Web.Pages.Admin.Categories.CreateModel
@{
    ViewData["Title"] = "Create Category";
}

<h1>Create Category</h1>

<p class="text-muted">Add a new category to the product catalog.</p>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Command.Name" class="form-label">Category Name <span class="text-danger">*</span></label>
                        <input asp-for="Command.Name" class="form-control" placeholder="Enter category name" />
                        <span asp-validation-for="Command.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Command.Description" class="form-label">Description</label>
                        <textarea asp-for="Command.Description" class="form-control" rows="3" placeholder="Optional description for the category"></textarea>
                        <span asp-validation-for="Command.Description" class="text-danger"></span>
                        <div class="form-text">A brief description of what products this category contains.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Command.ParentId" class="form-label">Parent Category</label>
                        <select asp-for="Command.ParentId" class="form-select" asp-items="Model.ParentCategories">
                            <option value="">-- No Parent (Root Category) --</option>
                        </select>
                        <span asp-validation-for="Command.ParentId" class="text-danger"></span>
                        <div class="form-text">Leave empty to create a root-level category.</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Create Category</button>
                        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-page="Index" class="btn btn-outline-secondary">
        &laquo; Back to Categories
    </a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
