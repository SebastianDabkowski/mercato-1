@page "{id:guid}"
@model Mercato.Web.Pages.Admin.Categories.EditModel
@{
    ViewData["Title"] = "Edit Category";
}

<h1>Edit Category</h1>

<p class="text-muted">Update the category details.</p>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Command.CategoryId" />
                    
                    <div class="mb-3">
                        <label asp-for="Command.Name" class="form-label">Category Name <span class="text-danger">*</span></label>
                        <input asp-for="Command.Name" class="form-control" placeholder="Enter category name" />
                        <span asp-validation-for="Command.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Command.Slug" class="form-label">URL Slug <span class="text-danger">*</span></label>
                        <input asp-for="Command.Slug" class="form-control" placeholder="e.g., electronics-accessories" />
                        <span asp-validation-for="Command.Slug" class="text-danger"></span>
                        <div class="form-text">
                            SEO-friendly URL identifier. Use lowercase letters, numbers, and hyphens only.
                            <br /><small class="text-warning"><i class="bi bi-exclamation-triangle"></i> Changing the slug may affect existing bookmarks and search rankings.</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Command.Description" class="form-label">Description</label>
                        <textarea asp-for="Command.Description" class="form-control" rows="3" placeholder="Optional description for the category"></textarea>
                        <span asp-validation-for="Command.Description" class="text-danger"></span>
                        <div class="form-text">A brief description of what products this category contains.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Command.ParentId" class="form-label">Parent Category</label>
                        <select asp-for="Command.ParentId" class="form-select" asp-items="Model.ParentCategories">
                            <option value="">-- No Parent (Root Category) --</option>
                        </select>
                        <span asp-validation-for="Command.ParentId" class="text-danger"></span>
                        <div class="form-text">Leave empty to make this a root-level category.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Command.DisplayOrder" class="form-label">Display Order</label>
                        <input asp-for="Command.DisplayOrder" type="number" class="form-control" min="0" />
                        <span asp-validation-for="Command.DisplayOrder" class="text-danger"></span>
                        <div class="form-text">Lower numbers appear first when ordering siblings.</div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Command.IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="Command.IsActive" class="form-check-label">Active</label>
                        </div>
                        <div class="form-text">Inactive categories are hidden from product assignments and browsing.</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Category Information</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Category ID</dt>
                    <dd class="col-sm-8"><code>@Model.Command.CategoryId</code></dd>
                    
                    <dt class="col-sm-4">Created</dt>
                    <dd class="col-sm-8">@Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>
                    
                    <dt class="col-sm-4">Last Updated</dt>
                    <dd class="col-sm-8">@Model.LastUpdatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-page="Index" class="btn btn-outline-secondary">
        &laquo; Back to Categories
    </a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
