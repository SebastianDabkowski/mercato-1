@page
@model Mercato.Web.Pages.Admin.Photos.IndexModel
@{
    ViewData["Title"] = "Photo Moderation";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-image me-2"></i>Photo Moderation</h1>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @* Filter Section *@
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Photos</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-page="Index">
                <div class="row g-3">
                    @* Flagged Only Filter *@
                    <div class="col-md-3">
                        <div class="form-check mt-4">
                            <input type="checkbox" name="FlaggedOnly" value="true" class="form-check-input" 
                                   id="flaggedOnly" checked="@Model.FlaggedOnly" />
                            <label class="form-check-label" for="flaggedOnly">
                                <i class="bi bi-flag text-danger me-1"></i>Flagged Photos Only
                            </label>
                        </div>
                    </div>

                    <div class="col-md-4 d-flex align-items-end">
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search me-1"></i>Search
                            </button>
                            <a asp-page="Index" class="btn btn-outline-secondary ms-2">
                                <i class="bi bi-x-circle me-1"></i>Clear
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @* Quick Filters *@
    <div class="mb-3">
        <span class="text-muted me-2">Quick Filters:</span>
        <a asp-page="Index" class="btn btn-sm btn-outline-warning me-1">
            <i class="bi bi-hourglass-split me-1"></i>All Pending
        </a>
        <a asp-page="Index" asp-route-FlaggedOnly="true" class="btn btn-sm btn-outline-danger me-1">
            <i class="bi bi-flag me-1"></i>Flagged Only
        </a>
    </div>

    @* Results Summary *@
    @if (Model.TotalCount > 0)
    {
        <p class="text-muted">
            Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) of @Model.TotalCount photo@(Model.TotalCount > 1 ? "s" : "") pending review
        </p>
    }

    @if (Model.Photos.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
            <h3 class="mt-3 text-muted">No Photos Pending Review</h3>
            <p class="text-muted">All photos have been moderated. Great job!</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            @foreach (var photo in Model.Photos)
            {
                <div class="col">
                    <div class="card h-100 @(photo.IsFlagged ? "border-danger" : "")">
                        <div class="position-relative">
                            @{
                                var imageSrc = !string.IsNullOrEmpty(photo.ThumbnailPath) 
                                    ? photo.ThumbnailPath 
                                    : photo.StoragePath;
                                    
                                // Use centralized path validation for security
                                var isValidPath = ImagePathValidator.IsValidPath(imageSrc);
                            }
                            @if (!string.IsNullOrEmpty(imageSrc) && isValidPath)
                            {
                                <img src="@imageSrc" class="card-img-top" alt="Product photo"
                                     style="height: 200px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                     style="height: 200px;">
                                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                </div>
                            }
                            @if (photo.IsFlagged)
                            {
                                <span class="position-absolute top-0 end-0 badge bg-danger m-2">
                                    <i class="bi bi-flag me-1"></i>Flagged
                                </span>
                            }
                        </div>
                        <div class="card-body">
                            <h6 class="card-title text-truncate" title="@photo.ProductTitle">
                                @photo.ProductTitle
                            </h6>
                            <p class="card-text small text-muted mb-2">
                                <i class="bi bi-shop me-1"></i>@photo.StoreName
                            </p>
                            @if (photo.IsFlagged && !string.IsNullOrEmpty(photo.FlagReason))
                            {
                                <p class="card-text small text-danger mb-2">
                                    <i class="bi bi-exclamation-triangle me-1"></i>@photo.FlagReason
                                </p>
                            }
                            <p class="card-text small text-muted">
                                <i class="bi bi-calendar me-1"></i>Uploaded @photo.CreatedAt.ToString("MMM dd, yyyy")
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-page="Details" asp-route-id="@photo.Id" class="btn btn-primary btn-sm w-100">
                                <i class="bi bi-eye me-1"></i>Review Photo
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @* Pagination *@
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Photo list pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage - 1)">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    @{
                        var startPage = Math.Max(1, Model.CurrentPage - 2);
                        var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);

                        if (startPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(1)">1</a>
                            </li>
                            if (startPage > 2)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                        }

                        for (var i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Model.GetPaginationQueryString(i)">@i</a>
                            </li>
                        }

                        if (endPage < Model.TotalPages)
                        {
                            if (endPage < Model.TotalPages - 1)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(Model.TotalPages)">@Model.TotalPages</a>
                            </li>
                        }
                    }

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage + 1)">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
