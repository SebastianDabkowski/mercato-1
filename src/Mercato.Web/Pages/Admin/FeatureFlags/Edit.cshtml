@page "{id:guid}"
@model Mercato.Web.Pages.Admin.FeatureFlags.EditModel
@{
    ViewData["Title"] = "Edit Feature Flag";
}

<h1>Edit Feature Flag</h1>

<div class="alert alert-info">
    <strong>Edit feature flag</strong> - Modify settings and targeting. All changes are tracked in history.
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Flag Details</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Input.Id" />
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Key" class="form-label"></label>
                        <input asp-for="Input.Key" class="form-control" placeholder="e.g., enable_new_checkout" />
                        <span asp-validation-for="Input.Key" class="text-danger"></span>
                        <small class="form-text text-muted">Unique key used in code. Use lowercase letters, numbers, underscores, and hyphens only.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label"></label>
                        <input asp-for="Input.Name" class="form-control" placeholder="e.g., New Checkout Experience" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                        <small class="form-text text-muted">A descriptive name for this feature flag.</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label"></label>
                        <textarea asp-for="Input.Description" class="form-control" rows="3" placeholder="Describe what this feature flag controls..."></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>

                    <hr class="my-4">
                    <h6>Environment & Targeting</h6>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Environment" class="form-label"></label>
                            <select asp-for="Input.Environment" class="form-select">
                                <option value="Development">Development</option>
                                <option value="Testing">Testing</option>
                                <option value="Staging">Staging</option>
                                <option value="Production">Production</option>
                            </select>
                            <span asp-validation-for="Input.Environment" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.TargetType" class="form-label"></label>
                            <select asp-for="Input.TargetType" class="form-select" id="targetTypeSelect">
                                <option value="None">None (Global)</option>
                                <option value="AllUsers">All Users</option>
                                <option value="InternalUsers">Internal Users Only</option>
                                <option value="SpecificSellers">Specific Sellers</option>
                                <option value="PercentageRollout">Percentage Rollout</option>
                            </select>
                            <span asp-validation-for="Input.TargetType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3" id="targetValueContainer">
                        <label asp-for="Input.TargetValue" class="form-label">Target Value</label>
                        <input asp-for="Input.TargetValue" class="form-control" placeholder="Enter value for SpecificSellers or PercentageRollout" />
                        <span asp-validation-for="Input.TargetValue" class="text-danger"></span>
                        <small class="form-text text-muted">For SpecificSellers: JSON array like ["seller-1", "seller-2"]. For PercentageRollout: number 0-100.</small>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Input.IsEnabled" class="form-check-input" />
                        <label asp-for="Input.IsEnabled" class="form-check-label"></label>
                        <small class="form-text text-muted d-block">Enable or disable the feature flag.</small>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <a asp-page="Index" class="btn btn-outline-secondary">Cancel</a>
                            <form method="post" asp-page-handler="Delete" class="d-inline ms-2">
                                <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this feature flag?');">Delete</button>
                            </form>
                        </div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Audit Information</h6>
            </div>
            <div class="card-body">
                <dl class="row mb-0 small">
                    <dt class="col-sm-4">Created:</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
                    
                    <dt class="col-sm-4">Created By:</dt>
                    <dd class="col-sm-8">@(Model.CreatedByUserId ?? "Unknown")</dd>
                    
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <dt class="col-sm-4">Updated:</dt>
                        <dd class="col-sm-8">@Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")</dd>
                        
                        <dt class="col-sm-4">Updated By:</dt>
                        <dd class="col-sm-8">@(Model.UpdatedByUserId ?? "Unknown")</dd>
                    }
                </dl>
                <div class="mt-3">
                    <a asp-page="History" asp-route-id="@Model.Input.Id" class="btn btn-sm btn-outline-secondary w-100">
                        View Change History
                    </a>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">Target Types</h6>
            </div>
            <div class="card-body">
                <dl class="small mb-0">
                    <dt>None / All Users</dt>
                    <dd class="text-muted">The flag applies globally when enabled.</dd>

                    <dt>Internal Users</dt>
                    <dd class="text-muted">Only users with "internal-" prefix or "@@internal" in their ID.</dd>

                    <dt>Specific Sellers</dt>
                    <dd class="text-muted">JSON array of seller IDs, e.g., <code>["seller-1", "seller-2"]</code></dd>

                    <dt>Percentage Rollout</dt>
                    <dd class="text-muted">Number 0-100 for gradual rollout.</dd>
                </dl>
            </div>
        </div>

        <div class="card mt-3 border-warning">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0">Production Warning</h6>
            </div>
            <div class="card-body">
                <p class="small text-muted mb-0">
                    Changing flags in Production affects live users immediately. Test changes in lower environments first.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
