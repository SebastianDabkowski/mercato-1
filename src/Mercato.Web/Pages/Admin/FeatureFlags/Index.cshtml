@page
@model Mercato.Web.Pages.Admin.FeatureFlags.IndexModel
@{
    ViewData["Title"] = "Feature Flags";
}

<h1>Feature Flags</h1>

<div class="alert alert-info">
    <strong>Feature Flag Management</strong> - Control feature availability across different environments and user groups
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-md-6">
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Feature Flag
        </a>
    </div>
    <div class="col-md-6">
        <form method="get" class="d-flex justify-content-end">
            <label class="me-2 align-self-center">Environment:</label>
            <select name="environment" class="form-select w-auto" onchange="this.form.submit()">
                <option value="">All Environments</option>
                <option value="Development" selected="@(Model.SelectedEnvironment == "Development")">Development</option>
                <option value="Testing" selected="@(Model.SelectedEnvironment == "Testing")">Testing</option>
                <option value="Staging" selected="@(Model.SelectedEnvironment == "Staging")">Staging</option>
                <option value="Production" selected="@(Model.SelectedEnvironment == "Production")">Production</option>
            </select>
        </form>
    </div>
</div>

@if (Model.Flags.Count == 0)
{
    <div class="alert alert-warning">
        <strong>No feature flags found.</strong> Create a new flag to control feature availability.
    </div>
}
else
{
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Feature Flags</h5>
            <span class="badge bg-secondary">@Model.Flags.Count flags</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Key</th>
                            <th>Name</th>
                            <th>Environment</th>
                            <th>Target Type</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var flag in Model.Flags)
                        {
                            var environmentClass = flag.Environment switch
                            {
                                Mercato.Admin.Domain.Entities.FeatureFlagEnvironment.Development => "bg-info",
                                Mercato.Admin.Domain.Entities.FeatureFlagEnvironment.Testing => "bg-warning text-dark",
                                Mercato.Admin.Domain.Entities.FeatureFlagEnvironment.Staging => "bg-secondary",
                                Mercato.Admin.Domain.Entities.FeatureFlagEnvironment.Production => "bg-danger",
                                _ => "bg-secondary"
                            };
                            <tr>
                                <td>
                                    <code>@flag.Key</code>
                                </td>
                                <td>
                                    <strong>@flag.Name</strong>
                                    @if (!string.IsNullOrEmpty(flag.Description))
                                    {
                                        <br />
                                        <small class="text-muted">@flag.Description</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge @environmentClass">@flag.Environment</span>
                                </td>
                                <td>
                                    @GetTargetTypeDisplay(flag.TargetType, flag.TargetValue)
                                </td>
                                <td>
                                    @if (flag.IsEnabled)
                                    {
                                        <span class="badge bg-success">Enabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Disabled</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <form method="post" asp-page-handler="Toggle" asp-route-id="@flag.Id" asp-route-isEnabled="@(!flag.IsEnabled)" class="d-inline">
                                            <button type="submit" class="btn btn-sm @(flag.IsEnabled ? "btn-outline-warning" : "btn-outline-success")">
                                                @(flag.IsEnabled ? "Disable" : "Enable")
                                            </button>
                                        </form>
                                        <a asp-page="Edit" asp-route-id="@flag.Id" class="btn btn-sm btn-outline-primary">
                                            Edit
                                        </a>
                                        <a asp-page="History" asp-route-id="@flag.Id" class="btn btn-sm btn-outline-secondary">
                                            History
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h6 class="mb-0">Target Types</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <strong>None/All Users</strong>
                    <small class="text-muted d-block">Flag applies to everyone when enabled</small>
                </div>
                <div class="col-md-3">
                    <strong>Internal Users</strong>
                    <small class="text-muted d-block">Flag applies only to internal/employee users</small>
                </div>
                <div class="col-md-3">
                    <strong>Specific Sellers</strong>
                    <small class="text-muted d-block">Flag applies to specific seller IDs</small>
                </div>
                <div class="col-md-3">
                    <strong>Percentage Rollout</strong>
                    <small class="text-muted d-block">Flag applies to a percentage of users</small>
                </div>
            </div>
        </div>
    </div>
}

<div class="mt-4">
    <a asp-page="/Admin/Index" class="btn btn-outline-secondary">
        &laquo; Back to Admin Dashboard
    </a>
</div>

@functions {
    private string GetTargetTypeDisplay(Mercato.Admin.Domain.Entities.FeatureFlagTargetType targetType, string? targetValue)
    {
        return targetType switch
        {
            Mercato.Admin.Domain.Entities.FeatureFlagTargetType.None => "None",
            Mercato.Admin.Domain.Entities.FeatureFlagTargetType.AllUsers => "All Users",
            Mercato.Admin.Domain.Entities.FeatureFlagTargetType.InternalUsers => "Internal Users",
            Mercato.Admin.Domain.Entities.FeatureFlagTargetType.SpecificSellers => $"Specific Sellers",
            Mercato.Admin.Domain.Entities.FeatureFlagTargetType.PercentageRollout => $"{targetValue}% Rollout",
            _ => "Unknown"
        };
    }
}
