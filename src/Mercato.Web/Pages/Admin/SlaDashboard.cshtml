@page
@using Mercato.Admin.Domain.Entities
@using Mercato.Admin.Domain.Interfaces
@model Mercato.Web.Pages.Admin.SlaDashboardModel
@{
    ViewData["Title"] = "SLA Dashboard";
}

<h1>SLA Dashboard</h1>
<p class="text-muted">Track SLA compliance for return and complaint cases and monitor seller responsiveness.</p>

<!-- Time Period Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="TimePeriod" class="form-label">Time Period</label>
                <select asp-for="TimePeriod" class="form-select" id="TimePeriod">
                    <option value="7d">Last 7 Days</option>
                    <option value="30d">Last 30 Days</option>
                    <option value="90d">Last 90 Days</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Apply</button>
            </div>
        </form>
    </div>
</div>

@if (Model.Statistics != null)
{
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title text-muted">Total Cases</h5>
                    <h2 class="display-4">@Model.Statistics.TotalCases</h2>
                    <small class="text-muted">@Model.Statistics.OpenCases open</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 @(Model.Statistics.SlaCompliancePercentage >= 80 ? "bg-success text-white" : Model.Statistics.SlaCompliancePercentage >= 50 ? "bg-warning" : "bg-danger text-white")">
                <div class="card-body">
                    <h5 class="card-title">SLA Compliance</h5>
                    <h2 class="display-4">@Model.Statistics.SlaCompliancePercentage%</h2>
                    <small>@Model.Statistics.CasesResolvedWithinSla resolved within SLA</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 @(Model.Statistics.CurrentlyBreachedCases > 0 ? "bg-danger text-white" : "bg-success text-white")">
                <div class="card-body">
                    <h5 class="card-title">Currently Breached</h5>
                    <h2 class="display-4">@Model.Statistics.CurrentlyBreachedCases</h2>
                    <small>Cases needing attention</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title text-muted">Avg Response Time</h5>
                    <h2 class="display-4">@SlaDashboardModel.FormatDuration(Model.Statistics.AverageResponseTimeHours)</h2>
                    <small class="text-muted">Avg resolution: @SlaDashboardModel.FormatDuration(Model.Statistics.AverageResolutionTimeHours)</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Breach Statistics -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">First Response SLA</h5>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Compliance Rate</span>
                        <span class="badge @SlaDashboardModel.GetComplianceBadgeClass(Model.Statistics.FirstResponseCompliancePercentage)">
                            @Model.Statistics.FirstResponseCompliancePercentage%
                        </span>
                    </div>
                    <div class="progress" style="height: 25px;">
                        <div class="progress-bar bg-success" role="progressbar" 
                             style="width: @Model.Statistics.FirstResponseCompliancePercentage%"
                             aria-valuenow="@Model.Statistics.FirstResponseCompliancePercentage" 
                             aria-valuemin="0" aria-valuemax="100">
                            @Model.Statistics.CasesRespondedWithinSla within SLA
                        </div>
                        <div class="progress-bar bg-danger" role="progressbar" 
                             style="width: @(100 - Model.Statistics.FirstResponseCompliancePercentage)%"
                             aria-valuenow="@(100 - Model.Statistics.FirstResponseCompliancePercentage)" 
                             aria-valuemin="0" aria-valuemax="100">
                            @Model.Statistics.TotalFirstResponseBreaches breached
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Resolution SLA</h5>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Compliance Rate</span>
                        <span class="badge @SlaDashboardModel.GetComplianceBadgeClass(Model.Statistics.SlaCompliancePercentage)">
                            @Model.Statistics.SlaCompliancePercentage%
                        </span>
                    </div>
                    <div class="progress" style="height: 25px;">
                        <div class="progress-bar bg-success" role="progressbar" 
                             style="width: @Model.Statistics.SlaCompliancePercentage%"
                             aria-valuenow="@Model.Statistics.SlaCompliancePercentage" 
                             aria-valuemin="0" aria-valuemax="100">
                            @Model.Statistics.CasesResolvedWithinSla within SLA
                        </div>
                        <div class="progress-bar bg-danger" role="progressbar" 
                             style="width: @(100 - Model.Statistics.SlaCompliancePercentage)%"
                             aria-valuenow="@(100 - Model.Statistics.SlaCompliancePercentage)" 
                             aria-valuemin="0" aria-valuemax="100">
                            @Model.Statistics.TotalResolutionBreaches breached
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Breached Cases Alert -->
@if (Model.BreachedCases.Count > 0)
{
    <div class="card mb-4 border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill"></i> Cases with SLA Breach (@Model.BreachedCases.Count)
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Case Number</th>
                            <th>Type</th>
                            <th>Store</th>
                            <th>Created</th>
                            <th>Status</th>
                            <th>First Response</th>
                            <th>Resolution</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var caseRecord in Model.BreachedCases)
                        {
                            <tr>
                                <td><strong>@caseRecord.CaseNumber</strong></td>
                                <td>@caseRecord.CaseType</td>
                                <td>@caseRecord.StoreName</td>
                                <td>@caseRecord.CaseCreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    <span class="badge @SlaDashboardModel.GetStatusBadgeClass(caseRecord.Status)">
                                        @caseRecord.Status
                                    </span>
                                </td>
                                <td>
                                    @if (caseRecord.IsFirstResponseBreached)
                                    {
                                        <span class="badge bg-danger">Breached</span>
                                    }
                                    else if (caseRecord.FirstResponseAt.HasValue)
                                    {
                                        <span class="badge bg-success">On Time</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Pending</span>
                                    }
                                </td>
                                <td>
                                    @if (caseRecord.IsResolutionBreached)
                                    {
                                        <span class="badge bg-danger">Breached</span>
                                    }
                                    else if (caseRecord.ResolvedAt.HasValue)
                                    {
                                        <span class="badge bg-success">On Time</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Pending</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-success mb-4">
        <i class="bi bi-check-circle-fill"></i> No cases with SLA breaches currently requiring attention.
    </div>
}

<!-- Seller Statistics -->
@if (Model.SellerStatistics.Count > 0)
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Seller SLA Performance</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Store</th>
                            <th>Total Cases</th>
                            <th>First Response Compliance</th>
                            <th>Resolution Compliance</th>
                            <th>Avg Response Time</th>
                            <th>Avg Resolution Time</th>
                            <th>Breaches</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var seller in Model.SellerStatistics)
                        {
                            <tr>
                                <td><strong>@seller.StoreName</strong></td>
                                <td>@seller.TotalCases</td>
                                <td>
                                    <span class="badge @SlaDashboardModel.GetComplianceBadgeClass(seller.FirstResponseCompliancePercentage)">
                                        @seller.FirstResponseCompliancePercentage%
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @SlaDashboardModel.GetComplianceBadgeClass(seller.SlaCompliancePercentage)">
                                        @seller.SlaCompliancePercentage%
                                    </span>
                                </td>
                                <td>@SlaDashboardModel.FormatDuration(seller.AverageResponseTimeHours)</td>
                                <td>@SlaDashboardModel.FormatDuration(seller.AverageResolutionTimeHours)</td>
                                <td>
                                    @if (seller.FirstResponseBreaches > 0 || seller.ResolutionBreaches > 0)
                                    {
                                        <span class="text-danger">
                                            @seller.FirstResponseBreaches / @seller.ResolutionBreaches
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-success">0 / 0</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info mb-4">
        No seller statistics available for the selected time period.
    </div>
}

<!-- SLA Configurations -->
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">SLA Configurations</h5>
    </div>
    <div class="card-body">
        @if (Model.SlaConfigurations.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Case Type</th>
                            <th>Category</th>
                            <th>First Response (hours)</th>
                            <th>Resolution (hours)</th>
                            <th>Priority</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var config in Model.SlaConfigurations)
                        {
                            <tr>
                                <td><strong>@config.Name</strong></td>
                                <td>@(config.CaseType ?? "All")</td>
                                <td>@(config.Category ?? "All")</td>
                                <td>@config.FirstResponseDeadlineHours</td>
                                <td>@config.ResolutionDeadlineHours</td>
                                <td>@config.Priority</td>
                                <td>
                                    @if (config.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning mb-0">
                <p class="mb-0">No SLA configurations defined. Using default values:</p>
                <ul class="mb-0 mt-2">
                    <li>First response deadline: 24 hours</li>
                    <li>Resolution deadline: 72 hours</li>
                </ul>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-page="/Admin/Index" class="btn btn-secondary">
        &laquo; Back to Admin Portal
    </a>
</div>
