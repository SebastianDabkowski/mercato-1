@page
@model Mercato.Web.Pages.Admin.Sellers.IndexModel
@{
    ViewData["Title"] = "Seller Approvals";
}

<h1>Seller Approvals</h1>

<p class="text-muted">Review and manage seller KYC submissions. Changes are logged for compliance purposes.</p>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Filter by Status</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3 align-items-center">
            <div class="col-auto">
                <label for="statusFilter" class="col-form-label">Status:</label>
            </div>
            <div class="col-auto">
                <select name="StatusFilter" id="statusFilter" class="form-select" onchange="this.form.submit()">
                    <option value="">All Statuses</option>
                    <option value="Pending" selected="@(Model.StatusFilter == "Pending")">Pending</option>
                    <option value="UnderReview" selected="@(Model.StatusFilter == "UnderReview")">Under Review</option>
                    <option value="Approved" selected="@(Model.StatusFilter == "Approved")">Approved</option>
                    <option value="Rejected" selected="@(Model.StatusFilter == "Rejected")">Rejected</option>
                </select>
            </div>
            <div class="col-auto">
                <a asp-page="Index" class="btn btn-outline-secondary">Clear Filter</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">KYC Submissions</h5>
    </div>
    <div class="card-body">
        @if (Model.Submissions.Count == 0)
        {
            <div class="alert alert-info">
                No KYC submissions found@(string.IsNullOrEmpty(Model.StatusFilter) ? "" : $" with status '{Model.StatusFilter}'").
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Seller ID</th>
                            <th scope="col">Document Type</th>
                            <th scope="col">Status</th>
                            <th scope="col">Submitted At</th>
                            <th scope="col">Reviewed At</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var submission in Model.Submissions)
                        {
                            var badgeClass = submission.Status switch
                            {
                                Mercato.Seller.Domain.Entities.KycStatus.Pending => "bg-warning text-dark",
                                Mercato.Seller.Domain.Entities.KycStatus.UnderReview => "bg-info text-dark",
                                Mercato.Seller.Domain.Entities.KycStatus.Approved => "bg-success",
                                Mercato.Seller.Domain.Entities.KycStatus.Rejected => "bg-danger",
                                _ => "bg-secondary"
                            };
                            <tr>
                                <td>@(Html.Encode(submission.SellerId[..Math.Min(8, submission.SellerId.Length)]))...</td>
                                <td>@submission.DocumentType</td>
                                <td>
                                    <span class="badge @badgeClass">@submission.Status</span>
                                </td>
                                <td>@submission.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @if (submission.ReviewedAt.HasValue)
                                    {
                                        @submission.ReviewedAt.Value.ToString("yyyy-MM-dd HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <a asp-page="Details" asp-route-id="@submission.Id" 
                                       class="btn btn-sm btn-outline-primary"
                                       title="View details">
                                        View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-page="/Admin/Index" class="btn btn-secondary">
        &laquo; Back to Admin Portal
    </a>
</div>
