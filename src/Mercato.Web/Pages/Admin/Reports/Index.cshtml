@page
@model Mercato.Web.Pages.Admin.Reports.IndexModel
@{
    ViewData["Title"] = "Order & Revenue Report";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-graph-up me-2"></i>Order & Revenue Report</h1>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @* Filter Section *@
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Report</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-page="Index">
                <div class="row g-3">
                    @* Date Range Filter *@
                    <div class="col-md-2">
                        <label class="form-label">From Date</label>
                        <input type="date" name="FromDate" class="form-control" 
                               value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">To Date</label>
                        <input type="date" name="ToDate" class="form-control" 
                               value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" />
                    </div>

                    @* Seller Filter *@
                    <div class="col-md-2">
                        <label class="form-label">Seller</label>
                        <select name="SellerId" class="form-select">
                            <option value="">All Sellers</option>
                            @foreach (var seller in Model.Sellers)
                            {
                                <option value="@seller.SellerId" selected="@(Model.SellerId == seller.SellerId)">
                                    @seller.SellerName
                                </option>
                            }
                        </select>
                    </div>

                    @* Order Status Filter *@
                    <div class="col-md-2">
                        <label class="form-label">Order Status</label>
                        <select name="OrderStatuses" class="form-select" multiple size="4">
                            @foreach (var status in IndexModel.AllOrderStatuses)
                            {
                                <option value="@status" selected="@Model.OrderStatuses.Contains(status)">
                                    @IndexModel.GetOrderStatusDisplayText(status)
                                </option>
                            }
                        </select>
                        <small class="text-muted">Hold Ctrl/Cmd to select multiple</small>
                    </div>

                    @* Payment Status Filter *@
                    <div class="col-md-2">
                        <label class="form-label">Payment Status</label>
                        <select name="PaymentStatuses" class="form-select" multiple size="4">
                            @foreach (var status in IndexModel.AllPaymentStatuses)
                            {
                                <option value="@status" selected="@Model.PaymentStatuses.Contains(status)">
                                    @IndexModel.GetPaymentStatusDisplayText(status)
                                </option>
                            }
                        </select>
                        <small class="text-muted">Hold Ctrl/Cmd to select multiple</small>
                    </div>

                    <div class="col-md-2 d-flex align-items-end">
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search me-1"></i>Search
                            </button>
                            <a asp-page="Index" class="btn btn-outline-secondary ms-1">
                                <i class="bi bi-x-circle me-1"></i>Clear
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @* Summary Cards *@
    @if (Model.TotalCount > 0)
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-1">Total Order Value</h6>
                        <h3 class="card-title mb-0">@Model.TotalOrderValue.ToString("C")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-1">Total Commission</h6>
                        <h3 class="card-title mb-0">@Model.TotalCommission.ToString("C")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-1">Total Payout Amount</h6>
                        <h3 class="card-title mb-0">@Model.TotalPayoutAmount.ToString("C")</h3>
                    </div>
                </div>
            </div>
        </div>
    }

    @* Export Button and Results Summary *@
    <div class="d-flex justify-content-between align-items-center mb-3">
        @if (Model.TotalCount > 0)
        {
            <p class="text-muted mb-0">
                Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) of @Model.TotalCount row@(Model.TotalCount > 1 ? "s" : "")
            </p>
            <form method="post" asp-page-handler="Export">
                @* Preserve filter values for export *@
                @if (Model.FromDate.HasValue)
                {
                    <input type="hidden" name="FromDate" value="@Model.FromDate.Value.ToString("yyyy-MM-dd")" />
                }
                @if (Model.ToDate.HasValue)
                {
                    <input type="hidden" name="ToDate" value="@Model.ToDate.Value.ToString("yyyy-MM-dd")" />
                }
                @if (Model.SellerId.HasValue)
                {
                    <input type="hidden" name="SellerId" value="@Model.SellerId.Value" />
                }
                @foreach (var status in Model.OrderStatuses)
                {
                    <input type="hidden" name="OrderStatuses" value="@status" />
                }
                @foreach (var status in Model.PaymentStatuses)
                {
                    <input type="hidden" name="PaymentStatuses" value="@status" />
                }
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-download me-1"></i>Export CSV
                </button>
            </form>
        }
        else
        {
            <p class="text-muted mb-0">&nbsp;</p>
        }
    </div>

    @if (Model.Rows.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
            <h3 class="mt-3 text-muted">No Data Found</h3>
            <p class="text-muted">No orders match your search criteria.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Order ID</th>
                        <th>Order #</th>
                        <th>Date</th>
                        <th>Buyer</th>
                        <th>Seller</th>
                        <th class="text-center">Order Status</th>
                        <th class="text-center">Payment Status</th>
                        <th class="text-end">Order Value</th>
                        <th class="text-end">Commission</th>
                        <th class="text-end">Payout Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model.Rows)
                    {
                        var orderIdStr = row.OrderId.ToString();
                        var truncatedOrderId = orderIdStr.Length > 8 ? orderIdStr[..8] : orderIdStr;
                        <tr>
                            <td>
                                <small class="text-muted">@truncatedOrderId...</small>
                            </td>
                            <td>
                                <strong>@row.OrderNumber</strong>
                            </td>
                            <td>
                                @row.OrderDate.ToString("MMM dd, yyyy")
                                <small class="text-muted d-block">@row.OrderDate.ToString("h:mm tt")</small>
                            </td>
                            <td>
                                <span>@row.BuyerEmail</span>
                            </td>
                            <td>
                                <span>@row.SellerName</span>
                            </td>
                            <td class="text-center">
                                <span class="badge @IndexModel.GetOrderStatusBadgeClass(row.OrderStatus)">
                                    @IndexModel.GetOrderStatusDisplayText(row.OrderStatus)
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="badge @IndexModel.GetPaymentStatusBadgeClass(row.PaymentStatus)">
                                    @IndexModel.GetPaymentStatusDisplayText(row.PaymentStatus)
                                </span>
                            </td>
                            <td class="text-end">
                                <strong>@row.OrderValue.ToString("C")</strong>
                            </td>
                            <td class="text-end">
                                @row.Commission.ToString("C")
                            </td>
                            <td class="text-end">
                                @row.PayoutAmount.ToString("C")
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <th colspan="7" class="text-end">Page Totals:</th>
                        <th class="text-end">@Model.Rows.Sum(r => r.OrderValue).ToString("C")</th>
                        <th class="text-end">@Model.Rows.Sum(r => r.Commission).ToString("C")</th>
                        <th class="text-end">@Model.Rows.Sum(r => r.PayoutAmount).ToString("C")</th>
                    </tr>
                </tfoot>
            </table>
        </div>

        @* Pagination *@
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Report list pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage - 1)">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    @{
                        var startPage = Math.Max(1, Model.CurrentPage - 2);
                        var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);

                        if (startPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(1)">1</a>
                            </li>
                            if (startPage > 2)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                        }

                        for (var i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Model.GetPaginationQueryString(i)">@i</a>
                            </li>
                        }

                        if (endPage < Model.TotalPages)
                        {
                            if (endPage < Model.TotalPages - 1)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(Model.TotalPages)">@Model.TotalPages</a>
                            </li>
                        }
                    }

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage + 1)">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
