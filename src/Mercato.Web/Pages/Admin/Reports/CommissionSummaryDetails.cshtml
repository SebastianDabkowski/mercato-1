@page
@model Mercato.Web.Pages.Admin.Reports.CommissionSummaryDetailsModel
@{
    ViewData["Title"] = $"Commission Details - {Model.SellerName}";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <a href="@Model.GetBackUrl()" class="btn btn-outline-secondary mb-2">
                <i class="bi bi-arrow-left me-1"></i>Back to Summary
            </a>
            <h1><i class="bi bi-list-ul me-2"></i>Commission Details</h1>
            <p class="text-muted mb-0">Orders for <strong>@Model.SellerName</strong></p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @* Date Range Info *@
    @if (Model.FromDate.HasValue || Model.ToDate.HasValue)
    {
        <div class="alert alert-info">
            <i class="bi bi-calendar-range me-2"></i>
            <strong>Date Range:</strong>
            @if (Model.FromDate.HasValue)
            {
                <span>From @Model.FromDate.Value.ToString("MMM dd, yyyy")</span>
            }
            @if (Model.ToDate.HasValue)
            {
                <span>To @Model.ToDate.Value.ToString("MMM dd, yyyy")</span>
            }
        </div>
    }

    @* Results Summary *@
    <div class="d-flex justify-content-between align-items-center mb-3">
        @if (Model.TotalCount > 0)
        {
            <p class="text-muted mb-0">
                Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) of @Model.TotalCount order@(Model.TotalCount > 1 ? "s" : "")
            </p>
        }
        else
        {
            <p class="text-muted mb-0">&nbsp;</p>
        }
    </div>

    @if (Model.Rows.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
            <h3 class="mt-3 text-muted">No Orders Found</h3>
            <p class="text-muted">No orders found for this seller in the selected period.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Order ID</th>
                        <th>Order Date</th>
                        <th class="text-end">Order Amount (GMV)</th>
                        <th class="text-center">Commission Rate</th>
                        <th class="text-end">Commission</th>
                        <th class="text-end">Net Payout</th>
                        <th>Calculated At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model.Rows)
                    {
                        var orderIdStr = row.OrderId.ToString();
                        var truncatedOrderId = orderIdStr.Length > CommissionSummaryDetailsModel.OrderIdDisplayLength 
                            ? orderIdStr[..CommissionSummaryDetailsModel.OrderIdDisplayLength] + "..." 
                            : orderIdStr;
                        <tr>
                            <td>
                                <span title="@orderIdStr">@truncatedOrderId</span>
                            </td>
                            <td>
                                @row.OrderDate.ToString("MMM dd, yyyy")
                                <small class="text-muted d-block">@row.OrderDate.ToString("h:mm tt")</small>
                            </td>
                            <td class="text-end">
                                <strong>@row.OrderAmount.ToString("C")</strong>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-info">@row.CommissionRate.ToString("P2")</span>
                            </td>
                            <td class="text-end">
                                @row.CommissionAmount.ToString("C")
                            </td>
                            <td class="text-end">
                                @row.NetPayout.ToString("C")
                            </td>
                            <td>
                                @row.CalculatedAt.ToString("MMM dd, yyyy")
                                <small class="text-muted d-block">@row.CalculatedAt.ToString("h:mm tt")</small>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <th colspan="2" class="text-end">Page Totals:</th>
                        <th class="text-end">@Model.Rows.Sum(r => r.OrderAmount).ToString("C")</th>
                        <th></th>
                        <th class="text-end">@Model.Rows.Sum(r => r.CommissionAmount).ToString("C")</th>
                        <th class="text-end">@Model.Rows.Sum(r => r.NetPayout).ToString("C")</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>

        @* Pagination *@
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Orders list pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage - 1)">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    @{
                        var startPage = Math.Max(1, Model.CurrentPage - CommissionSummaryDetailsModel.PaginationWindowSize);
                        var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + CommissionSummaryDetailsModel.PaginationWindowSize);

                        if (startPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(1)">1</a>
                            </li>
                            if (startPage > 2)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                        }

                        for (var i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Model.GetPaginationQueryString(i)">@i</a>
                            </li>
                        }

                        if (endPage < Model.TotalPages)
                        {
                            if (endPage < Model.TotalPages - 1)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(Model.TotalPages)">@Model.TotalPages</a>
                            </li>
                        }
                    }

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage + 1)">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
