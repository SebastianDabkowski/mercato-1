@page
@model Mercato.Web.Pages.Admin.Reviews.IndexModel
@{
    ViewData["Title"] = "Review Moderation";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-chat-square-text me-2"></i>Review Moderation</h1>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @* Filter Section *@
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Reviews</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-page="Index">
                <div class="row g-3">
                    @* Search Term *@
                    <div class="col-md-3">
                        <label class="form-label">Search</label>
                        <input type="text" name="SearchTerm" class="form-control" 
                               placeholder="Review text or buyer ID"
                               value="@Model.SearchTerm" />
                    </div>

                    @* Status Filter *@
                    <div class="col-md-2">
                        <label class="form-label">Status</label>
                        <select name="Status" class="form-select" multiple size="3">
                            @foreach (var status in IndexModel.AllStatuses)
                            {
                                <option value="@status" selected="@Model.Status.Contains(status)">
                                    @IndexModel.GetStatusDisplayText(status)
                                </option>
                            }
                        </select>
                        <small class="text-muted">Hold Ctrl/Cmd to select multiple</small>
                    </div>

                    @* Date Range Filter *@
                    <div class="col-md-2">
                        <label class="form-label">From Date</label>
                        <input type="date" name="FromDate" class="form-control" 
                               value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">To Date</label>
                        <input type="date" name="ToDate" class="form-control" 
                               value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" />
                    </div>

                    <div class="col-md-3 d-flex align-items-end">
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search me-1"></i>Search
                            </button>
                            <a asp-page="Index" class="btn btn-outline-secondary ms-2">
                                <i class="bi bi-x-circle me-1"></i>Clear
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @* Results Summary *@
    @if (Model.TotalCount > 0)
    {
        <p class="text-muted">
            Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) of @Model.TotalCount review@(Model.TotalCount > 1 ? "s" : "")
        </p>
    }

    @if (Model.Reviews.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-chat-square-text text-muted" style="font-size: 4rem;"></i>
            <h3 class="mt-3 text-muted">No Reviews Found</h3>
            <p class="text-muted">No reviews match your search criteria.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Review</th>
                        <th class="text-center">Rating</th>
                        <th>Buyer</th>
                        <th class="text-center">Status</th>
                        <th>Created</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var review in Model.Reviews)
                    {
                        <tr class="@(review.Status == Mercato.Orders.Domain.Entities.ReviewStatus.Pending ? "table-warning" : "")">
                            <td style="max-width: 400px;">
                                <div class="text-truncate">@review.ReviewTextPreview</div>
                                <small class="text-muted">Product ID: @review.ProductId.ToString()[..8]...</small>
                            </td>
                            <td class="text-center">
                                <span class="text-warning">@IndexModel.GetStarRating(review.Rating)</span>
                            </td>
                            <td>
                                <span class="text-muted">@review.BuyerAlias</span>
                            </td>
                            <td class="text-center">
                                <span class="badge @IndexModel.GetStatusBadgeClass(review.Status)">
                                    @IndexModel.GetStatusDisplayText(review.Status)
                                </span>
                            </td>
                            <td>
                                @review.CreatedAt.ToString("MMM dd, yyyy")
                                <small class="text-muted d-block">@review.CreatedAt.ToString("h:mm tt")</small>
                            </td>
                            <td class="text-center">
                                <a asp-page="Details" asp-route-id="@review.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye me-1"></i>View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* Pagination *@
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Review list pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage - 1)">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    @{
                        var startPage = Math.Max(1, Model.CurrentPage - 2);
                        var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);

                        if (startPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(1)">1</a>
                            </li>
                            if (startPage > 2)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                        }

                        for (var i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Model.GetPaginationQueryString(i)">@i</a>
                            </li>
                        }

                        if (endPage < Model.TotalPages)
                        {
                            if (endPage < Model.TotalPages - 1)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(Model.TotalPages)">@Model.TotalPages</a>
                            </li>
                        }
                    }

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage + 1)">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
