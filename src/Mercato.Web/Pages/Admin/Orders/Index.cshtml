@page
@model Mercato.Web.Pages.Admin.Orders.IndexModel
@{
    ViewData["Title"] = "Order Management";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-box-seam me-2"></i>Order Management</h1>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @* Filter Section *@
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Orders</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-page="Index">
                <div class="row g-3">
                    @* Status Filter *@
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select name="Status" class="form-select" multiple size="4">
                            @foreach (var status in IndexModel.AllStatuses)
                            {
                                <option value="@status" selected="@Model.Status.Contains(status)">
                                    @IndexModel.GetStatusDisplayText(status)
                                </option>
                            }
                        </select>
                        <small class="text-muted">Hold Ctrl/Cmd to select multiple</small>
                    </div>

                    @* Date Range Filter *@
                    <div class="col-md-2">
                        <label class="form-label">From Date</label>
                        <input type="date" name="FromDate" class="form-control" 
                               value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">To Date</label>
                        <input type="date" name="ToDate" class="form-control" 
                               value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" />
                    </div>

                    @* Search Term *@
                    <div class="col-md-3">
                        <label class="form-label">Search</label>
                        <input type="text" name="SearchTerm" class="form-control" 
                               placeholder="Order #, email, or store name"
                               value="@Model.SearchTerm" />
                    </div>

                    <div class="col-md-2 d-flex align-items-end">
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search me-1"></i>Search
                            </button>
                            <a asp-page="Index" class="btn btn-outline-secondary ms-1">
                                <i class="bi bi-x-circle me-1"></i>Clear
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @* Results Summary *@
    @if (Model.TotalCount > 0)
    {
        <p class="text-muted">
            Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) of @Model.TotalCount order@(Model.TotalCount > 1 ? "s" : "")
        </p>
    }

    @if (Model.Orders.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
            <h3 class="mt-3 text-muted">No Orders Found</h3>
            <p class="text-muted">No orders match your search criteria.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Order #</th>
                        <th>Date</th>
                        <th>Buyer</th>
                        <th>Sellers</th>
                        <th class="text-end">Total</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>
                                <strong>@order.OrderNumber</strong>
                            </td>
                            <td>
                                @order.CreatedAt.ToString("MMM dd, yyyy")
                                <small class="text-muted d-block">@order.CreatedAt.ToString("h:mm tt")</small>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(order.BuyerEmail))
                                {
                                    <span>@order.BuyerEmail</span>
                                }
                                else
                                {
                                    <span class="text-muted">@order.BuyerId</span>
                                }
                            </td>
                            <td>
                                @if (order.SellerSubOrders.Count == 1)
                                {
                                    <span>@order.SellerSubOrders.First().StoreName</span>
                                }
                                else
                                {
                                    <span>@order.SellerSubOrders.Count sellers</span>
                                    <small class="text-muted d-block">
                                        @string.Join(", ", order.SellerSubOrders.Take(2).Select(s => s.StoreName))
                                        @if (order.SellerSubOrders.Count > 2)
                                        {
                                            <span>...</span>
                                        }
                                    </small>
                                }
                            </td>
                            <td class="text-end">
                                <strong>@order.TotalAmount.ToString("C")</strong>
                            </td>
                            <td class="text-center">
                                <span class="badge @IndexModel.GetStatusBadgeClass(order.Status)">
                                    @IndexModel.GetStatusDisplayText(order.Status)
                                </span>
                            </td>
                            <td class="text-center">
                                <a asp-page="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye me-1"></i>View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* Pagination *@
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Order list pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage - 1)">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    @{
                        var startPage = Math.Max(1, Model.CurrentPage - 2);
                        var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);

                        if (startPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(1)">1</a>
                            </li>
                            if (startPage > 2)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                        }

                        for (var i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Model.GetPaginationQueryString(i)">@i</a>
                            </li>
                        }

                        if (endPage < Model.TotalPages)
                        {
                            if (endPage < Model.TotalPages - 1)
                            {
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            }
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(Model.TotalPages)">@Model.TotalPages</a>
                            </li>
                        }
                    }

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage + 1)">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
