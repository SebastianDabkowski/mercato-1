@page
@using Mercato.Admin.Application.Queries
@using Mercato.Admin.Domain.Entities
@model Mercato.Web.Pages.Admin.SecurityDashboardModel
@{
    ViewData["Title"] = "Security Dashboard";
}

<h1>Security Dashboard</h1>
<p class="text-muted">Monitor authentication events and detect suspicious activity patterns.</p>

<!-- Time Period Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label for="TimePeriod" class="form-label">Time Period</label>
                <select asp-for="TimePeriod" class="form-select" id="TimePeriod">
                    <option value="1h">Last Hour</option>
                    <option value="6h">Last 6 Hours</option>
                    <option value="24h">Last 24 Hours</option>
                    <option value="7d">Last 7 Days</option>
                    <option value="30d">Last 30 Days</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="EventTypeFilter" class="form-label">Event Type</label>
                <select asp-for="EventTypeFilter" class="form-select" id="EventTypeFilter">
                    <option value="">All Types</option>
                    <option value="@((int)AuthenticationEventType.Login)">Login</option>
                    <option value="@((int)AuthenticationEventType.Logout)">Logout</option>
                    <option value="@((int)AuthenticationEventType.Lockout)">Lockout</option>
                    <option value="@((int)AuthenticationEventType.PasswordReset)">Password Reset</option>
                    <option value="@((int)AuthenticationEventType.PasswordChange)">Password Change</option>
                </select>
            </div>
            <div class="col-md-2">
                <label for="UserRoleFilter" class="form-label">User Role</label>
                <select asp-for="UserRoleFilter" class="form-select" id="UserRoleFilter">
                    <option value="">All Roles</option>
                    <option value="Buyer">Buyer</option>
                    <option value="Seller">Seller</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>
            <div class="col-md-2">
                <label for="SuccessFilter" class="form-label">Status</label>
                <select asp-for="SuccessFilter" class="form-select" id="SuccessFilter">
                    <option value="">All</option>
                    <option value="true">Success</option>
                    <option value="false">Failed</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
            </div>
        </form>
    </div>
</div>

@if (Model.Statistics != null)
{
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <h5 class="card-title">Successful Logins</h5>
                    <h2 class="display-4">@Model.Statistics.TotalSuccessfulLogins</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white h-100">
                <div class="card-body">
                    <h5 class="card-title">Failed Logins</h5>
                    <h2 class="display-4">@Model.Statistics.TotalFailedLogins</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning h-100">
                <div class="card-body">
                    <h5 class="card-title">Account Lockouts</h5>
                    <h2 class="display-4">@Model.Statistics.TotalLockouts</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info h-100">
                <div class="card-body">
                    <h5 class="card-title">Password Resets</h5>
                    <h2 class="display-4">@Model.Statistics.TotalPasswordResets</h2>
                </div>
            </div>
        </div>
    </div>
}

<!-- Suspicious Activity Alerts -->
@if (Model.SuspiciousActivities.Count > 0)
{
    <div class="card mb-4 border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill"></i> Suspicious Activity Detected (@Model.SuspiciousActivities.Count)
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Severity</th>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Count</th>
                            <th>Identifier</th>
                            <th>Detected</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var activity in Model.SuspiciousActivities)
                        {
                            <tr>
                                <td>
                                    <span class="badge @SecurityDashboardModel.GetSeverityBadgeClass(activity.Severity)">
                                        @activity.Severity
                                    </span>
                                </td>
                                <td>@activity.ActivityType</td>
                                <td>@activity.Description</td>
                                <td><strong>@activity.Count</strong></td>
                                <td><code>@activity.Identifier</code></td>
                                <td>@activity.DetectedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-success mb-4">
        <i class="bi bi-check-circle-fill"></i> No suspicious activity detected in the selected time period.
    </div>
}

<!-- Recent Events -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Recent Authentication Events</h5>
    </div>
    <div class="card-body">
        @if (Model.RecentEvents.Count == 0)
        {
            <div class="alert alert-info mb-0">
                No authentication events found for the selected filters.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Time</th>
                            <th>Type</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Failure Reason</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var authEvent in Model.RecentEvents.Take(100))
                        {
                            <tr>
                                <td>@authEvent.OccurredAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>
                                    <span class="badge @SecurityDashboardModel.GetEventTypeBadgeClass(authEvent.EventType)">
                                        @authEvent.EventType
                                    </span>
                                </td>
                                <td>@authEvent.Email</td>
                                <td>@(authEvent.UserRole ?? "-")</td>
                                <td>
                                    @if (authEvent.IsSuccessful)
                                    {
                                        <span class="badge bg-success">Success</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Failed</span>
                                    }
                                </td>
                                <td>@(authEvent.FailureReason ?? "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.RecentEvents.Count > 100)
            {
                <p class="text-muted mt-2">
                    Showing 100 of @Model.RecentEvents.Count events. Use filters to narrow results.
                </p>
            }
        }
    </div>
</div>

<div class="mt-4">
    <a asp-page="/Admin/Index" class="btn btn-secondary">
        &laquo; Back to Admin Portal
    </a>
</div>
