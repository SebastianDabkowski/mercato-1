@page "{subOrderId:guid}"
@model Mercato.Web.Pages.Orders.RequestReturnModel
@{
    ViewData["Title"] = "Request Return";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="Index">My Orders</a></li>
            @if (Model.SubOrder != null)
            {
                <li class="breadcrumb-item"><a asp-page="Details" asp-route-id="@Model.SubOrder.OrderId">Order Details</a></li>
            }
            <li class="breadcrumb-item active" aria-current="page">Request Return</li>
        </ol>
    </nav>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">
            <h5><i class="bi bi-check-circle me-2"></i>Return Request Submitted</h5>
            <p class="mb-0">@Model.SuccessMessage</p>
        </div>
        <div class="mt-3">
            @if (Model.SubOrder != null)
            {
                <a asp-page="Details" asp-route-id="@Model.SubOrder.OrderId" class="btn btn-primary">
                    <i class="bi bi-arrow-left me-1"></i>Back to Order Details
                </a>
            }
        </div>
    }
    else if (Model.SubOrder != null)
    {
        var subOrder = Model.SubOrder;

        <h1 class="mb-4">Request Return</h1>

        <div class="row">
            <div class="col-lg-8">
                @* Sub-Order Summary *@
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">
                                <i class="bi bi-shop me-2"></i>@subOrder.StoreName
                            </h5>
                            <small class="text-muted">Sub-order: @subOrder.SubOrderNumber</small>
                        </div>
                        <span class="badge bg-success">Delivered</span>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-end">Unit Price</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in subOrder.Items)
                                    {
                                        <tr>
                                            <td><strong>@item.ProductTitle</strong></td>
                                            <td class="text-center align-middle">@item.Quantity</td>
                                            <td class="text-end align-middle">@item.UnitPrice.ToString("C")</td>
                                            <td class="text-end align-middle">@item.TotalPrice.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="3" class="text-end"><strong>Sub-order Total:</strong></td>
                                        <td class="text-end"><strong class="text-primary">@subOrder.TotalAmount.ToString("C")</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

                @* Return Request Form *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-arrow-counterclockwise me-2"></i>Return Details</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-3">
                                <label for="Reason" class="form-label">Reason for Return <span class="text-danger">*</span></label>
                                <textarea class="form-control" id="Reason" name="Reason" rows="4" 
                                          placeholder="Please describe why you want to return this order..."
                                          required maxlength="2000">@Model.Reason</textarea>
                                <div class="form-text">Please provide a detailed reason for your return request (max 2000 characters).</div>
                            </div>

                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>What happens next?</strong>
                                <ul class="mb-0 mt-2">
                                    <li>Your return request will be sent to the seller for review.</li>
                                    <li>The seller will respond within 3-5 business days.</li>
                                    <li>You will receive updates on your return request status.</li>
                                </ul>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-send me-1"></i>Submit Return Request
                                </button>
                                <a asp-page="Details" asp-route-id="@subOrder.OrderId" class="btn btn-outline-secondary">
                                    <i class="bi bi-x me-1"></i>Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                @* Return Policy Info *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Return Policy</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">
                            <strong>Return Window:</strong> @Model.ReturnWindowDays days from delivery
                        </p>
                        @if (subOrder.DeliveredAt.HasValue)
                        {
                            var deadline = subOrder.DeliveredAt.Value.AddDays(Model.ReturnWindowDays);
                            <p class="mb-2">
                                <strong>Deadline:</strong> @deadline.ToString("MMMM dd, yyyy")
                            </p>
                        }
                        <hr>
                        <p class="text-muted small mb-0">
                            Returns are subject to seller approval. Items must be in their original condition.
                        </p>
                    </div>
                </div>

                @* Delivery Info *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-truck me-2"></i>Delivery Info</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">
                            <strong>Delivered:</strong> 
                            @(subOrder.DeliveredAt?.ToString("MMMM dd, yyyy") ?? "N/A")
                        </p>
                        @if (!string.IsNullOrEmpty(subOrder.TrackingNumber))
                        {
                            <p class="mb-0">
                                <strong>Tracking:</strong> 
                                @(subOrder.ShippingCarrier ?? "Carrier") - @subOrder.TrackingNumber
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <h5>Sub-order Not Found</h5>
            <p>We couldn't find the sub-order you're looking for, or you're not eligible to request a return.</p>
            <a asp-page="Index" class="btn btn-primary">Back to Orders</a>
        </div>
    }
</div>
