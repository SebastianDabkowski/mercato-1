@page
@model Mercato.Web.Pages.Orders.PaymentCallbackModel
@{
    ViewData["Title"] = "Processing Payment";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="card border-danger">
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <i class="bi bi-x-circle text-danger" style="font-size: 4rem;"></i>
                        </div>
                        <h2 class="text-danger mb-3">Payment Failed</h2>
                        <p class="text-muted mb-4">@Model.ErrorMessage</p>
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-page="Payment" class="btn btn-primary">
                                <i class="bi bi-arrow-repeat me-1"></i>Try Again
                            </a>
                            <a asp-page="/Cart/Index" class="btn btn-outline-secondary">
                                <i class="bi bi-cart me-1"></i>Return to Cart
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="spinner-border text-primary mb-4" role="status" style="width: 3rem; height: 3rem;">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <h2 class="mb-3">Processing Payment</h2>
                        <p class="text-muted">Please wait while we process your payment...</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
