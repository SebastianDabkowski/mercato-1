@page "{id:guid}"
@model Mercato.Web.Pages.Orders.DetailsModel
@using Mercato.Orders.Domain.Entities
@using Mercato.Payments.Domain.Entities
@{
    ViewData["Title"] = Model.Order != null ? $"Order {Model.Order.OrderNumber}" : "Order Details";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="Index">My Orders</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(Model.Order?.OrderNumber ?? "Order Details")</li>
        </ol>
    </nav>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    else if (Model.Order != null)
    {
        var order = Model.Order;
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-1">@order.OrderNumber</h1>
                <p class="text-muted mb-0">Placed on @order.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
            </div>
            <span class="badge fs-6 @DetailsModel.GetStatusBadgeClass(order.Status)">
                @DetailsModel.GetStatusDisplayText(order.Status)
            </span>
        </div>

        <div class="row">
            @* Left Column - Order Items by Seller *@
            <div class="col-lg-8">
                @if (order.SellerSubOrders.Any())
                {
                    @* Seller Sub-Orders Breakdown *@
                    @foreach (var subOrder in order.SellerSubOrders.OrderBy(s => s.StoreName))
                    {
                        <div class="card mb-4">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="mb-0">
                                        <i class="bi bi-shop me-2"></i>@subOrder.StoreName
                                    </h5>
                                    <small class="text-muted">Sub-order: @subOrder.SubOrderNumber</small>
                                </div>
                                <span class="badge @DetailsModel.GetSubOrderStatusBadgeClass(subOrder.Status)">
                                    @DetailsModel.GetSubOrderStatusDisplayText(subOrder.Status)
                                </span>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Product</th>
                                                <th class="text-center">Quantity</th>
                                                <th class="text-center">Status</th>
                                                <th class="text-end">Unit Price</th>
                                                <th class="text-end">Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in subOrder.Items)
                                            {
                                                <tr class="@(item.Status == SellerSubOrderItemStatus.Cancelled ? "table-danger" : "")">
                                                    <td>
                                                        <strong>@item.ProductTitle</strong>
                                                    </td>
                                                    <td class="text-center align-middle">@item.Quantity</td>
                                                    <td class="text-center align-middle">
                                                        <span class="badge @DetailsModel.GetItemStatusBadgeClass(item.Status)">
                                                            @DetailsModel.GetItemStatusDisplayText(item.Status)
                                                        </span>
                                                    </td>
                                                    <td class="text-end align-middle">@item.UnitPrice.ToString("C")</td>
                                                    <td class="text-end align-middle @(item.Status == SellerSubOrderItemStatus.Cancelled ? "text-decoration-line-through" : "")">@item.TotalPrice.ToString("C")</td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot class="table-light">
                                            <tr>
                                                <td colspan="4" class="text-end"><strong>Subtotal:</strong></td>
                                                <td class="text-end"><strong>@subOrder.ItemsSubtotal.ToString("C")</strong></td>
                                            </tr>
                                            @if (subOrder.CancelledItemsTotal > 0)
                                            {
                                                <tr class="text-danger">
                                                    <td colspan="4" class="text-end"><strong>Cancelled Items:</strong></td>
                                                    <td class="text-end"><strong>-@subOrder.CancelledItemsTotal.ToString("C")</strong></td>
                                                </tr>
                                            }
                                            <tr>
                                                <td colspan="4" class="text-end text-muted">
                                                    Shipping@(!string.IsNullOrEmpty(subOrder.ShippingMethodName) ? $" ({subOrder.ShippingMethodName})" : ""):
                                                </td>
                                                <td class="text-end text-muted">@subOrder.ShippingCost.ToString("C")</td>
                                            </tr>
                                            <tr>
                                                <td colspan="4" class="text-end"><strong>Sub-order Total:</strong></td>
                                                <td class="text-end"><strong class="text-primary">@subOrder.TotalAmount.ToString("C")</strong></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                                @if (subOrder.ShippedAt.HasValue && !string.IsNullOrEmpty(subOrder.TrackingNumber))
                                {
                                    <div class="p-3 border-top bg-light">
                                        <i class="bi bi-truck me-2"></i>
                                        <strong>Tracking:</strong> 
                                        @if (!string.IsNullOrEmpty(subOrder.ShippingCarrier))
                                        {
                                            <span class="me-2">@subOrder.ShippingCarrier</span>
                                        }
                                        @{
                                            var trackingUrl = DetailsModel.GetCarrierTrackingUrl(subOrder.ShippingCarrier, subOrder.TrackingNumber);
                                        }
                                        @if (!string.IsNullOrEmpty(trackingUrl))
                                        {
                                            <a href="@trackingUrl" target="_blank" rel="noopener noreferrer" class="font-monospace">
                                                @subOrder.TrackingNumber <i class="bi bi-box-arrow-up-right ms-1"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="font-monospace">@subOrder.TrackingNumber</span>
                                        }
                                    </div>
                                }
                                @if (subOrder.Status == SellerSubOrderStatus.Cancelled)
                                {
                                    <div class="p-3 border-top bg-danger bg-opacity-10">
                                        <i class="bi bi-x-circle me-2 text-danger"></i>
                                        <strong class="text-danger">Cancelled</strong>
                                        @if (subOrder.CancelledAt.HasValue)
                                        {
                                            <span class="text-muted ms-2">on @subOrder.CancelledAt.Value.ToString("MMMM dd, yyyy")</span>
                                        }
                                        <span class="float-end">Amount: <strong>@subOrder.TotalAmount.ToString("C")</strong></span>
                                    </div>
                                }
                                @if (subOrder.Status == SellerSubOrderStatus.Refunded)
                                {
                                    <div class="p-3 border-top bg-warning bg-opacity-10">
                                        <i class="bi bi-arrow-counterclockwise me-2 text-warning"></i>
                                        <strong class="text-dark">Refunded</strong>
                                        @if (subOrder.RefundedAt.HasValue)
                                        {
                                            <span class="text-muted ms-2">on @subOrder.RefundedAt.Value.ToString("MMMM dd, yyyy")</span>
                                        }
                                        <span class="float-end">Refund Amount: <strong>@subOrder.TotalAmount.ToString("C")</strong></span>
                                    </div>
                                }
                                @* Return Request Section *@
                                @if (Model.SubOrderReturnRequests.TryGetValue(subOrder.Id, out var returnRequest))
                                {
                                    <div class="p-3 border-top bg-info bg-opacity-10">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <i class="bi bi-arrow-counterclockwise me-2 text-info"></i>
                                                <strong>Return Request</strong>
                                                <span class="badge ms-2 @DetailsModel.GetReturnStatusBadgeClass(returnRequest.Status)">
                                                    @DetailsModel.GetReturnStatusDisplayText(returnRequest.Status)
                                                </span>
                                            </div>
                                            <small class="text-muted">Submitted @returnRequest.CreatedAt.ToString("MMM dd, yyyy")</small>
                                        </div>
                                        @if (!string.IsNullOrEmpty(returnRequest.SellerNotes))
                                        {
                                            <div class="mt-2">
                                                <small class="text-muted">Seller notes: @returnRequest.SellerNotes</small>
                                            </div>
                                        }
                                    </div>
                                }
                                else if (Model.SubOrderReturnEligibility.TryGetValue(subOrder.Id, out var eligibility) && eligibility.CanInitiate)
                                {
                                    <div class="p-3 border-top">
                                        <a asp-page="RequestReturn" asp-route-subOrderId="@subOrder.Id" class="btn btn-outline-warning btn-sm">
                                            <i class="bi bi-arrow-counterclockwise me-1"></i>Request Return
                                        </a>
                                        <small class="text-muted ms-2">Returns accepted within @Model.ReturnWindowDays days of delivery</small>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    @* Fallback to old items display if no sub-orders *@
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i>Items Ordered</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Product</th>
                                            <th class="text-center">Quantity</th>
                                            <th class="text-end">Unit Price</th>
                                            <th class="text-end">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in order.Items)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@item.ProductTitle</strong>
                                                    <br>
                                                    <small class="text-muted">Sold by: @item.StoreName</small>
                                                </td>
                                                <td class="text-center align-middle">@item.Quantity</td>
                                                <td class="text-end align-middle">@item.UnitPrice.ToString("C")</td>
                                                <td class="text-end align-middle">@item.TotalPrice.ToString("C")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                @* Order Timeline *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Order Timeline</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="d-flex align-items-start mb-3">
                                <span class="badge bg-success rounded-circle p-2 me-3"><i class="bi bi-check"></i></span>
                                <div>
                                    <strong>Order Placed</strong>
                                    <br><small class="text-muted">@order.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                                </div>
                            </li>
                            @if (order.ConfirmedAt.HasValue)
                            {
                                <li class="d-flex align-items-start mb-3">
                                    <span class="badge bg-success rounded-circle p-2 me-3"><i class="bi bi-check"></i></span>
                                    <div>
                                        <strong>Payment Confirmed</strong>
                                        <br><small class="text-muted">@order.ConfirmedAt.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                                    </div>
                                </li>
                            }
                            @if (order.ShippedAt.HasValue)
                            {
                                <li class="d-flex align-items-start mb-3">
                                    <span class="badge bg-success rounded-circle p-2 me-3"><i class="bi bi-check"></i></span>
                                    <div>
                                        <strong>Order Shipped</strong>
                                        <br><small class="text-muted">@order.ShippedAt.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                                    </div>
                                </li>
                            }
                            @if (order.DeliveredAt.HasValue)
                            {
                                <li class="d-flex align-items-start mb-3">
                                    <span class="badge bg-success rounded-circle p-2 me-3"><i class="bi bi-check"></i></span>
                                    <div>
                                        <strong>Delivered</strong>
                                        <br><small class="text-muted">@order.DeliveredAt.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                                    </div>
                                </li>
                            }
                            @if (order.CancelledAt.HasValue)
                            {
                                <li class="d-flex align-items-start mb-3">
                                    <span class="badge bg-danger rounded-circle p-2 me-3"><i class="bi bi-x"></i></span>
                                    <div>
                                        <strong>Order Cancelled</strong>
                                        <br><small class="text-muted">@order.CancelledAt.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                                    </div>
                                </li>
                            }
                            @if (order.Status == OrderStatus.Paid && !order.ShippedAt.HasValue)
                            {
                                <li class="d-flex align-items-start mb-3">
                                    <span class="badge bg-secondary rounded-circle p-2 me-3"><i class="bi bi-hourglass"></i></span>
                                    <div>
                                        <strong class="text-muted">Preparing</strong>
                                        <br><small class="text-muted">Your order is being prepared</small>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            @* Right Column - Order Summary & Delivery *@
            <div class="col-lg-4">
                @* Order Summary *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Subtotal (@order.Items.Count item@(order.Items.Count > 1 ? "s" : "")):</span>
                            <span>@order.ItemsSubtotal.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Shipping:</span>
                            <span>@order.ShippingTotal.ToString("C")</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fw-bold">
                            <span>Total:</span>
                            <span class="text-primary fs-5">@order.TotalAmount.ToString("C")</span>
                        </div>
                        @if (!string.IsNullOrEmpty(order.PaymentMethodName))
                        {
                            <hr>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted"><i class="bi bi-credit-card me-1"></i>Payment Method:</span>
                                <span>@order.PaymentMethodName</span>
                            </div>
                        }
                        @if (order.SellerSubOrders.Count > 1)
                        {
                            <hr>
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                This order is fulfilled by @order.SellerSubOrders.Count different sellers
                            </small>
                        }
                    </div>
                </div>

                @* Payment Status Card *@
                @if (Model.PaymentTransaction != null)
                {
                    var payment = Model.PaymentTransaction;
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-credit-card me-2"></i>Payment Status</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted">Status:</span>
                                <span class="badge @DetailsModel.GetPaymentStatusBadgeClass(payment.Status)">
                                    <i class="@DetailsModel.GetPaymentStatusIconClass(payment.Status) me-1"></i>@DetailsModel.GetPaymentStatusDisplayText(payment.Status)
                                </span>
                            </div>
                            
                            @* Payment status message for buyer *@
                            @if (payment.Status == PaymentStatus.Failed)
                            {
                                <div class="alert alert-danger mb-3">
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                    @DetailsModel.GetPaymentStatusMessage(payment.Status)
                                </div>
                            }
                            else if (payment.Status == PaymentStatus.Refunded)
                            {
                                <div class="alert alert-info mb-3">
                                    <i class="bi bi-arrow-counterclockwise me-2"></i>
                                    @DetailsModel.GetPaymentStatusMessage(payment.Status, payment.RefundedAmount)
                                    @if (payment.RefundedAmount > 0)
                                    {
                                        <hr>
                                        <div class="d-flex justify-content-between">
                                            <strong>Refunded Amount:</strong>
                                            <strong>@payment.RefundedAmount.ToString("C")</strong>
                                        </div>
                                    }
                                </div>
                            }
                            else if (payment.Status == PaymentStatus.Pending || payment.Status == PaymentStatus.Processing)
                            {
                                <div class="alert alert-warning mb-3">
                                    <i class="bi bi-hourglass-split me-2"></i>
                                    @DetailsModel.GetPaymentStatusMessage(payment.Status)
                                </div>
                            }
                            else if (payment.Status == PaymentStatus.Paid)
                            {
                                <div class="alert alert-success mb-3">
                                    <i class="bi bi-check-circle-fill me-2"></i>
                                    @DetailsModel.GetPaymentStatusMessage(payment.Status)
                                </div>
                            }
                            
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Amount:</span>
                                <span>@payment.Amount.ToString("C")</span>
                            </div>
                            @if (payment.CompletedAt.HasValue)
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Paid On:</span>
                                    <span>@payment.CompletedAt.Value.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                                </div>
                            }
                            @if (payment.RefundedAt.HasValue)
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Refunded On:</span>
                                    <span>@payment.RefundedAt.Value.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                                </div>
                            }
                        </div>
                    </div>
                }

                @* Delivery Address *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Delivery Address</h5>
                    </div>
                    <div class="card-body">
                        <strong>@order.DeliveryFullName</strong><br>
                        @order.DeliveryAddressLine1<br>
                        @if (!string.IsNullOrEmpty(order.DeliveryAddressLine2))
                        {
                            @order.DeliveryAddressLine2<br>
                        }
                        @order.DeliveryCity@(string.IsNullOrEmpty(order.DeliveryState) ? "" : ", " + order.DeliveryState) @order.DeliveryPostalCode<br>
                        @order.DeliveryCountry
                        @if (!string.IsNullOrEmpty(order.DeliveryPhoneNumber))
                        {
                            <br><span class="text-muted small"><i class="bi bi-telephone me-1"></i>@order.DeliveryPhoneNumber</span>
                        }
                    </div>
                </div>

                @* Estimated Delivery *@
                @if (order.Status != OrderStatus.Delivered && 
                     order.Status != OrderStatus.Cancelled && 
                     order.Status != OrderStatus.Refunded)
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-truck me-2"></i>Estimated Delivery</h5>
                        </div>
                        <div class="card-body">
                            <span class="text-muted">Expected within:</span>
                            <strong class="ms-2">@Model.EstimatedDeliveryDays business days</strong>
                        </div>
                    </div>
                }

                @* Actions *@
                <div class="d-grid gap-2">
                    <a asp-page="Confirmation" asp-route-orderId="@order.Id" class="btn btn-outline-primary">
                        <i class="bi bi-file-text me-1"></i>View Receipt
                    </a>
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to Orders
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <h5>Order Not Found</h5>
            <p>We couldn't find the order you're looking for.</p>
            <a asp-page="Index" class="btn btn-primary">Back to Orders</a>
        </div>
    }
</div>
