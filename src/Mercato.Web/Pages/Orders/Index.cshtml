@page
@model Mercato.Web.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-bag me-2"></i>My Orders</h1>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (TempData["Error"] is string error)
    {
        <div class="alert alert-danger">@error</div>
    }

    @if (TempData["Success"] is string success)
    {
        <div class="alert alert-success">@success</div>
    }

    @* Filter Section *@
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Orders</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-page="Index">
                <div class="row g-3">
                    @* Status Filter *@
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select name="Status" class="form-select" multiple size="4">
                            @foreach (var status in IndexModel.AllStatuses)
                            {
                                <option value="@status" selected="@Model.Status.Contains(status)">
                                    @IndexModel.GetStatusDisplayText(status)
                                </option>
                            }
                        </select>
                        <small class="text-muted">Hold Ctrl/Cmd to select multiple</small>
                    </div>

                    @* Date Range Filter *@
                    <div class="col-md-3">
                        <label class="form-label">From Date</label>
                        <input type="date" name="FromDate" class="form-control" 
                               value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">To Date</label>
                        <input type="date" name="ToDate" class="form-control" 
                               value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" />
                    </div>

                    @* Seller Filter *@
                    <div class="col-md-3">
                        <label class="form-label">Seller</label>
                        <select name="StoreId" class="form-select">
                            <option value="">All Sellers</option>
                            @foreach (var seller in Model.AvailableSellers)
                            {
                                <option value="@seller.StoreId" selected="@(Model.StoreId == seller.StoreId)">
                                    @seller.StoreName
                                </option>
                            }
                        </select>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i>Apply Filters
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary ms-2">
                        <i class="bi bi-x-circle me-1"></i>Clear Filters
                    </a>
                </div>
            </form>
        </div>
    </div>

    @* Results Summary *@
    @if (Model.TotalCount > 0)
    {
        <p class="text-muted">
            Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) of @Model.TotalCount order@(Model.TotalCount > 1 ? "s" : "")
        </p>
    }

    @if (Model.Orders.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-bag-x text-muted" style="font-size: 4rem;"></i>
            <h3 class="mt-3 text-muted">No Orders Found</h3>
            @if (Model.Status.Count > 0 || Model.FromDate.HasValue || Model.ToDate.HasValue || Model.StoreId.HasValue)
            {
                <p class="text-muted">No orders match your filter criteria. Try adjusting the filters.</p>
                <a asp-page="Index" class="btn btn-outline-primary mt-2">
                    <i class="bi bi-x-circle me-1"></i>Clear Filters
                </a>
            }
            else
            {
                <p class="text-muted">You haven't placed any orders yet.</p>
                <a asp-page="/Product/Index" class="btn btn-primary mt-2">
                    <i class="bi bi-shop me-1"></i>Start Shopping
                </a>
            }
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model.Orders)
            {
                <div class="col-12 mb-3">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Order @order.OrderNumber</strong>
                                <span class="text-muted ms-3">@order.CreatedAt.ToString("MMMM dd, yyyy")</span>
                            </div>
                            <span class="badge @IndexModel.GetStatusBadgeClass(order.Status)">
                                @IndexModel.GetStatusDisplayText(order.Status)
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    @if (order.Items.Any())
                                    {
                                        <div class="d-flex flex-wrap gap-2 mb-2">
                                            @foreach (var item in order.Items.Take(3))
                                            {
                                                <span class="badge bg-light text-dark border">
                                                    @item.ProductTitle @(item.Quantity > 1 ? $"(x{item.Quantity})" : "")
                                                </span>
                                            }
                                            @if (order.Items.Count > 3)
                                            {
                                                <span class="badge bg-light text-muted border">
                                                    +@(order.Items.Count - 3) more
                                                </span>
                                            }
                                        </div>
                                    }
                                    <small class="text-muted">
                                        @order.Items.Count item@(order.Items.Count > 1 ? "s" : "")
                                        • Shipping to @order.DeliveryCity, @order.DeliveryCountry
                                        @if (order.SellerSubOrders.Count > 1)
                                        {
                                            <span>• @order.SellerSubOrders.Count sellers</span>
                                        }
                                        else if (order.SellerSubOrders.Count == 1)
                                        {
                                            <span>• @order.SellerSubOrders.First().StoreName</span>
                                        }
                                    </small>
                                </div>
                                <div class="col-md-4 text-md-end">
                                    <div class="h5 mb-1">@order.TotalAmount.ToString("C")</div>
                                    <a asp-page="Details" asp-route-id="@order.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye me-1"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                        @if (order.Status == Mercato.Orders.Domain.Entities.OrderStatus.Paid && order.ConfirmedAt.HasValue)
                        {
                            <div class="card-footer bg-light">
                                <small class="text-muted">
                                    <i class="bi bi-check-circle me-1"></i>
                                    Paid on @order.ConfirmedAt.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")
                                </small>
                            </div>
                        }
                        @if (order.Status == Mercato.Orders.Domain.Entities.OrderStatus.Shipped && order.ShippedAt.HasValue)
                        {
                            <div class="card-footer bg-light">
                                <small class="text-muted">
                                    <i class="bi bi-truck me-1"></i>
                                    Shipped on @order.ShippedAt.Value.ToString("MMMM dd, yyyy")
                                </small>
                            </div>
                        }
                        @if (order.Status == Mercato.Orders.Domain.Entities.OrderStatus.Delivered && order.DeliveredAt.HasValue)
                        {
                            <div class="card-footer bg-success bg-opacity-10">
                                <small class="text-success">
                                    <i class="bi bi-check2-all me-1"></i>
                                    Delivered on @order.DeliveredAt.Value.ToString("MMMM dd, yyyy")
                                </small>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        @* Pagination *@
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Order list pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    @* Previous Button *@
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage - 1)" 
                           aria-label="Previous" tabindex="@(Model.HasPreviousPage ? 0 : -1)">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    @* Page Numbers *@
                    @{
                        var startPage = Math.Max(1, Model.CurrentPage - 2);
                        var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);

                        if (startPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(1)">1</a>
                            </li>
                            if (startPage > 2)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                        }

                        for (var i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Model.GetPaginationQueryString(i)">@i</a>
                            </li>
                        }

                        if (endPage < Model.TotalPages)
                        {
                            if (endPage < Model.TotalPages - 1)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(Model.TotalPages)">@Model.TotalPages</a>
                            </li>
                        }
                    }

                    @* Next Button *@
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage + 1)" 
                           aria-label="Next" tabindex="@(Model.HasNextPage ? 0 : -1)">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
