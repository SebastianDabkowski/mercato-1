@page
@model Mercato.Web.Pages.Messaging.IndexModel
@{
    ViewData["Title"] = "My Messages";
}

<div class="container">
    <h1 class="mb-4">My Messages</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.ThreadsResult != null && Model.ThreadsResult.Succeeded)
    {
        @if (Model.ThreadsResult.TotalCount > 0)
        {
            <div class="list-group mb-4">
                @foreach (var thread in Model.ThreadsResult.Threads)
                {
                    <a asp-page="/Messaging/Thread" asp-route-id="@thread.Id" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@thread.Subject</h5>
                            <small class="text-muted">@thread.LastMessageAt.ToString("MMM d, yyyy h:mm tt")</small>
                        </div>
                        <p class="mb-1">
                            @if (thread.ThreadType == Mercato.Notifications.Domain.Entities.MessageThreadType.ProductQuestion)
                            {
                                <span class="badge bg-info me-2">Product Question</span>
                            }
                            else
                            {
                                <span class="badge bg-primary me-2">Order Message</span>
                            }
                            @if (thread.IsClosed)
                            {
                                <span class="badge bg-secondary">Closed</span>
                            }
                        </p>
                        <small class="text-muted">Created @thread.CreatedAt.ToString("MMM d, yyyy")</small>
                    </a>
                }
            </div>

            @if (Model.ThreadsResult.TotalPages > 1)
            {
                <nav aria-label="Messages pagination">
                    <ul class="pagination justify-content-center">
                        @if (Model.ThreadsResult.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="/Messaging/Index" asp-route-page="@(Model.ThreadsResult.Page - 1)">Previous</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                        }

                        @for (var i = 1; i <= Model.ThreadsResult.TotalPages; i++)
                        {
                            var pageNumber = i;
                            <li class="page-item @(pageNumber == Model.ThreadsResult.Page ? "active" : "")">
                                <a class="page-link" asp-page="/Messaging/Index" asp-route-page="@pageNumber">@pageNumber</a>
                            </li>
                        }

                        @if (Model.ThreadsResult.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-page="/Messaging/Index" asp-route-page="@(Model.ThreadsResult.Page + 1)">Next</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Next</span>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                You have no message threads yet. You can start a conversation by asking a question on a product page.
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Unable to load messages at this time. Please try again later.
        </div>
    }
</div>
