@page
@model Mercato.Web.Pages.Notifications.IndexModel
@{
    ViewData["Title"] = "Notifications";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-bell me-2"></i>Notifications</h1>
        @if (Model.UnreadCount > 0)
        {
            <form method="post" asp-page-handler="MarkAllAsRead">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-check2-all me-1"></i>Mark All as Read
                </button>
            </form>
        }
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (TempData["Error"] is string error)
    {
        <div class="alert alert-danger">@error</div>
    }

    @if (TempData["Success"] is string success)
    {
        <div class="alert alert-success">@success</div>
    }

    @* Filter Section *@
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Notifications</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-page="Index">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Status</label>
                        <select name="Filter" class="form-select">
                            <option value="" selected="@(string.IsNullOrEmpty(Model.Filter))">All Notifications</option>
                            <option value="unread" selected="@(Model.Filter == "unread")">Unread Only</option>
                            <option value="read" selected="@(Model.Filter == "read")">Read Only</option>
                        </select>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i>Apply Filter
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary ms-2">
                        <i class="bi bi-x-circle me-1"></i>Clear Filter
                    </a>
                </div>
            </form>
        </div>
    </div>

    @* Results Summary *@
    @if (Model.TotalCount > 0)
    {
        <p class="text-muted">
            Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) of @Model.TotalCount notification@(Model.TotalCount > 1 ? "s" : "")
            @if (Model.UnreadCount > 0)
            {
                <span class="badge bg-primary ms-2">@Model.UnreadCount unread</span>
            }
        </p>
    }

    @if (Model.Notifications.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-bell-slash text-muted" style="font-size: 4rem;"></i>
            <h3 class="mt-3 text-muted">No Notifications</h3>
            @if (!string.IsNullOrEmpty(Model.Filter))
            {
                <p class="text-muted">No notifications match your filter criteria.</p>
                <a asp-page="Index" class="btn btn-outline-primary mt-2">
                    <i class="bi bi-x-circle me-1"></i>Clear Filter
                </a>
            }
            else
            {
                <p class="text-muted">You don't have any notifications yet.</p>
            }
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var notification in Model.Notifications)
            {
                <div class="list-group-item @(notification.IsRead ? "" : "bg-light")">
                    <div class="d-flex w-100 justify-content-between align-items-start">
                        <div class="d-flex align-items-start">
                            <span class="me-3 fs-4">
                                <i class="bi @IndexModel.GetTypeIconClass(notification.Type)"></i>
                            </span>
                            <div>
                                <div class="d-flex align-items-center mb-1">
                                    <h6 class="mb-0 @(notification.IsRead ? "" : "fw-bold")">
                                        @notification.Title
                                    </h6>
                                    <span class="badge @IndexModel.GetTypeBadgeClass(notification.Type) ms-2">
                                        @IndexModel.GetTypeDisplayText(notification.Type)
                                    </span>
                                    @if (!notification.IsRead)
                                    {
                                        <span class="badge bg-primary ms-2">New</span>
                                    }
                                </div>
                                <p class="mb-1 text-muted">@notification.Message</p>
                                <small class="text-muted">
                                    <i class="bi bi-clock me-1"></i>@notification.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")
                                    @if (notification.IsRead && notification.ReadAt.HasValue)
                                    {
                                        <span class="ms-2">
                                            <i class="bi bi-check-lg me-1"></i>Read @notification.ReadAt.Value.ToString("MMM dd 'at' h:mm tt")
                                        </span>
                                    }
                                </small>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            @if (!string.IsNullOrEmpty(notification.RelatedUrl))
                            {
                                <a href="@notification.RelatedUrl" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-arrow-right me-1"></i>View
                                </a>
                            }
                            @if (!notification.IsRead)
                            {
                                <form method="post" asp-page-handler="MarkAsRead" asp-route-id="@notification.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary" title="Mark as read">
                                        <i class="bi bi-check-lg"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        @* Pagination *@
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Notification list pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    @* Previous Button *@
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage - 1)" 
                           aria-label="Previous" tabindex="@(Model.HasPreviousPage ? 0 : -1)">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    @* Page Numbers *@
                    @{
                        var startPage = Math.Max(1, Model.CurrentPage - 2);
                        var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);

                        if (startPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(1)">1</a>
                            </li>
                            if (startPage > 2)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                        }

                        for (var i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Model.GetPaginationQueryString(i)">@i</a>
                            </li>
                        }

                        if (endPage < Model.TotalPages)
                        {
                            if (endPage < Model.TotalPages - 1)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                            <li class="page-item">
                                <a class="page-link" href="@Model.GetPaginationQueryString(Model.TotalPages)">@Model.TotalPages</a>
                            </li>
                        }
                    }

                    @* Next Button *@
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" href="@Model.GetPaginationQueryString(Model.CurrentPage + 1)" 
                           aria-label="Next" tabindex="@(Model.HasNextPage ? 0 : -1)">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
