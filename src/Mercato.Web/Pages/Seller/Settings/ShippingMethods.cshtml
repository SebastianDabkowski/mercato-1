@page
@model Mercato.Web.Pages.Seller.Settings.ShippingMethodsModel
@{
    ViewData["Title"] = "Shipping Methods";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-truck me-2"></i>Shipping Methods</h4>
                    @if (Model.Store != null)
                    {
                        <a asp-page="ShippingMethodCreate" class="btn btn-light btn-sm">
                            <i class="bi bi-plus-lg me-1"></i>Add Method
                        </a>
                    }
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">Configure shipping methods available for your store. These methods will be displayed to buyers at checkout.</p>

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>@Model.SuccessMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@Model.ErrorMessage
                        </div>
                    }

                    @if (Model.Store == null)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Store Required:</strong> You need to create a store before configuring shipping methods.
                            <a asp-page="StoreProfile" class="alert-link">Create your store</a>
                        </div>
                    }
                    else if (Model.ShippingMethods.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-box-seam display-1 text-muted"></i>
                            <h5 class="mt-3 text-muted">No Shipping Methods Configured</h5>
                            <p class="text-muted">You haven't set up any shipping methods yet. Add your first shipping method to start accepting orders.</p>
                            <a asp-page="ShippingMethodCreate" class="btn btn-primary">
                                <i class="bi bi-plus-lg me-1"></i>Add Your First Shipping Method
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Countries</th>
                                        <th class="text-end">Base Cost</th>
                                        <th>Delivery Time</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var method in Model.ShippingMethods)
                                    {
                                        <tr class="@(!method.IsActive ? "table-secondary" : "")">
                                            <td>
                                                <strong>@method.Name</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(method.Description))
                                                {
                                                    <span class="text-muted">@(method.Description.Length > 50 ? method.Description[..50] + "..." : method.Description)</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">No description</span>
                                                }
                                            </td>
                                            <td>
                                                @if (string.IsNullOrEmpty(method.AvailableCountries))
                                                {
                                                    <span class="badge bg-success">All Countries</span>
                                                }
                                                else
                                                {
                                                    var countries = method.AvailableCountries.Split(',');
                                                    if (countries.Length <= 3)
                                                    {
                                                        @foreach (var country in countries)
                                                        {
                                                            <span class="badge bg-secondary me-1">@country</span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary me-1">@countries[0]</span>
                                                        <span class="badge bg-secondary me-1">@countries[1]</span>
                                                        <span class="badge bg-info">+@(countries.Length - 2) more</span>
                                                    }
                                                }
                                            </td>
                                            <td class="text-end">
                                                @method.BaseCost.ToString("C")
                                            </td>
                                            <td>
                                                @if (method.EstimatedDeliveryMinDays.HasValue && method.EstimatedDeliveryMaxDays.HasValue)
                                                {
                                                    if (method.EstimatedDeliveryMinDays == method.EstimatedDeliveryMaxDays)
                                                    {
                                                        <span>@method.EstimatedDeliveryMinDays business day@(method.EstimatedDeliveryMinDays == 1 ? "" : "s")</span>
                                                    }
                                                    else
                                                    {
                                                        <span>@method.EstimatedDeliveryMinDays–@method.EstimatedDeliveryMaxDays business days</span>
                                                    }
                                                }
                                                else if (method.EstimatedDeliveryMinDays.HasValue)
                                                {
                                                    <span>@method.EstimatedDeliveryMinDays+ business days</span>
                                                }
                                                else if (method.EstimatedDeliveryMaxDays.HasValue)
                                                {
                                                    <span>Up to @method.EstimatedDeliveryMaxDays business days</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">—</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (method.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-page="ShippingMethodEdit" asp-route-id="@method.Id" class="btn btn-outline-primary" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <form method="post" asp-page-handler="ToggleStatus" asp-route-id="@method.Id" class="d-inline">
                                                        @if (method.IsActive)
                                                        {
                                                            <button type="submit" class="btn btn-outline-warning" title="Disable">
                                                                <i class="bi bi-pause-circle"></i>
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <button type="submit" class="btn btn-outline-success" title="Enable">
                                                                <i class="bi bi-play-circle"></i>
                                                            </button>
                                                        }
                                                    </form>
                                                    <button type="button" class="btn btn-outline-danger" title="Delete" 
                                                            data-bs-toggle="modal" data-bs-target="#deleteModal-@method.Id">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>

                                                <!-- Delete Confirmation Modal -->
                                                <div class="modal fade" id="deleteModal-@method.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@method.Id" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="deleteModalLabel-@method.Id">Confirm Delete</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body text-start">
                                                                <p>Are you sure you want to delete the shipping method "<strong>@method.Name</strong>"?</p>
                                                                <p class="text-muted small">This action cannot be undone. Existing orders with this shipping method will retain their historical data.</p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                <form method="post" asp-page-handler="Delete" asp-route-id="@method.Id" class="d-inline">
                                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="/Seller/Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
