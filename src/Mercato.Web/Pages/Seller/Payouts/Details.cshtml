@page "{id:guid}"
@model Mercato.Web.Pages.Seller.Payouts.DetailsModel
@using Mercato.Payments.Domain.Entities
@{
    ViewData["Title"] = "Payout Details";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Seller/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-page="Index">Payouts</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (Model.Payout != null)
    {
        var payout = Model.Payout;

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-1">Payout Details</h1>
                <p class="text-muted mb-0">
                    <small>Payout ID: <code>@payout.Id</code></small>
                </p>
            </div>
            <div class="text-end">
                <span class="badge fs-5 @DetailsModel.GetStatusBadgeClass(payout.Status)">
                    @DetailsModel.GetStatusDisplayText(payout.Status)
                </span>
            </div>
        </div>

        @if (payout.Status == PayoutStatus.Failed)
        {
            <div class="alert alert-danger">
                <h5 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Payout Failed
                </h5>
                @if (!string.IsNullOrEmpty(payout.ErrorMessage))
                {
                    <p class="mb-1"><strong>Error Message:</strong> @payout.ErrorMessage</p>
                }
                @if (!string.IsNullOrEmpty(payout.ErrorReference))
                {
                    <p class="mb-0"><strong>Error Reference:</strong> <code>@payout.ErrorReference</code></p>
                }
                @if (payout.RetryCount > 0)
                {
                    <p class="mb-0 mt-2"><small class="text-muted">Retry attempts: @payout.RetryCount</small></p>
                }
            </div>
        }

        <div class="row">
            @* Left Column - Payout Details *@
            <div class="col-lg-8">
                @* Amount Information *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-wallet2 me-2"></i>Payout Amount</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h2 class="text-primary mb-0">@payout.Amount.ToString("N2") <small class="text-muted">@payout.Currency</small></h2>
                                <p class="text-muted">Total payout amount</p>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <strong>Schedule Frequency:</strong>
                                <span class="badge bg-secondary">@DetailsModel.GetFrequencyDisplayText(payout.ScheduleFrequency)</span>
                            </div>
                        </div>
                    </div>
                </div>

                @* Timeline / Activity *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Timeline</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="d-flex align-items-start mb-3">
                                <span class="badge bg-success rounded-circle p-2 me-3"><i class="bi bi-check"></i></span>
                                <div>
                                    <strong>Created</strong>
                                    <br><small class="text-muted">@payout.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                                </div>
                            </li>
                            <li class="d-flex align-items-start mb-3">
                                <span class="badge bg-success rounded-circle p-2 me-3"><i class="bi bi-calendar-check"></i></span>
                                <div>
                                    <strong>Scheduled</strong>
                                    <br><small class="text-muted">@payout.ScheduledAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                                </div>
                            </li>
                            @if (payout.ProcessingStartedAt.HasValue)
                            {
                                <li class="d-flex align-items-start mb-3">
                                    <span class="badge bg-info rounded-circle p-2 me-3"><i class="bi bi-hourglass-split"></i></span>
                                    <div>
                                        <strong>Processing Started</strong>
                                        <br><small class="text-muted">@payout.ProcessingStartedAt.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                                    </div>
                                </li>
                            }
                            @if (payout.CompletedAt.HasValue)
                            {
                                <li class="d-flex align-items-start mb-3">
                                    @if (payout.Status == PayoutStatus.Paid)
                                    {
                                        <span class="badge bg-success rounded-circle p-2 me-3"><i class="bi bi-check-circle"></i></span>
                                        <div>
                                            <strong>Completed Successfully</strong>
                                            <br><small class="text-muted">@payout.CompletedAt.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                                        </div>
                                    }
                                    else if (payout.Status == PayoutStatus.Failed)
                                    {
                                        <span class="badge bg-danger rounded-circle p-2 me-3"><i class="bi bi-x-circle"></i></span>
                                        <div>
                                            <strong>Failed</strong>
                                            <br><small class="text-muted">@payout.CompletedAt.Value.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                                        </div>
                                    }
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                @* Escrow Entries (Order References) *@
                @if (Model.EscrowEntryIds.Count > 0)
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Related Escrow Entries</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">This payout includes funds from the following escrow entries (order transactions):</p>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead class="table-light">
                                        <tr>
                                            <th>#</th>
                                            <th>Escrow Entry ID</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var (entryId, index) in Model.EscrowEntryIds.Select((id, i) => (id, i + 1)))
                                        {
                                            <tr>
                                                <td>@index</td>
                                                <td><code>@entryId</code></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @* Right Column - Summary *@
            <div class="col-lg-4">
                @* Payout Summary *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong>Status:</strong>
                            <span class="badge @DetailsModel.GetStatusBadgeClass(payout.Status) ms-2">
                                @DetailsModel.GetStatusDisplayText(payout.Status)
                            </span>
                        </div>
                        <div class="mb-3">
                            <strong>Amount:</strong>
                            <span class="ms-2">@payout.Amount.ToString("N2") @payout.Currency</span>
                        </div>
                        <div class="mb-3">
                            <strong>Frequency:</strong>
                            <span class="ms-2">@DetailsModel.GetFrequencyDisplayText(payout.ScheduleFrequency)</span>
                        </div>
                        @if (payout.BatchId.HasValue)
                        {
                            <div class="mb-3">
                                <strong>Batch ID:</strong>
                                <br><code class="small">@payout.BatchId</code>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(payout.ExternalReference))
                        {
                            <div class="mb-3">
                                <strong>External Reference:</strong>
                                <br><code class="small">@payout.ExternalReference</code>
                            </div>
                        }
                        @if (payout.RetryCount > 0)
                        {
                            <div class="mb-3">
                                <strong>Retry Count:</strong>
                                <span class="ms-2">@payout.RetryCount</span>
                            </div>
                        }
                    </div>
                </div>

                @* Audit Note *@
                @if (!string.IsNullOrEmpty(payout.AuditNote))
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-journal-text me-2"></i>Audit Note</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0 text-muted">@payout.AuditNote</p>
                        </div>
                    </div>
                }

                @* Timestamps *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-clock me-2"></i>Timestamps</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <strong>Created:</strong>
                            <br><small class="text-muted">@payout.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</small>
                        </div>
                        <div class="mb-2">
                            <strong>Last Updated:</strong>
                            <br><small class="text-muted">@payout.LastUpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</small>
                        </div>
                    </div>
                </div>

                @* Actions *@
                <div class="d-grid gap-2">
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to Payouts
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <h5>Payout Not Found</h5>
            <p>We couldn't find the payout you're looking for.</p>
            <a asp-page="Index" class="btn btn-primary">Back to Payouts</a>
        </div>
    }
</div>
