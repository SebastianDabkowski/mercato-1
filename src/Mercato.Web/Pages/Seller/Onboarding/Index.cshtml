@page
@model Mercato.Web.Pages.Seller.Onboarding.IndexModel
@{
    ViewData["Title"] = "Seller Onboarding";
}

<h1>Seller Onboarding</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @Model.ErrorMessage
        <div class="mt-2">
            <a asp-page="/Seller/Onboarding/Index" class="btn btn-outline-danger btn-sm">
                <i class="bi bi-arrow-clockwise me-1"></i>Retry
            </a>
        </div>
    </div>
}
else
{
    <div class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3">Redirecting to your onboarding step...</p>
    </div>
}
