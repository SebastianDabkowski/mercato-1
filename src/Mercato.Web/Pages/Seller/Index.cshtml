    </a>
    <a asp-page="Orders/Index" class="btn btn-outline-primary">
        <i class="bi bi-receipt me-1"></i>My Orders
    </a>
    <a asp-page="Payouts/Index" class="btn btn-outline-primary">
        <i class="bi bi-wallet2 me-1"></i>Payout History
    </a>
    <a asp-page="Details" class="btn btn-outline-primary">
