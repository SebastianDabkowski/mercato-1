@page
@using Mercato.Web.Pages.Seller
@model Mercato.Web.Pages.Seller.IndexModel
@{
    ViewData["Title"] = "Seller Dashboard";
}

<h1>Seller Dashboard</h1>

@if (Model.NeedsOnboarding)
{
    <!-- Onboarding Required Section -->
    <div class="card mb-4 border-primary">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-rocket-takeoff me-2"></i>Complete Your Seller Setup
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Onboarding == null)
            {
                <div class="alert alert-info d-flex align-items-start" role="alert">
                    <i class="bi bi-info-circle-fill me-3 fs-4"></i>
                    <div>
                        <h6 class="alert-heading mb-1">Welcome to Mercato!</h6>
                        <p class="mb-2">To start selling on our platform, you need to complete the seller onboarding wizard.</p>
                        <p class="mb-0 text-muted small">This process takes about 5-10 minutes and includes setting up your store profile, verification data, and payout information.</p>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-page="Onboarding/Index" class="btn btn-primary btn-lg">
                        <i class="bi bi-play-fill me-1"></i>Start Onboarding
                    </a>
                </div>
            }
            else
            {
                <div class="alert alert-warning d-flex align-items-start" role="alert">
                    <i class="bi bi-hourglass-split me-3 fs-4"></i>
                    <div>
                        <h6 class="alert-heading mb-1">Onboarding In Progress</h6>
                        <p class="mb-2">You have an incomplete onboarding wizard. Continue where you left off to complete your seller setup.</p>
                        <p class="mb-0 text-muted small">
                            Current step: 
                            @switch (Model.Onboarding.CurrentStep)
                            {
                                case Mercato.Seller.Domain.Entities.OnboardingStep.StoreProfile:
                                    <strong>Store Profile</strong>
                                    break;
                                case Mercato.Seller.Domain.Entities.OnboardingStep.VerificationData:
                                    <strong>Verification Data</strong>
                                    break;
                                case Mercato.Seller.Domain.Entities.OnboardingStep.PayoutBasics:
                                    <strong>Payout Basics</strong>
                                    break;
                                case Mercato.Seller.Domain.Entities.OnboardingStep.Completed:
                                    <strong>Review & Submit</strong>
                                    break;
                            }
                        </p>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-page="Onboarding/Index" class="btn btn-warning btn-lg">
                        <i class="bi bi-arrow-right-circle me-1"></i>Continue Onboarding
                    </a>
                </div>
            }
        </div>
    </div>
}
else if (Model.Onboarding?.Status == Mercato.Seller.Domain.Entities.OnboardingStatus.PendingVerification)
{
    <!-- Pending Verification Section -->
    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">
                <i class="bi bi-hourglass-split me-2"></i>Seller Account Status
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info d-flex align-items-start" role="alert">
                <i class="bi bi-clock-history me-3 fs-4"></i>
                <div>
                    <h6 class="alert-heading mb-1">Pending Verification</h6>
                    <p class="mb-2">Your seller account setup is complete and is now being reviewed by our team.</p>
                    <p class="mb-0 text-muted small">This process typically takes 1-3 business days. You'll receive an email notification once your account is verified.</p>
                </div>
            </div>
        </div>
    </div>
}

@if (!Model.NeedsOnboarding && !Model.HasCompletePayoutSettings)
{
    <!-- Payout Settings Warning -->
    <div class="card mb-4 border-warning">
        <div class="card-header bg-warning">
            <h5 class="mb-0">
                <i class="bi bi-exclamation-triangle me-2"></i>Payout Configuration Required
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-warning d-flex align-items-start" role="alert">
                <i class="bi bi-credit-card me-3 fs-4"></i>
                <div>
                    <h6 class="alert-heading mb-1">Complete Your Payout Settings</h6>
                    <p class="mb-2">Your payout configuration is incomplete. You must configure your bank account or payout preferences before you can receive funds from sales.</p>
                    <p class="mb-0 text-muted small">Please provide your banking details or connect a payment account to start receiving payouts.</p>
                </div>
            </div>
            <div class="mt-3">
                <a asp-page="Settings/PayoutSettings" class="btn btn-warning">
                    <i class="bi bi-gear me-1"></i>Configure Payout Settings
                </a>
            </div>
        </div>
    </div>
}

<!-- KYC Verification Status Section -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-shield-check me-2"></i>KYC Verification Status
        </h5>
    </div>
    <div class="card-body">
        @if (Model.HasError)
        {
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Error:</strong> @Model.ErrorMessage
                <div class="mt-2">
                    <a href="@Url.Page("/Seller/Index")" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-arrow-clockwise me-1"></i>Retry
                    </a>
                </div>
            </div>
        }
        else
        {
            @switch (Model.KycStatus)
            {
                case KycVerificationStatus.NotSubmitted:
                    <div class="alert alert-warning d-flex align-items-start" role="alert">
                        <i class="bi bi-exclamation-circle-fill me-3 fs-4"></i>
                        <div>
                            <h6 class="alert-heading mb-1">KYC Verification Required</h6>
                            <p class="mb-2">You must complete KYC verification before you can list products for sale.</p>
                            <p class="mb-0 text-muted small">Submit your documents to verify your identity and business.</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-page="Kyc/Submit" class="btn btn-primary">
                            <i class="bi bi-upload me-1"></i>Submit KYC Documents
                        </a>
                    </div>
                    break;

                case KycVerificationStatus.Pending:
                    <div class="alert alert-secondary d-flex align-items-start" role="alert">
                        <i class="bi bi-hourglass-split me-3 fs-4"></i>
                        <div>
                            <h6 class="alert-heading mb-1">KYC Submission Pending</h6>
                            <p class="mb-2">Your documents have been submitted and are waiting to be reviewed.</p>
                            <p class="mb-0 text-muted small">You will be notified once the review begins.</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-page="Kyc/Index" class="btn btn-outline-secondary">
                            <i class="bi bi-eye me-1"></i>View Submissions
                        </a>
                    </div>
                    break;

                case KycVerificationStatus.UnderReview:
                    <div class="alert alert-info d-flex align-items-start" role="alert">
                        <i class="bi bi-search me-3 fs-4"></i>
                        <div>
                            <h6 class="alert-heading mb-1">KYC Under Review</h6>
                            <p class="mb-2">Your documents are currently being reviewed by our verification team.</p>
                            <p class="mb-0 text-muted small">This process typically takes 1-3 business days.</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-page="Kyc/Index" class="btn btn-outline-info">
                            <i class="bi bi-eye me-1"></i>View Submissions
                        </a>
                    </div>
                    break;

                case KycVerificationStatus.Verified:
                    <div class="alert alert-success d-flex align-items-start" role="alert">
                        <i class="bi bi-check-circle-fill me-3 fs-4"></i>
                        <div>
                            <h6 class="alert-heading mb-1">KYC Verified</h6>
                            <p class="mb-2">Your identity has been verified. You can now list products for sale.</p>
                            <p class="mb-0 text-muted small">Your account is in good standing.</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-page="Kyc/Index" class="btn btn-outline-success">
                            <i class="bi bi-eye me-1"></i>View Verification Details
                        </a>
                    </div>
                    break;

                case KycVerificationStatus.Rejected:
                    <div class="alert alert-danger d-flex align-items-start" role="alert">
                        <i class="bi bi-x-circle-fill me-3 fs-4"></i>
                        <div>
                            <h6 class="alert-heading mb-1">KYC Verification Rejected</h6>
                            <p class="mb-2">Your KYC submission was not approved. Action is required.</p>
                            @if (Model.LatestSubmission?.RejectionReason != null)
                            {
                                <p class="mb-2"><strong>Reason:</strong> @Model.LatestSubmission.RejectionReason</p>
                            }
                            <p class="mb-0 text-muted small">Please review the rejection reason and submit updated documents.</p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-page="Kyc/Submit" class="btn btn-danger">
                            <i class="bi bi-upload me-1"></i>Resubmit Documents
                        </a>
                        <a asp-page="Kyc/Index" class="btn btn-outline-danger ms-2">
                            <i class="bi bi-eye me-1"></i>View Details
                        </a>
                    </div>
                    break;
            }
        }
    </div>
</div>

<!-- Seller Portal Features Section -->
