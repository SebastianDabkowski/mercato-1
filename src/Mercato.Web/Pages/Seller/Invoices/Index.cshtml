@page
@model Mercato.Web.Pages.Seller.Invoices.IndexModel
@using Mercato.Payments.Domain.Entities
@{
    ViewData["Title"] = "Commission Invoices";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Commission Invoices</h1>
            <p class="text-muted mb-0">View your commission invoices and download PDFs</p>
        </div>
        <a asp-page="/Seller/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (Model.Store == null)
    {
        <div class="alert alert-warning">
            <h5>No Store Found</h5>
            <p>You need to set up your store before you can view invoices.</p>
            <a asp-page="/Seller/Onboarding/Index" class="btn btn-primary">Complete Onboarding</a>
        </div>
    }
    else
    {
        @* Filter Section *@
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Invoices</h5>
            </div>
            <div class="card-body">
                <form method="get" asp-page="Index">
                    <div class="row g-3">
                        @* Status Filter *@
                        <div class="col-md-4">
                            <label class="form-label">Status</label>
                            <select name="Status" class="form-select">
                                <option value="">All Statuses</option>
                                @foreach (var status in IndexModel.AllStatuses)
                                {
                                    <option value="@status" selected="@(Model.Status == status)">
                                        @IndexModel.GetStatusDisplayText(status)
                                    </option>
                                }
                            </select>
                        </div>

                        @* Type Filter *@
                        <div class="col-md-4">
                            <label class="form-label">Type</label>
                            <select name="Type" class="form-select">
                                <option value="">All Types</option>
                                @foreach (var type in IndexModel.AllTypes)
                                {
                                    <option value="@type" selected="@(Model.Type == type)">
                                        @IndexModel.GetTypeDisplayText(type)
                                    </option>
                                }
                            </select>
                        </div>

                        @* Filter Actions *@
                        <div class="col-md-4 d-flex align-items-end">
                            <div class="w-100">
                                <button type="submit" class="btn btn-primary w-100 mb-1">
                                    <i class="bi bi-search me-1"></i>Apply
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <a href="@Model.GetClearFiltersUrl()" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Clear Filters
                        </a>
                    </div>
                </form>
            </div>
        </div>

        @* Results *@
        @if (Model.Invoices.Count == 0)
        {
            <div class="text-center py-5">
                <i class="bi bi-file-earmark-text text-muted" style="font-size: 4rem;"></i>
                <h3 class="mt-3 text-muted">No Invoices Found</h3>
                @if (Model.Status.HasValue || Model.Type.HasValue)
                {
                    <p class="text-muted">No invoices match your filter criteria. Try adjusting the filters.</p>
                    <a href="@Model.GetClearFiltersUrl()" class="btn btn-outline-primary mt-2">
                        <i class="bi bi-x-circle me-1"></i>Clear Filters
                    </a>
                }
                else
                {
                    <p class="text-muted">You don't have any invoices yet. Invoices will appear here once commissions are calculated for your sales.</p>
                }
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Invoice Number</th>
                                    <th>Period</th>
                                    <th class="text-center">Type</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-end">Net Amount</th>
                                    <th class="text-end">Tax</th>
                                    <th class="text-end">Gross Amount</th>
                                    <th>Issue Date</th>
                                    <th>Due Date</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var invoice in Model.Invoices)
                                {
                                    <tr class="@(invoice.InvoiceType == InvoiceType.CreditNote ? "table-warning" : "")">
                                        <td>
                                            <span class="fw-bold text-decoration-none font-monospace">
                                                @invoice.InvoiceNumber
                                            </span>
                                        </td>
                                        <td>@invoice.Year-@invoice.Month.ToString("D2")</td>
                                        <td class="text-center">
                                            <span class="badge @IndexModel.GetTypeBadgeClass(invoice.InvoiceType)">
                                                @IndexModel.GetTypeDisplayText(invoice.InvoiceType)
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge @IndexModel.GetStatusBadgeClass(invoice.Status)">
                                                @IndexModel.GetStatusDisplayText(invoice.Status)
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            @invoice.NetAmount.ToString("N2") @invoice.Currency
                                        </td>
                                        <td class="text-end">
                                            @invoice.TaxAmount.ToString("N2") @invoice.Currency
                                        </td>
                                        <td class="text-end">
                                            <strong>@invoice.GrossAmount.ToString("N2") @invoice.Currency</strong>
                                        </td>
                                        <td>@invoice.IssueDate.ToString("MMM dd, yyyy")</td>
                                        <td>@invoice.DueDate.ToString("MMM dd, yyyy")</td>
                                        <td class="text-end">
                                            <a asp-page="Download" asp-route-id="@invoice.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-download me-1"></i>PDF
                                            </a>
                                        </td>
                                    </tr>
                                    @if (!string.IsNullOrEmpty(invoice.Notes))
                                    {
                                        <tr class="@(invoice.InvoiceType == InvoiceType.CreditNote ? "table-warning" : "")">
                                            <td colspan="10" class="py-2">
                                                <small class="text-muted">
                                                    <i class="bi bi-sticky me-1"></i>
                                                    <strong>Notes:</strong> @invoice.Notes
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
</div>
