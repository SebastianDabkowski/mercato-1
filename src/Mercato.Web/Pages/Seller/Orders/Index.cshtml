@page
@model Mercato.Web.Pages.Seller.Orders.IndexModel
@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>My Orders</h1>
            <p class="text-muted mb-0">Manage orders for your store</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    else if (Model.Store == null)
    {
        <div class="alert alert-warning">
            <h5>No Store Found</h5>
            <p>You need to set up your store before you can receive orders.</p>
            <a asp-page="/Seller/Onboarding/Index" class="btn btn-primary">Complete Onboarding</a>
        </div>
    }
    else if (Model.SubOrders.Count == 0)
    {
        <div class="alert alert-info">
            <h5>No Orders Yet</h5>
            <p>You don't have any orders yet. Orders will appear here when customers purchase your products.</p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Sub-Order #</th>
                                <th>Order Date</th>
                                <th>Items</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var subOrder in Model.SubOrders)
                            {
                                <tr>
                                    <td>
                                        <a asp-page="Details" asp-route-id="@subOrder.Id" class="fw-bold text-decoration-none">
                                            @subOrder.SubOrderNumber
                                        </a>
                                    </td>
                                    <td>@subOrder.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>@subOrder.Items.Count item@(subOrder.Items.Count > 1 ? "s" : "")</td>
                                    <td>@subOrder.TotalAmount.ToString("C")</td>
                                    <td>
                                        <span class="badge @IndexModel.GetStatusBadgeClass(subOrder.Status)">
                                            @IndexModel.GetStatusDisplayText(subOrder.Status)
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-page="Details" asp-route-id="@subOrder.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i>View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
