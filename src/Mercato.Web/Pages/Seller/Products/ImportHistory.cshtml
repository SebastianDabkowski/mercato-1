@page
@model Mercato.Web.Pages.Seller.Products.ImportHistoryModel
@{
    ViewData["Title"] = "Import History";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-clock-history me-2"></i>Import History</h2>
                <div>
                    <a asp-page="Import" class="btn btn-primary me-2">
                        <i class="bi bi-upload me-1"></i>New Import
                    </a>
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to Products
                    </a>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@Model.ErrorMessage
                </div>
            }

            @if (!Model.HasStore)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Store Required:</strong> You must configure your store profile before viewing import history.
                    <a asp-page="/Seller/Settings/StoreProfile" class="alert-link">Configure Store</a>
                </div>
            }
            else if (Model.ImportJobs.Count == 0)
            {
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                        <h4 class="mt-3 text-muted">No Import History</h4>
                        <p class="text-muted mb-4">You haven't imported any products yet.</p>
                        <a asp-page="Import" class="btn btn-primary">
                            <i class="bi bi-upload me-2"></i>Import Products
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-lg-5">
                        <!-- Import Jobs List -->
                        <div class="card shadow-sm">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Import Jobs</h5>
                            </div>
                            <div class="list-group list-group-flush">
                                @foreach (var job in Model.ImportJobs)
                                {
                                    var isActive = Model.JobId == job.Id;
                                    <a asp-page="ImportHistory" asp-route-jobId="@job.Id" 
                                       class="list-group-item list-group-item-action @(isActive ? "active" : "")">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1 text-truncate" style="max-width: 200px;">@job.FileName</h6>
                                            <small class="@(isActive ? "text-white-50" : "text-muted")">@job.CreatedAt.ToString("MMM dd, HH:mm")</small>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="badge @ImportHistoryModel.GetStatusBadgeClass(job.Status)">
                                                @ImportHistoryModel.GetStatusDisplayName(job.Status)
                                            </span>
                                            <small class="@(isActive ? "text-white-50" : "text-muted")">
                                                @job.TotalRows rows
                                            </small>
                                        </div>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-7">
                        @if (Model.SelectedJob != null)
                        {
                            <!-- Job Details -->
                            <div class="card shadow-sm">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">
                                        <i class="bi bi-file-earmark-text me-2"></i>
                                        @Model.SelectedJob.FileName
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <!-- Status Badge -->
                                    <div class="mb-4">
                                        <span class="badge @ImportHistoryModel.GetStatusBadgeClass(Model.SelectedJob.Status) fs-6">
                                            @ImportHistoryModel.GetStatusDisplayName(Model.SelectedJob.Status)
                                        </span>
                                    </div>

                                    <!-- Statistics -->
                                    <div class="row g-3 mb-4">
                                        <div class="col-6 col-md-3">
                                            <div class="card bg-light">
                                                <div class="card-body text-center py-3">
                                                    <h4 class="mb-0">@Model.SelectedJob.TotalRows</h4>
                                                    <small class="text-muted">Total Rows</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6 col-md-3">
                                            <div class="card bg-success text-white">
                                                <div class="card-body text-center py-3">
                                                    <h4 class="mb-0">@Model.SelectedJob.NewProductsCount</h4>
                                                    <small>New</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6 col-md-3">
                                            <div class="card bg-info text-white">
                                                <div class="card-body text-center py-3">
                                                    <h4 class="mb-0">@Model.SelectedJob.UpdatedProductsCount</h4>
                                                    <small>Updates</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6 col-md-3">
                                            <div class="card @(Model.SelectedJob.ErrorCount > 0 ? "bg-danger text-white" : "bg-light")">
                                                <div class="card-body text-center py-3">
                                                    <h4 class="mb-0">@Model.SelectedJob.ErrorCount</h4>
                                                    <small @(Model.SelectedJob.ErrorCount > 0 ? "" : "class=text-muted")>Errors</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Timestamps -->
                                    <dl class="row mb-4">
                                        <dt class="col-sm-4">Created:</dt>
                                        <dd class="col-sm-8">@Model.SelectedJob.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                                        @if (Model.SelectedJob.StartedAt.HasValue)
                                        {
                                            <dt class="col-sm-4">Started:</dt>
                                            <dd class="col-sm-8">@Model.SelectedJob.StartedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                                        }

                                        @if (Model.SelectedJob.CompletedAt.HasValue)
                                        {
                                            <dt class="col-sm-4">Completed:</dt>
                                            <dd class="col-sm-8">@Model.SelectedJob.CompletedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                                        }

                                        @if (Model.SelectedJob.Status == Mercato.Product.Domain.Entities.ProductImportStatus.Completed || 
                                             Model.SelectedJob.Status == Mercato.Product.Domain.Entities.ProductImportStatus.CompletedWithErrors)
                                        {
                                            <dt class="col-sm-4">Success Count:</dt>
                                            <dd class="col-sm-8">@Model.SelectedJob.SuccessCount</dd>
                                        }
                                    </dl>

                                    @if (!string.IsNullOrEmpty(Model.SelectedJob.ErrorMessage))
                                    {
                                        <div class="alert alert-danger">
                                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                            @Model.SelectedJob.ErrorMessage
                                        </div>
                                    }

                                    <!-- Row Errors -->
                                    @if (Model.SelectedJobErrors.Count > 0)
                                    {
                                        <h6 class="mt-4 mb-3">
                                            <i class="bi bi-exclamation-circle me-2"></i>Row Errors
                                        </h6>
                                        <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                                            <table class="table table-sm table-striped">
                                                <thead class="table-dark sticky-top">
                                                    <tr>
                                                        <th>Row</th>
                                                        <th>SKU</th>
                                                        <th>Column</th>
                                                        <th>Error</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var error in Model.SelectedJobErrors)
                                                    {
                                                        <tr>
                                                            <td>@error.RowNumber</td>
                                                            <td><code>@(error.Sku ?? "-")</code></td>
                                                            <td>@(error.ColumnName ?? "-")</td>
                                                            <td class="text-danger">@error.ErrorMessage</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="card shadow-sm">
                                <div class="card-body text-center py-5">
                                    <i class="bi bi-arrow-left-circle text-muted" style="font-size: 3rem;"></i>
                                    <h5 class="mt-3 text-muted">Select an Import Job</h5>
                                    <p class="text-muted">Click on an import job from the list to view its details.</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
