@page
@model Mercato.Web.Pages.Seller.Products.IndexModel
@using Mercato.Product.Domain.Entities
@{
    ViewData["Title"] = "My Products";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-box-seam me-2"></i>My Products</h4>
                    @if (Model.HasStore)
                    {
                        <div class="btn-group btn-group-sm">
                            <a asp-page="Export" class="btn btn-light">
                                <i class="bi bi-download me-1"></i>Export
                            </a>
                            <a asp-page="BulkUpdate" class="btn btn-light">
                                <i class="bi bi-pencil-square me-1"></i>Bulk Update
                            </a>
                            <a asp-page="Create" class="btn btn-light">
                                <i class="bi bi-plus-lg me-1"></i>Add Product
                            </a>
                        </div>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Success)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>Product created successfully with draft status.
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (Model.Updated)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>Product updated successfully.
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (Model.Archived)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>Product archived successfully.
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (Model.StatusChanged)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>Product status changed successfully.
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["StatusChangeError"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["StatusChangeError"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Error:</strong> @Model.ErrorMessage
                            <div class="mt-2">
                                <a href="@Url.Page("Index")" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-arrow-clockwise me-1"></i>Retry
                                </a>
                            </div>
                        </div>
                    }
                    else if (!Model.HasStore)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Store Required:</strong> You must configure your store profile before managing products.
                            <a asp-page="/Seller/Settings/StoreProfile" class="alert-link">Configure Store</a>
                        </div>
                    }
                    else if (Model.Products.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                            <h5 class="mt-3">No Products Yet</h5>
                            <p class="text-muted">Start building your catalog by adding your first product.</p>
                            <a asp-page="Create" class="btn btn-primary">
                                <i class="bi bi-plus-lg me-1"></i>Add Your First Product
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Title</th>
                                        <th>Category</th>
                                        <th class="text-end">Price</th>
                                        <th class="text-center">Stock</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-center">Created</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@product.Title</strong>
                                                @if (!string.IsNullOrEmpty(product.Description))
                                                {
                                                    <br />
                                                    <small class="text-muted">@(product.Description.Length > 100 ? product.Description[..100] + "..." : product.Description)</small>
                                                }
                                            </td>
                                            <td>@product.Category</td>
                                            <td class="text-end">@product.Price.ToString("C")</td>
                                            <td class="text-center">@product.Stock</td>
                                            <td class="text-center">
                                                <span class="badge @IndexModel.GetStatusBadgeClass(product.Status)">
                                                    @IndexModel.GetStatusDisplayName(product.Status)
                                                </span>
                                            </td>
                                            <td class="text-center">@product.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-page="Edit" asp-route-id="@product.Id" class="btn btn-outline-primary" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    @if (product.Status != ProductStatus.Archived)
                                                    {
                                                        <div class="btn-group btn-group-sm" role="group">
                                                            <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" title="Change Status">
                                                                <i class="bi bi-arrow-repeat"></i>
                                                            </button>
                                                            <ul class="dropdown-menu dropdown-menu-end">
                                                                @if (product.Status == ProductStatus.Draft)
                                                                {
                                                                    <li>
                                                                        <form method="post" asp-page-handler="ChangeStatus">
                                                                            <input type="hidden" name="productId" value="@product.Id" />
                                                                            <input type="hidden" name="newStatus" value="@((int)ProductStatus.Active)" />
                                                                            <button type="submit" class="dropdown-item">
                                                                                <i class="bi bi-check-circle text-success me-2"></i>Activate
                                                                            </button>
                                                                        </form>
                                                                    </li>
                                                                }
                                                                @if (product.Status == ProductStatus.Active)
                                                                {
                                                                    <li>
                                                                        <form method="post" asp-page-handler="ChangeStatus">
                                                                            <input type="hidden" name="productId" value="@product.Id" />
                                                                            <input type="hidden" name="newStatus" value="@((int)ProductStatus.Suspended)" />
                                                                            <button type="submit" class="dropdown-item">
                                                                                <i class="bi bi-pause-circle text-warning me-2"></i>Suspend
                                                                            </button>
                                                                        </form>
                                                                    </li>
                                                                }
                                                                @if (product.Status == ProductStatus.Suspended)
                                                                {
                                                                    <li>
                                                                        <form method="post" asp-page-handler="ChangeStatus">
                                                                            <input type="hidden" name="productId" value="@product.Id" />
                                                                            <input type="hidden" name="newStatus" value="@((int)ProductStatus.Active)" />
                                                                            <button type="submit" class="dropdown-item">
                                                                                <i class="bi bi-check-circle text-success me-2"></i>Reactivate
                                                                            </button>
                                                                        </form>
                                                                    </li>
                                                                }
                                                                @if (product.Status == ProductStatus.Inactive || product.Status == ProductStatus.OutOfStock)
                                                                {
                                                                    <li>
                                                                        <form method="post" asp-page-handler="ChangeStatus">
                                                                            <input type="hidden" name="productId" value="@product.Id" />
                                                                            <input type="hidden" name="newStatus" value="@((int)ProductStatus.Active)" />
                                                                            <button type="submit" class="dropdown-item">
                                                                                <i class="bi bi-check-circle text-success me-2"></i>Activate
                                                                            </button>
                                                                        </form>
                                                                    </li>
                                                                }
                                                                <li><hr class="dropdown-divider"></li>
                                                                <li>
                                                                    <form method="post" asp-page-handler="ChangeStatus">
                                                                        <input type="hidden" name="productId" value="@product.Id" />
                                                                        <input type="hidden" name="newStatus" value="@((int)ProductStatus.Archived)" />
                                                                        <button type="submit" class="dropdown-item text-danger">
                                                                            <i class="bi bi-archive text-danger me-2"></i>Archive
                                                                        </button>
                                                                    </form>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    }
                                                    <button type="button" class="btn btn-outline-danger" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#deleteModal" 
                                                            data-product-id="@product.Id"
                                                            data-product-title="@product.Title"
                                                            title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-page="/Seller/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the product "<strong id="deleteProductTitle"></strong>"?</p>
                <p class="text-muted mb-0">This action will archive the product. It will no longer appear in search results or public listings.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="Delete" id="deleteForm" style="display: inline;">
                    <input type="hidden" name="productId" id="deleteProductId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('deleteModal').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var productId = button.getAttribute('data-product-id');
            var productTitle = button.getAttribute('data-product-title');
            
            document.getElementById('deleteProductId').value = productId;
            document.getElementById('deleteProductTitle').textContent = productTitle;
        });
    </script>
}
