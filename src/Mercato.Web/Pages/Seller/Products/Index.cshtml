@page
@model Mercato.Web.Pages.Seller.Products.IndexModel
@using Mercato.Product.Domain.Entities
@{
    ViewData["Title"] = "My Products";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-box-seam me-2"></i>My Products</h4>
                    @if (Model.HasStore)
                    {
                        <a asp-page="Create" class="btn btn-light btn-sm">
                            <i class="bi bi-plus-lg me-1"></i>Add Product
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Success)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>Product created successfully with draft status.
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (Model.HasError)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Error:</strong> @Model.ErrorMessage
                            <div class="mt-2">
                                <a href="@Url.Page("Index")" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-arrow-clockwise me-1"></i>Retry
                                </a>
                            </div>
                        </div>
                    }
                    else if (!Model.HasStore)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Store Required:</strong> You must configure your store profile before managing products.
                            <a asp-page="/Seller/Settings/StoreProfile" class="alert-link">Configure Store</a>
                        </div>
                    }
                    else if (Model.Products.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                            <h5 class="mt-3">No Products Yet</h5>
                            <p class="text-muted">Start building your catalog by adding your first product.</p>
                            <a asp-page="Create" class="btn btn-primary">
                                <i class="bi bi-plus-lg me-1"></i>Add Your First Product
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Title</th>
                                        <th>Category</th>
                                        <th class="text-end">Price</th>
                                        <th class="text-center">Stock</th>
                                        <th class="text-center">Status</th>
                                        <th class="text-center">Created</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@product.Title</strong>
                                                @if (!string.IsNullOrEmpty(product.Description))
                                                {
                                                    <br />
                                                    <small class="text-muted">@(product.Description.Length > 100 ? product.Description[..100] + "..." : product.Description)</small>
                                                }
                                            </td>
                                            <td>@product.Category</td>
                                            <td class="text-end">@product.Price.ToString("C")</td>
                                            <td class="text-center">@product.Stock</td>
                                            <td class="text-center">
                                                <span class="badge @IndexModel.GetStatusBadgeClass(product.Status)">
                                                    @IndexModel.GetStatusDisplayName(product.Status)
                                                </span>
                                            </td>
                                            <td class="text-center">@product.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-page="/Seller/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>
</div>
