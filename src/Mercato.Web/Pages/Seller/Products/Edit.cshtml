@page "{id:guid}"
@model Mercato.Web.Pages.Seller.Products.EditModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Product</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@Model.ErrorMessage
                        </div>
                    }

                    @if (!Model.HasAccess)
                    {
                        <div class="text-center py-4">
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Back to Products
                            </a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-4">Update the product details below. Changes will be saved immediately.</p>

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="Title" class="form-label">Title <span class="text-danger">*</span></label>
                                <input asp-for="Title" class="form-control" placeholder="Enter product title" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                                <div class="form-text">A descriptive title for your product (2-200 characters).</div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Describe your product..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <div class="form-text">Provide a detailed description of your product (up to 2000 characters).</div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Price" class="form-label">Price <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                    <div class="form-text">The selling price for your product.</div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="Stock" class="form-label">Stock <span class="text-danger">*</span></label>
                                    <input asp-for="Stock" class="form-control" type="number" min="0" placeholder="0" />
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                    <div class="form-text">Available quantity in stock.</div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Category" class="form-label">Category <span class="text-danger">*</span></label>
                                <input asp-for="Category" class="form-control" placeholder="Enter product category" />
                                <span asp-validation-for="Category" class="text-danger"></span>
                                <div class="form-text">The category this product belongs to (e.g., Electronics, Clothing).</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Product Images</label>
                                <div class="d-flex align-items-center gap-2">
                                    <a asp-page="Images" asp-route-productId="@Model.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-images me-1"></i>Manage Images
                                    </a>
                                    <span class="text-muted small">Upload, delete, and set main image for this product.</span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Images" class="form-label">Images (Legacy JSON)</label>
                                <textarea asp-for="Images" class="form-control" rows="3" placeholder='Enter image URLs as JSON array, e.g. ["https://example.com/image1.jpg", "https://example.com/image2.jpg"]'></textarea>
                                <span asp-validation-for="Images" class="text-danger"></span>
                                <div class="form-text">Product image URLs as a JSON array (up to 10 images). <strong>Note:</strong> Use the "Manage Images" button above for the new image upload feature.</div>
                            </div>

                            <hr class="my-4" />
                            <h5 class="mb-3"><i class="bi bi-truck me-2"></i>Shipping Parameters</h5>
                            <p class="text-muted mb-3">Optional shipping details for logistics and cost calculation.</p>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Weight" class="form-label">Weight (kg)</label>
                                    <input asp-for="Weight" class="form-control" type="number" step="0.001" min="0" max="1000" placeholder="0.000" />
                                    <span asp-validation-for="Weight" class="text-danger"></span>
                                    <div class="form-text">Product weight in kilograms (0-1000 kg).</div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label asp-for="Length" class="form-label">Length (cm)</label>
                                    <input asp-for="Length" class="form-control" type="number" step="0.01" min="0" max="500" placeholder="0.00" />
                                    <span asp-validation-for="Length" class="text-danger"></span>
                                    <div class="form-text">Length in centimeters.</div>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label asp-for="Width" class="form-label">Width (cm)</label>
                                    <input asp-for="Width" class="form-control" type="number" step="0.01" min="0" max="500" placeholder="0.00" />
                                    <span asp-validation-for="Width" class="text-danger"></span>
                                    <div class="form-text">Width in centimeters.</div>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label asp-for="Height" class="form-label">Height (cm)</label>
                                    <input asp-for="Height" class="form-control" type="number" step="0.01" min="0" max="500" placeholder="0.00" />
                                    <span asp-validation-for="Height" class="text-danger"></span>
                                    <div class="form-text">Height in centimeters.</div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label asp-for="ShippingMethods" class="form-label">Shipping Methods</label>
                                <input asp-for="ShippingMethods" class="form-control" placeholder="e.g., standard,express,courier,parcel_locker" />
                                <span asp-validation-for="ShippingMethods" class="text-danger"></span>
                                <div class="form-text">Comma-separated list of available shipping methods.</div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a asp-page="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>Back to Products
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg me-1"></i>Save Changes
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
