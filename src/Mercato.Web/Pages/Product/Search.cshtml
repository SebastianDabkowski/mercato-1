@model Mercato.Web.Pages.Product.SearchModel
@{
    ViewData["Title"] = string.IsNullOrWhiteSpace(Model.Query) ? "Search Products" : $"Search: {Model.Query}";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar with filters and category navigation -->
        <div class="col-md-3 col-lg-2 mb-4">
            <!-- Filter Panel -->
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Filters</h5>
                    @if (Model.HasActiveFilters)
                    {
                        <form method="post" asp-page-handler="ClearFilters" class="d-inline">
                            <button type="submit" class="btn btn-link btn-sm p-0 text-danger">Clear All</button>
                        </form>
                    }
                </div>
                <div class="card-body">
                    <form method="get" asp-page="Search">
                        <input type="hidden" name="Query" value="@Model.Query" />
                        
                        <!-- Category Filter -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Category</label>
                            <select name="Category" class="form-select form-select-sm">
                                <option value="">All Categories</option>
                                @foreach (var category in Model.RootCategories)
                                {
                                    <option value="@category.Name" selected="@(Model.Category == category.Name)">@category.Name</option>
                                }
                            </select>
                        </div>

                        <!-- Price Range Filter -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Price Range</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" name="MinPrice" class="form-control form-control-sm" 
                                           placeholder="Min" value="@Model.MinPrice" min="0" step="0.01">
                                </div>
                                <div class="col-6">
                                    <input type="number" name="MaxPrice" class="form-control form-control-sm" 
                                           placeholder="Max" value="@Model.MaxPrice" min="0" step="0.01">
                                </div>
                            </div>
                            @if (Model.MinAvailablePrice.HasValue && Model.MaxAvailablePrice.HasValue)
                            {
                                <small class="text-muted">Range: @Model.MinAvailablePrice?.ToString("C") - @Model.MaxAvailablePrice?.ToString("C")</small>
                            }
                        </div>

                        <!-- Condition Filter -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Availability</label>
                            <select name="Condition" class="form-select form-select-sm">
                                <option value="">All</option>
                                <option value="InStock" selected="@(Model.Condition == "InStock")">In Stock</option>
                                <option value="OutOfStock" selected="@(Model.Condition == "OutOfStock")">Out of Stock</option>
                            </select>
                        </div>

                        <!-- Seller Filter -->
                        @if (Model.AvailableStores.Count > 0)
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Seller</label>
                                <select name="StoreId" class="form-select form-select-sm">
                                    <option value="">All Sellers</option>
                                    @foreach (var store in Model.AvailableStores)
                                    {
                                        <option value="@store.Id" selected="@(Model.StoreId == store.Id)">@store.Name</option>
                                    }
                                </select>
                            </div>
                        }

                        <button type="submit" class="btn btn-primary btn-sm w-100">Apply Filters</button>
                    </form>
                </div>
            </div>

            <!-- Categories Navigation -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Categories</h5>
                </div>
                <div class="card-body p-0">
                    <nav class="nav flex-column">
                        @foreach (var category in Model.RootCategories)
                        {
                            <a class="nav-link" asp-page="Category" asp-route-id="@category.Id">
                                @category.Name
                            </a>
                        }
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main content area -->
        <div class="col-md-9 col-lg-10">
            <!-- Breadcrumb navigation -->
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Search</li>
                </ol>
            </nav>

            @if (string.IsNullOrWhiteSpace(Model.Query) && !Model.HasActiveFilters)
            {
                <!-- No search query provided -->
                <h1>Search Products</h1>
                <p class="lead">Enter a keyword in the search bar above to find products.</p>
                
                <div class="alert alert-info">
                    <h5 class="alert-heading">Search Tips</h5>
                    <ul class="mb-0">
                        <li>Search by product name or description</li>
                        <li>Try different keywords if you don't find what you're looking for</li>
                        <li>Use the filters on the left to narrow down results</li>
                        <li>Browse categories on the left to explore products</li>
                    </ul>
                </div>
            }
            else
            {
                <!-- Search query provided - show results -->
                <h1>Search Results</h1>
                @if (!string.IsNullOrWhiteSpace(Model.Query))
                {
                    <p class="text-muted mb-3">
                        Results for: <strong>"@Model.Query"</strong>
                    </p>
                }

                <!-- Active filters display -->
                @if (Model.HasActiveFilters)
                {
                    <div class="mb-3">
                        <span class="text-muted">Active filters: </span>
                        @if (!string.IsNullOrWhiteSpace(Model.Category))
                        {
                            <span class="badge bg-secondary me-1">Category: @Model.Category</span>
                        }
                        @if (Model.MinPrice.HasValue)
                        {
                            <span class="badge bg-secondary me-1">Min: @Model.MinPrice?.ToString("C")</span>
                        }
                        @if (Model.MaxPrice.HasValue)
                        {
                            <span class="badge bg-secondary me-1">Max: @Model.MaxPrice?.ToString("C")</span>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.Condition))
                        {
                            <span class="badge bg-secondary me-1">@Model.Condition</span>
                        }
                        @if (Model.StoreId.HasValue)
                        {
                            var storeName = Model.AvailableStores.FirstOrDefault(s => s.Id == Model.StoreId)?.Name ?? "Selected Seller";
                            <span class="badge bg-secondary me-1">Seller: @storeName</span>
                        }
                        <form method="post" asp-page-handler="ClearFilters" class="d-inline">
                            <button type="submit" class="btn btn-link btn-sm p-0 text-danger">Clear All</button>
                        </form>
                    </div>
                }

                <!-- Products count and sort control -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <p class="mb-0 text-muted">
                        @if (Model.TotalProducts == 0)
                        {
                            <span>No products found</span>
                        }
                        else if (Model.TotalProducts == 1)
                        {
                            <span>1 product found</span>
                        }
                        else
                        {
                            <span>@Model.TotalProducts products found</span>
                        }
                    </p>
                    @if (Model.TotalProducts > 0)
                    {
                        <form method="get" asp-page="Search" class="d-flex align-items-center gap-2">
                            <input type="hidden" name="Query" value="@Model.Query" />
                            <input type="hidden" name="MinPrice" value="@Model.MinPrice" />
                            <input type="hidden" name="MaxPrice" value="@Model.MaxPrice" />
                            <input type="hidden" name="Condition" value="@Model.Condition" />
                            <input type="hidden" name="StoreId" value="@Model.StoreId" />
                            <input type="hidden" name="Category" value="@Model.Category" />
                            <label class="form-label mb-0 text-nowrap" for="sortSelect">Sort by:</label>
                            <select name="SortBy" id="sortSelect" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()">
                                <option value="Relevance" selected="@(Model.SortBy == Mercato.Product.Application.Queries.ProductSortOption.Relevance)">Relevance</option>
                                <option value="PriceAsc" selected="@(Model.SortBy == Mercato.Product.Application.Queries.ProductSortOption.PriceAsc)">Price: Low to High</option>
                                <option value="PriceDesc" selected="@(Model.SortBy == Mercato.Product.Application.Queries.ProductSortOption.PriceDesc)">Price: High to Low</option>
                                <option value="Newest" selected="@(Model.SortBy == Mercato.Product.Application.Queries.ProductSortOption.Newest)">Newest</option>
                            </select>
                        </form>
                    }
                </div>

                @if (Model.TotalProducts == 0)
                {
                    <!-- Empty state -->
                    <div class="alert alert-info">
                        <h5 class="alert-heading">No products match your search</h5>
                        <p class="mb-0">
                            @if (Model.HasActiveFilters)
                            {
                                <span>Try adjusting your filters or </span>
                                <form method="post" asp-page-handler="ClearFilters" class="d-inline">
                                    <button type="submit" class="btn btn-link p-0">clear all filters</button>
                                </form>
                                <span> to see more results.</span>
                            }
                            else
                            {
                                <span>Try adjusting your search terms or browse our <a asp-page="/Product/Category">categories</a> to find what you're looking for.</span>
                            }
                        </p>
                        <hr>
                        <p class="mb-0">
                            <strong>Suggestions:</strong>
                        </p>
                        <ul class="mb-0">
                            <li>Check for typos or try different keywords</li>
                            <li>Use more general terms</li>
                            <li>Adjust or clear the filters</li>
                            <li>Browse our product categories</li>
                        </ul>
                    </div>
                }
                else
                {
                    <!-- Products grid -->
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                        @foreach (var product in Model.Products)
                        {
                            <div class="col">
                                <div class="card h-100">
                                    @if (!string.IsNullOrEmpty(product.Images) && product.Images != "[]")
                                    {
                                        <img src="@(GetFirstImageUrl(product.Images))" 
                                             class="card-img-top" 
                                             alt="@product.Title"
                                             style="height: 200px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" 
                                             style="height: 200px;">
                                            <span class="text-white">No Image</span>
                                        </div>
                                    }
                                    <div class="card-body">
                                        <h6 class="card-title text-truncate" title="@product.Title">@product.Title</h6>
                                        <p class="card-text">
                                            <strong class="text-primary">@product.Price.ToString("C")</strong>
                                        </p>
                                        @if (product.Stock > 0)
                                        {
                                            <span class="badge bg-success">In Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Out of Stock</span>
                                        }
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <a asp-page="Details" asp-route-id="@product.Id" asp-route-returnUrl="@Model.GetReturnUrl()" class="btn btn-outline-primary btn-sm w-100">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Pagination -->
                    @if (Model.Pagination.HasMultiplePages)
                    {
                        <nav aria-label="Search results pagination" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.Pagination.HasPreviousPage ? "" : "disabled")">
                                    <a class="page-link" asp-page="Search" asp-route-query="@Model.Query" 
                                       asp-route-minprice="@Model.MinPrice" asp-route-maxprice="@Model.MaxPrice"
                                       asp-route-condition="@Model.Condition" asp-route-storeid="@Model.StoreId"
                                       asp-route-category="@Model.Category" asp-route-sortby="@Model.SortBy"
                                       asp-route-page="@Model.Pagination.PreviousPage"
                                       aria-label="Previous page">
                                        Previous
                                    </a>
                                </li>
                                @foreach (var pageNumber in Model.Pagination.GetVisiblePageNumbers())
                                {
                                    @if (pageNumber == null)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">…</span>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="page-item @(pageNumber == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" asp-page="Search" asp-route-query="@Model.Query" 
                                               asp-route-minprice="@Model.MinPrice" asp-route-maxprice="@Model.MaxPrice"
                                               asp-route-condition="@Model.Condition" asp-route-storeid="@Model.StoreId"
                                               asp-route-category="@Model.Category" asp-route-sortby="@Model.SortBy"
                                               asp-route-page="@pageNumber"
                                               aria-label="Page @pageNumber">@pageNumber</a>
                                        </li>
                                    }
                                }
                                <li class="page-item @(Model.Pagination.HasNextPage ? "" : "disabled")">
                                    <a class="page-link" asp-page="Search" asp-route-query="@Model.Query" 
                                       asp-route-minprice="@Model.MinPrice" asp-route-maxprice="@Model.MaxPrice"
                                       asp-route-condition="@Model.Condition" asp-route-storeid="@Model.StoreId"
                                       asp-route-category="@Model.Category" asp-route-sortby="@Model.SortBy"
                                       asp-route-page="@Model.Pagination.NextPage"
                                       aria-label="Next page">
                                        Next
                                    </a>
                                </li>
                            </ul>
                            <p class="text-center text-muted small">
                                Showing @Model.Pagination.FirstItemIndex–@Model.Pagination.LastItemIndex of @Model.TotalProducts results
                            </p>
                        </nav>
                    }

                    <!-- End of results indicator -->
                    @if (Model.Pagination.IsLastPage && Model.TotalProducts > 0)
                    {
                        <div class="text-center text-muted mt-3">
                            <hr class="my-3" />
                            <p class="mb-0"><em>You've reached the end of the results.</em></p>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>

@functions {
    private const string PlaceholderImage = "/images/placeholder.png";
    private static readonly string[] AllowedImagePrefixes = ["/uploads/", "/images/"];

    /// <summary>
    /// Gets the first image URL from a JSON array of images.
    /// Only returns URLs that start with trusted prefixes to prevent XSS attacks.
    /// </summary>
    /// <param name="imagesJson">The JSON string containing image URLs.</param>
    /// <returns>The first valid image URL or a placeholder.</returns>
    private static string GetFirstImageUrl(string? imagesJson)
    {
        if (string.IsNullOrEmpty(imagesJson) || imagesJson == "[]")
        {
            return PlaceholderImage;
        }

        try
        {
            // Parse the JSON array with safe deserialization options
            var options = new System.Text.Json.JsonSerializerOptions
            {
                MaxDepth = 2 // Limit depth to prevent deep nesting attacks
            };
            var images = System.Text.Json.JsonSerializer.Deserialize<string[]>(imagesJson, options);
            
            if (images == null || images.Length == 0)
            {
                return PlaceholderImage;
            }

            // Validate URL starts with allowed prefix
            var imageUrl = images[0];
            if (IsValidImageUrl(imageUrl))
            {
                return imageUrl;
            }

            return PlaceholderImage;
        }
        catch
        {
            return PlaceholderImage;
        }
    }

    /// <summary>
    /// Validates that an image URL starts with an allowed prefix.
    /// </summary>
    /// <param name="url">The URL to validate.</param>
    /// <returns>True if the URL is valid and trusted; otherwise, false.</returns>
    private static bool IsValidImageUrl(string? url)
    {
        if (string.IsNullOrWhiteSpace(url))
        {
            return false;
        }

        // Only allow relative URLs starting with trusted prefixes
        foreach (var prefix in AllowedImagePrefixes)
        {
            if (url.StartsWith(prefix, StringComparison.OrdinalIgnoreCase))
            {
                return true;
            }
        }

        return false;
    }
}
