@page "{id:guid}"
@model Mercato.Web.Pages.Product.DetailsModel
@{
    ViewData["Title"] = Model.Product?.Title ?? "Product Details";
}

@if (Model.Product != null)
{
    <div data-product-id="@Model.Product.Id"></div>

    <div class="container">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-page="/Product/Index">Products</a></li>
                @if (Model.ProductCategory != null)
                {
                    <li class="breadcrumb-item">
                        <a asp-page="/Product/Category" asp-route-id="@Model.ProductCategory.Id">@Model.ProductCategory.Name</a>
                    </li>
                }
                <li class="breadcrumb-item active" aria-current="page">@Model.Product.Title</li>
            </ol>
        </nav>

        <!-- Back to results button -->
        @if (!string.IsNullOrEmpty(Model.ReturnUrl))
        {
            <div class="mb-3">
                <a href="@Model.ReturnUrl" class="btn btn-outline-secondary btn-sm">
                    <span aria-hidden="true">&larr;</span> Back to results
                </a>
            </div>
        }

        <div class="row">
            <!-- Product Image -->
            <div class="col-md-6 mb-4">
                @if (!string.IsNullOrEmpty(Model.Product.Images) && Model.Product.Images != "[]")
                {
                    <img src="@Model.GetFirstImageUrl()" 
                         class="img-fluid rounded" 
                         alt="@Model.Product.Title"
                         style="max-height: 500px; width: 100%; object-fit: cover;">
                }
                else
                {
                    <div class="bg-secondary d-flex align-items-center justify-content-center rounded" 
                         style="height: 400px;">
                        <span class="text-white fs-4">No Image Available</span>
                    </div>
                }
            </div>

            <!-- Product Details -->
            <div class="col-md-6">
                <h1 class="mb-3">@Model.Product.Title</h1>
                
                <p class="fs-3 text-primary mb-3">
                    <strong>@Model.Product.Price.ToString("C")</strong>
                </p>

                @if (Model.Product.Stock > 0)
                {
                    <span class="badge bg-success fs-6 mb-3">In Stock (@Model.Product.Stock available)</span>
                }
                else
                {
                    <span class="badge bg-secondary fs-6 mb-3">Out of Stock</span>
                }

                @if (!string.IsNullOrEmpty(Model.Product.Description))
                {
                    <div class="mt-4">
                        <h5>Description</h5>
                        <p>@Model.Product.Description</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Product.Category))
                {
                    <div class="mt-3">
                        <span class="text-muted">Category:</span>
                        @if (Model.ProductCategory != null)
                        {
                            <a asp-page="/Product/Category" asp-route-id="@Model.ProductCategory.Id">@Model.Product.Category</a>
                        }
                        else
                        {
                            <span>@Model.Product.Category</span>
                        }
                    </div>
                }

                @if (Model.Store != null)
                {
                    <div class="mt-2">
                        <span class="text-muted">Sold by:</span>
                        <a asp-page="/Store/Index" asp-route-slug="@Model.Store.Slug">@Model.Store.Name</a>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Product.Sku))
                {
                    <div class="mt-2">
                        <span class="text-muted">SKU:</span>
                        <span>@Model.Product.Sku</span>
                    </div>
                }

                <!-- Add to Cart Section -->
                @if (Model.Product.Stock > 0)
                {
                    <div class="mt-4">
                        @if (TempData["CartSuccess"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["CartSuccess"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        @if (TempData["CartError"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["CartError"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        <form method="post" asp-page-handler="AddToCart" class="d-flex align-items-center gap-2">
                            <input type="hidden" name="productId" value="@Model.Product.Id" />
                            <label for="quantity" class="form-label mb-0">Quantity:</label>
                            <input type="number" 
                                   id="quantity" 
                                   name="quantity" 
                                   value="1" 
                                   min="1" 
                                   max="@Model.Product.Stock"
                                   class="form-control" 
                                   style="width: 80px;">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-cart-plus me-1"></i>Add to Cart
                            </button>
                        </form>
                    </div>
                }

                <div class="mt-4">
                    @if (!string.IsNullOrEmpty(Model.ReturnUrl))
                    {
                        <a href="@Model.ReturnUrl" class="btn btn-outline-secondary">
                            Back to results
                        </a>
                    }
                    else
                    {
                        <a asp-page="/Product/Index" class="btn btn-outline-secondary">
                            Continue Shopping
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Recently Viewed Products Section -->
        <div id="recently-viewed-section" class="mt-5" style="display: none;">
            <h4 class="mb-3">Recently Viewed Products</h4>
            <div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-3 recently-viewed-list">
                <!-- Products will be loaded via JavaScript -->
            </div>
        </div>

        <!-- Product Reviews Section -->
        <div id="reviews-section" class="mt-5">
            <h4 class="mb-3">Customer Reviews</h4>
            
            @if (Model.ReviewsResult != null && Model.ReviewsResult.Succeeded)
            {
                @if (Model.ReviewsResult.TotalCount > 0)
                {
                    var isNewest = string.IsNullOrEmpty(Model.ReviewsSortBy) || Model.ReviewsSortBy == "newest";
                    var isHighest = Model.ReviewsSortBy == "highest";
                    var isLowest = Model.ReviewsSortBy == "lowest";

                    <!-- Average Rating Display -->
                    <div class="mb-4">
                        <div class="d-flex align-items-center gap-2">
                            <span class="fs-4 text-warning">@DetailsModel.GetStarRating((int)Math.Round(Model.ReviewsResult.AverageRating ?? 0))</span>
                            @if (Model.ReviewsResult.AverageRating.HasValue)
                            {
                                <span class="fs-5">@Model.ReviewsResult.AverageRating.Value.ToString("F1") out of 5</span>
                            }
                            <span class="text-muted">(@Model.ReviewsResult.TotalCount @(Model.ReviewsResult.TotalCount == 1 ? "review" : "reviews"))</span>
                        </div>
                    </div>

                    <!-- Sort Options -->
                    <div class="mb-3">
                        <form method="get" class="d-flex align-items-center gap-2">
                            <input type="hidden" name="id" value="@Model.Product.Id" />
                            @if (!string.IsNullOrEmpty(Model.ReturnUrl))
                            {
                                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                            }
                            <label for="reviewsSortBy" class="form-label mb-0">Sort by:</label>
                            <select name="reviewsSortBy" id="reviewsSortBy" class="form-select" style="width: auto;" onchange="this.form.submit()">
                                <option value="newest" selected="@isNewest">Newest</option>
                                <option value="highest" selected="@isHighest">Highest Rating</option>
                                <option value="lowest" selected="@isLowest">Lowest Rating</option>
                            </select>
                        </form>
                    </div>

                    <!-- Reviews List -->
                    <div class="reviews-list">
                        @foreach (var review in Model.ReviewsResult.Reviews)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <span class="text-warning">@DetailsModel.GetStarRating(review.Rating)</span>
                                        <small class="text-muted">@review.CreatedAt.ToString("MMM d, yyyy")</small>
                                    </div>
                                    <p class="card-text mb-0">@review.ReviewText</p>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Pagination -->
                    @if (Model.ReviewsResult.TotalPages > 1)
                    {
                        <nav aria-label="Reviews pagination" class="mt-4">
                            <ul class="pagination justify-content-center">
                                @if (Model.ReviewsResult.HasPreviousPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-page="/Product/Details" asp-route-id="@Model.Product.Id" 
                                           asp-route-reviewsPage="@(Model.ReviewsResult.Page - 1)" 
                                           asp-route-reviewsSortBy="@Model.ReviewsSortBy"
                                           asp-route-returnUrl="@Model.ReturnUrl">Previous</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">Previous</span>
                                    </li>
                                }

                                @for (var i = 1; i <= Model.ReviewsResult.TotalPages; i++)
                                {
                                    var pageNumber = i;
                                    <li class="page-item @(pageNumber == Model.ReviewsResult.Page ? "active" : "")">
                                        <a class="page-link" asp-page="/Product/Details" asp-route-id="@Model.Product.Id" 
                                           asp-route-reviewsPage="@pageNumber" 
                                           asp-route-reviewsSortBy="@Model.ReviewsSortBy"
                                           asp-route-returnUrl="@Model.ReturnUrl">@pageNumber</a>
                                    </li>
                                }

                                @if (Model.ReviewsResult.HasNextPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-page="/Product/Details" asp-route-id="@Model.Product.Id" 
                                           asp-route-reviewsPage="@(Model.ReviewsResult.Page + 1)" 
                                           asp-route-reviewsSortBy="@Model.ReviewsSortBy"
                                           asp-route-returnUrl="@Model.ReturnUrl">Next</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">Next</span>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                }
                else
                {
                    <!-- No Reviews Placeholder -->
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        This product has no reviews yet. Be the first to leave a review after purchasing!
                    </div>
                }
            }
            else
            {
                <!-- Error Loading Reviews -->
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Unable to load reviews at this time. Please try again later.
                </div>
            }
        </div>
    </div>
}
else
{
    <h1>Product Not Found</h1>
    <div class="alert alert-warning">
        <strong>Sorry!</strong> The product you are looking for could not be found or is no longer available.
    </div>
    <div class="mt-4">
        <a asp-page="/Product/Index" class="btn btn-outline-secondary">Back to Products</a>
    </div>
}
